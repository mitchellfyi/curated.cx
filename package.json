{
  "name": "app",
  "private": true,
  "devDependencies": {
    "@mitchellfyi/doyaken": "github:mitchellfyi/doyaken",
    "esbuild": "^0.25.10",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:css": "npx @tailwindcss/cli -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --config ./tailwind.config.js --minify",
    "lint": "eslint app/javascript/ --ext .js,.ts --format json --output-file tmp/quality-results/eslint-results.json",
    "lint:fix": "eslint app/javascript/ --ext .js,.ts --fix",
    "format": "prettier --write app/javascript/",
    "format:check": "prettier --check app/javascript/",
    "dk": "npx --yes dk",
    "dk:init": "npx --yes dk init",
    "dk:install": "npx --yes dk install"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.18",
    "@tailwindcss/cli": "^4.1.13",
    "tailwindcss": "^4.1.13"
  }
}
