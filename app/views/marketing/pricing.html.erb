<% content_for :title, t('marketing.pricing.title') %>

<div class="container mx-auto px-4 py-12">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        <%= t('marketing.pricing.title') %>
      </h1>
      <p class="text-xl text-gray-600">
        <%= t('marketing.pricing.subtitle') %>
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      <%# Starter Plan %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
        <h2 class="text-2xl font-semibold text-gray-900 mb-2">
          <%= t('marketing.pricing.plans.starter.name') %>
        </h2>
        <p class="text-gray-600 mb-6">
          <%= t('marketing.pricing.plans.starter.description') %>
        </p>
        <div class="mb-6">
          <span class="text-4xl font-bold text-gray-900">
            <%= t('marketing.pricing.plans.starter.price') %>
          </span>
        </div>
        <ul class="space-y-3 mb-8">
          <% t('marketing.pricing.plans.starter.features').each do |feature| %>
            <li class="flex items-center text-gray-600">
              <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <%= feature %>
            </li>
          <% end %>
        </ul>
        <%= link_to t('marketing.pricing.contact_us'),
                    "mailto:hello@curated.cx",
                    class: "block w-full text-center px-6 py-3 border border-blue-600 text-blue-600 font-medium rounded-md hover:bg-blue-50 transition-colors" %>
      </div>

      <%# Pro Plan %>
      <div class="bg-gradient-to-br from-blue-600 to-blue-700 rounded-lg shadow-lg p-8 text-white">
        <h2 class="text-2xl font-semibold mb-2">
          <%= t('marketing.pricing.plans.pro.name') %>
        </h2>
        <p class="text-blue-100 mb-6">
          <%= t('marketing.pricing.plans.pro.description') %>
        </p>
        <div class="mb-6">
          <span class="text-4xl font-bold">
            <%= t('marketing.pricing.plans.pro.price') %>
          </span>
        </div>
        <ul class="space-y-3 mb-8">
          <% t('marketing.pricing.plans.pro.features').each do |feature| %>
            <li class="flex items-center text-blue-100">
              <svg class="w-5 h-5 text-white mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <%= feature %>
            </li>
          <% end %>
        </ul>
        <%= link_to t('marketing.pricing.contact_us'),
                    "mailto:hello@curated.cx",
                    class: "block w-full text-center px-6 py-3 bg-white text-blue-600 font-medium rounded-md hover:bg-blue-50 transition-colors" %>
      </div>
    </div>

    <div class="mt-12 text-center">
      <p class="text-gray-600">
        <%= t('marketing.pricing.custom_note') %>
      </p>
    </div>
  </div>
</div>
