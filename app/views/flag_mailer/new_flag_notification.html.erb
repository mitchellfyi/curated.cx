<h1><%= t(".header", site_name: @site.name) %></h1>

<p><%= t(".intro") %></p>

<div style="margin: 20px 0; padding: 15px; background-color: #f5f5f5; border-left: 4px solid #e74c3c;">
  <p><strong><%= t(".reason_label") %>:</strong> <%= t("flags.reasons.#{@flag.reason}") %></p>
  <% if @flag.details.present? %>
    <p><strong><%= t(".details_label") %>:</strong> <%= @flag.details %></p>
  <% end %>
  <p><strong><%= t(".flagged_by_label") %>:</strong> <%= @flag.user.email %></p>
  <p><strong><%= t(".flagged_at_label") %>:</strong> <%= l(@flag.created_at, format: :long) %></p>
</div>

<h2><%= t(".flagged_content_header") %></h2>

<% if @flaggable.is_a?(ContentItem) %>
  <p><strong><%= t(".content_type_label") %>:</strong> <%= t(".content_type.content_item") %></p>
  <p><strong><%= t(".title_label") %>:</strong> <%= @flaggable.title %></p>
  <p><strong><%= t(".url_label") %>:</strong> <%= link_to @flaggable.url_canonical, @flaggable.url_canonical %></p>
<% elsif @flaggable.is_a?(Comment) %>
  <p><strong><%= t(".content_type_label") %>:</strong> <%= t(".content_type.comment") %></p>
  <p><strong><%= t(".comment_body_label") %>:</strong></p>
  <blockquote style="margin: 10px 0; padding: 10px; background-color: #f9f9f9; border-left: 3px solid #ccc;">
    <%= simple_format(@flaggable.body) %>
  </blockquote>
  <p><strong><%= t(".comment_author_label") %>:</strong> <%= @flaggable.user.email %></p>
<% end %>

<p style="margin-top: 20px;">
  <%= link_to t(".review_button"), admin_flags_url, style: "display: inline-block; padding: 10px 20px; background-color: #3498db; color: white; text-decoration: none; border-radius: 4px;" %>
</p>

<p style="color: #666; font-size: 12px; margin-top: 30px;">
  <%= t(".footer") %>
</p>
