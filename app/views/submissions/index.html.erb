<div class="py-8">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8 flex justify-between items-start">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= t("submissions.index.title") %></h1>
        <p class="mt-2 text-gray-600"><%= t("submissions.index.description") %></p>
      </div>
      <%= link_to new_submission_path, class: button_classes(variant: :primary) do %>
        <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <%= t("submissions.new_submission") %>
      <% end %>
    </div>

  <% if @submissions.any? %>
    <div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
      <ul class="divide-y divide-gray-200">
        <% @submissions.each do |submission| %>
          <li class="p-4 hover:bg-gray-50">
            <div class="flex items-start justify-between">
              <div class="flex-1 min-w-0">
                <h3 class="text-sm font-medium text-gray-900 truncate">
                  <%= link_to submission.title, submission_path(submission), class: "hover:text-blue-600" %>
                </h3>
                <p class="text-sm text-gray-500 truncate mt-1"><%= submission.url %></p>
                <div class="flex items-center gap-4 mt-2 text-xs text-gray-500">
                  <span><%= submission.category.name %></span>
                  <span>&bull;</span>
                  <span><%= t("submissions.types.#{submission.listing_type}") %></span>
                  <span>&bull;</span>
                  <span><%= time_ago_in_words(submission.created_at) %> <%= t("time.ago_suffix") %></span>
                </div>
              </div>
              <div class="ml-4 flex-shrink-0">
                <%= status_indicator(submission.status) %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="text-center py-12 bg-white rounded-lg shadow-sm border border-gray-200">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900"><%= t("submissions.empty.title") %></h3>
      <p class="mt-1 text-sm text-gray-500"><%= t("submissions.empty.description") %></p>
      <div class="mt-6">
        <%= link_to new_submission_path, class: button_classes(variant: :primary) do %>
          <%= t("submissions.new_submission") %>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
</div>
