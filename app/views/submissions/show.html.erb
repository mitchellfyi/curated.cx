<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="mb-6">
    <%= link_to submissions_path, class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700" do %>
      <svg class="mr-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      <%= t("submissions.back_to_list") %>
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-start justify-between mb-4">
      <h1 class="text-2xl font-bold text-gray-900"><%= @submission.title %></h1>
      <% case @submission.status %>
      <% when "pending" %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
          <%= t("submissions.status.pending") %>
        </span>
      <% when "approved" %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
          <%= t("submissions.status.approved") %>
        </span>
      <% when "rejected" %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
          <%= t("submissions.status.rejected") %>
        </span>
      <% end %>
    </div>

    <div class="space-y-4">
      <div>
        <h3 class="text-sm font-medium text-gray-500"><%= t("submissions.show.url") %></h3>
        <a href="<%= @submission.url %>" target="_blank" rel="noopener" class="text-blue-600 hover:underline break-all">
          <%= @submission.url %>
        </a>
      </div>

      <% if @submission.description.present? %>
        <div>
          <h3 class="text-sm font-medium text-gray-500"><%= t("submissions.show.description") %></h3>
          <p class="text-gray-700 mt-1"><%= @submission.description %></p>
        </div>
      <% end %>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <h3 class="text-sm font-medium text-gray-500"><%= t("submissions.show.category") %></h3>
          <p class="text-gray-700 mt-1"><%= @submission.category.name %></p>
        </div>
        <div>
          <h3 class="text-sm font-medium text-gray-500"><%= t("submissions.show.type") %></h3>
          <p class="text-gray-700 mt-1"><%= t("submissions.types.#{@submission.listing_type}") %></p>
        </div>
      </div>

      <div>
        <h3 class="text-sm font-medium text-gray-500"><%= t("submissions.show.submitted") %></h3>
        <p class="text-gray-700 mt-1"><%= l(@submission.created_at, format: :long) %></p>
      </div>

      <% if @submission.reviewed_at.present? %>
        <div class="pt-4 border-t border-gray-200">
          <h3 class="text-sm font-medium text-gray-500"><%= t("submissions.show.reviewed") %></h3>
          <p class="text-gray-700 mt-1"><%= l(@submission.reviewed_at, format: :long) %></p>
        </div>

        <% if @submission.reviewer_notes.present? %>
          <div>
            <h3 class="text-sm font-medium text-gray-500"><%= t("submissions.show.reviewer_notes") %></h3>
            <p class="text-gray-700 mt-1"><%= @submission.reviewer_notes %></p>
          </div>
        <% end %>

        <% if @submission.approved? && @submission.listing.present? %>
          <div>
            <%= link_to listing_path(@submission.listing), class: "inline-flex items-center text-blue-600 hover:underline" do %>
              <%= t("submissions.show.view_listing") %>
              <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
