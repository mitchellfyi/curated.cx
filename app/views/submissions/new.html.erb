<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900"><%= t("submissions.new.title") %></h1>
    <p class="mt-2 text-gray-600"><%= t("submissions.new.description") %></p>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <%= form_with model: @submission, local: true, class: "space-y-6" do |f| %>
      <% if @submission.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800"><%= t("submissions.form.errors", count: @submission.errors.count) %></h3>
              <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                <% @submission.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= f.label :url, t("submissions.form.url"), class: "block text-sm font-medium text-gray-700" %>
        <%= f.url_field :url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "https://example.com" %>
        <p class="mt-1 text-sm text-gray-500"><%= t("submissions.form.url_hint") %></p>
      </div>

      <div>
        <%= f.label :title, t("submissions.form.title_label"), class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: t("submissions.form.title_placeholder") %>
      </div>

      <div>
        <%= f.label :description, t("submissions.form.description_label"), class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: t("submissions.form.description_placeholder") %>
        <p class="mt-1 text-sm text-gray-500"><%= t("submissions.form.description_hint") %></p>
      </div>

      <div>
        <%= f.label :category_id, t("submissions.form.category"), class: "block text-sm font-medium text-gray-700" %>
        <%= f.collection_select :category_id, @categories, :id, :name, { prompt: t("submissions.form.category_prompt") }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.label :listing_type, t("submissions.form.type"), class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :listing_type, options_for_select([
          [t("submissions.form.types.tool"), :tool],
          [t("submissions.form.types.job"), :job],
          [t("submissions.form.types.service"), :service]
        ], :tool), {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div class="flex items-center justify-between pt-4 border-t border-gray-200">
        <%= link_to t("actions.cancel"), submissions_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
        <%= f.submit t("submissions.form.submit"), class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
