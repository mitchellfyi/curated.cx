<% content_for :title, t('digest_subscriptions.title') %>

<div class="container mx-auto px-4 py-8 max-w-2xl">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">
    <%= t('digest_subscriptions.title') %>
  </h1>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <% if @subscription&.pending_confirmation? %>
      <%# Pending confirmation %>
      <div class="flex items-center gap-3 mb-6">
        <div class="h-10 w-10 rounded-full bg-yellow-100 flex items-center justify-center">
          <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div>
          <p class="font-medium text-gray-900"><%= t('digest_subscriptions.pending_confirmation') %></p>
          <p class="text-sm text-gray-500"><%= t("digest_subscriptions.frequency.#{@subscription.frequency}") %></p>
        </div>
      </div>

      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
        <p class="text-sm text-yellow-800">
          <%= t('digest_subscriptions.pending_confirmation_info', email: current_user.email) %>
        </p>
      </div>

      <div class="text-center">
        <%= link_to resend_digest_confirmation_path, class: "text-blue-600 hover:text-blue-700 text-sm font-medium" do %>
          <%= t('digest_subscriptions.resend_confirmation') %>
        <% end %>
      </div>

    <% elsif @subscription&.active? %>
      <%# Active subscription %>
      <div class="flex items-center gap-3 mb-6">
        <div class="h-10 w-10 rounded-full bg-green-100 flex items-center justify-center">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <div>
          <p class="font-medium text-gray-900"><%= t('digest_subscriptions.subscribed') %></p>
          <p class="text-sm text-gray-500"><%= t("digest_subscriptions.frequency.#{@subscription.frequency}") %></p>
        </div>
      </div>

      <%= form_with model: @subscription, url: digest_subscription_path, method: :patch, class: "space-y-4" do |f| %>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            <%= t('digest_subscriptions.frequency_label') %>
          </label>
          <div class="space-y-2">
            <label class="flex items-center gap-3 cursor-pointer">
              <%= f.radio_button :frequency, :weekly, class: "h-4 w-4 text-blue-600 focus:ring-blue-500" %>
              <span class="text-gray-700"><%= t('digest_subscriptions.frequency.weekly') %></span>
            </label>
            <label class="flex items-center gap-3 cursor-pointer">
              <%= f.radio_button :frequency, :daily, class: "h-4 w-4 text-blue-600 focus:ring-blue-500" %>
              <span class="text-gray-700"><%= t('digest_subscriptions.frequency.daily') %></span>
            </label>
          </div>
        </div>

        <div class="flex items-center justify-between pt-4 border-t border-gray-200">
          <%= f.submit t('digest_subscriptions.update'), class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors cursor-pointer" %>

          <%= link_to digest_subscription_path, method: :delete, data: { turbo_method: :delete, turbo_confirm: t('digest_subscriptions.confirm_unsubscribe') }, class: "text-red-600 hover:text-red-700 text-sm" do %>
            <%= t('digest_subscriptions.unsubscribe_button') %>
          <% end %>
        </div>
      <% end %>

    <% elsif @subscription&.persisted? %>
      <%# Inactive subscription %>
      <div class="text-center py-4">
        <p class="text-gray-600 mb-4"><%= t('digest_subscriptions.currently_unsubscribed') %></p>
        <%= form_with model: @subscription, url: digest_subscription_path, method: :patch do |f| %>
          <%= f.hidden_field :active, value: true %>
          <%= f.submit t('digest_subscriptions.resubscribe'), class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors cursor-pointer" %>
        <% end %>
      </div>

    <% else %>
      <%# No subscription %>
      <div class="text-center py-4">
        <p class="text-gray-600 mb-6"><%= t('digest_subscriptions.description') %></p>

        <%= form_with model: DigestSubscription.new, url: digest_subscription_path, method: :post, class: "space-y-4" do |f| %>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              <%= t('digest_subscriptions.frequency_label') %>
            </label>
            <div class="flex justify-center gap-4">
              <label class="flex items-center gap-2 cursor-pointer">
                <%= f.radio_button :frequency, :weekly, checked: true, class: "h-4 w-4 text-blue-600 focus:ring-blue-500" %>
                <span class="text-gray-700"><%= t('digest_subscriptions.frequency.weekly') %></span>
              </label>
              <label class="flex items-center gap-2 cursor-pointer">
                <%= f.radio_button :frequency, :daily, class: "h-4 w-4 text-blue-600 focus:ring-blue-500" %>
                <span class="text-gray-700"><%= t('digest_subscriptions.frequency.daily') %></span>
              </label>
            </div>
          </div>

          <%= f.submit t('digest_subscriptions.subscribe'), class: "w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors cursor-pointer" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
