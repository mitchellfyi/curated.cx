<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900">You're Invited</h2>
      <p class="mt-2 text-sm text-gray-600">
        You've been invited to join <strong><%= @invitation.tenant.title %></strong> as a <strong><%= @invitation.role.titleize %></strong>.
      </p>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <dl class="space-y-3">
        <div>
          <dt class="text-sm font-medium text-gray-500">Invited by</dt>
          <dd class="text-sm text-gray-900"><%= @invitation.invited_by.display_name.presence || @invitation.invited_by.email %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Role</dt>
          <dd><span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800"><%= @invitation.role.titleize %></span></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Expires</dt>
          <dd class="text-sm text-gray-900"><%= @invitation.expires_at.strftime("%B %d, %Y") %></dd>
        </div>
      </dl>

      <%= button_to t("invitations.accept_invitation"), accept_invitation_path(token: @invitation.token), method: :patch, class: "mt-6 w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>
</div>
