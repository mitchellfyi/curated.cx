<%# Comments list for a note %>
<div class="max-w-3xl mx-auto px-4 py-8">
  <%# Breadcrumb %>
  <nav class="mb-6">
    <%= link_to note_path(@note), class: "text-sm text-gray-500 hover:text-blue-600 transition-colors flex items-center gap-1" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      <%= t('notes.back_to_note') %>
    <% end %>
  </nav>

  <%# Note summary %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
    <p class="text-gray-900"><%= truncate(@note.body, length: 200) %></p>
    <p class="text-sm text-gray-500 mt-2">
      <%= t('time.ago', time: time_ago_in_words(@note.published_at)) %>
      Â· <%= @note.user.profile_name %>
    </p>
  </div>

  <%# Comments section %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900" id="comments_count">
        <%= t('comments.comment_count', count: @comments.size) %>
      </h2>
    </div>

    <%# Comment form %>
    <% if user_signed_in? %>
      <% if policy(Comment).create? %>
        <div class="px-6 py-4 border-b border-gray-200">
          <%= render 'comments/form',
                     comment: Comment.new,
                     commentable: @note %>
        </div>
      <% end %>
    <% else %>
      <div class="px-6 py-4 border-b border-gray-200 text-center">
        <%= link_to t('comments.sign_in_to_comment'),
                    new_user_session_path,
                    class: "text-blue-600 hover:text-blue-800" %>
      </div>
    <% end %>

    <%# Comments list %>
    <%= turbo_frame_tag "comments_list" do %>
      <div class="divide-y divide-gray-100">
        <% if @comments.any? %>
          <% @comments.each do |comment| %>
            <div class="px-6">
              <%= render 'comments/comment', comment: comment, depth: 0 %>
            </div>
          <% end %>
        <% else %>
          <div class="px-6 py-12 text-center text-gray-500">
            <svg class="mx-auto w-12 h-12 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            <p><%= t('comments.empty') %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
