<% content_for :structured_data do %>
  <%= json_ld_tag(listing_schema(@listing)) %>
  <%= json_ld_tag(breadcrumb_schema([
    { name: t('nav.categories'), url: categories_url },
    { name: @listing.category.name, url: category_url(@listing.category) },
    { name: @listing.title, url: listing_url(@listing) }
  ])) %>
<% end %>

<div class="py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="mb-8" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-4">
        <li>
          <%= link_to categories_path, class: "text-gray-400 hover:text-gray-500" do %>
            <%= t('nav.categories') %>
          <% end %>
        </li>
        <li class="flex">
          <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
          </svg>
          <%= link_to @listing.category.name, category_path(@listing.category), class: "ml-4 text-gray-400 hover:text-gray-500" %>
        </li>
        <li class="flex">
          <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
          </svg>
          <span class="ml-4 text-sm font-medium text-gray-500 truncate max-w-xs"><%= @listing.title %></span>
        </li>
      </ol>
    </nav>

    <article class="bg-white shadow rounded-lg overflow-hidden">
      <!-- Header -->
      <div class="px-6 py-8 border-b border-gray-200">
        <div class="flex items-center flex-wrap gap-2 mb-4">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            <%= @listing.category.name %>
          </span>
          <% if @listing.featured? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
              <%= t('monetisation.badges.featured') %>
            </span>
          <% end %>
          <% if @listing.job? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
              Job
            </span>
          <% end %>
        </div>

        <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= @listing.title %></h1>

        <% if @listing.description.present? %>
          <p class="text-lg text-gray-600 mb-6"><%= @listing.description %></p>
        <% end %>

        <!-- Job Details -->
        <% if @listing.job? && (@listing.company.present? || @listing.location.present? || @listing.salary_range.present?) %>
          <div class="mb-6 p-4 bg-gray-50 rounded-lg">
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
              <% if @listing.company.present? %>
                <div>
                  <dt class="text-xs font-medium text-gray-500 uppercase"><%= t('admin.listings.form.company') %></dt>
                  <dd class="mt-1 text-sm font-medium text-gray-900"><%= @listing.company %></dd>
                </div>
              <% end %>
              <% if @listing.location.present? %>
                <div>
                  <dt class="text-xs font-medium text-gray-500 uppercase"><%= t('admin.listings.form.location') %></dt>
                  <dd class="mt-1 text-sm font-medium text-gray-900"><%= @listing.location %></dd>
                </div>
              <% end %>
              <% if @listing.salary_range.present? %>
                <div>
                  <dt class="text-xs font-medium text-gray-500 uppercase"><%= t('monetisation.job.salary') %></dt>
                  <dd class="mt-1 text-sm font-medium text-green-600"><%= @listing.salary_range %></dd>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <div class="flex items-center justify-between flex-wrap gap-4">
          <div class="flex items-center text-sm text-gray-500 flex-wrap gap-x-4 gap-y-1">
            <span class="font-medium"><%= @listing.domain %></span>
            <% if @listing.published_at %>
              <span>•</span>
              <time datetime="<%= @listing.published_at.iso8601 %>">
                <%= @listing.published_at.strftime("%B %d, %Y") %>
              </time>
            <% end %>
            <% if @listing.site_name.present? && @listing.site_name != @listing.domain %>
              <span>•</span>
              <span><%= @listing.site_name %></span>
            <% end %>
          </div>

          <div class="flex items-center gap-3">
            <% if @listing.job? && @listing.apply_url.present? %>
              <%= link_to @listing.apply_url,
                  target: "_blank",
                  rel: "noopener noreferrer",
                  class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" do %>
                <svg class="mr-2 -ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <%= t('monetisation.job.apply') %>
              <% end %>
            <% end %>
            <%# Use affiliate redirect URL if affiliate tracking is enabled, otherwise use canonical URL %>
            <% visit_url = @listing.has_affiliate? ? affiliate_redirect_path(@listing) : @listing.url_canonical %>
            <%= link_to visit_url,
                target: "_blank",
                rel: "noopener noreferrer",
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
              <svg class="mr-2 -ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              Visit
            <% end %>
          </div>
        </div>
      </div>

      <!-- Image -->
      <% if @listing.image_url.present? %>
        <div class="px-6 py-4">
          <img src="<%= @listing.image_url %>" alt="<%= @listing.title %>" class="w-full h-auto rounded-lg">
        </div>
      <% end %>

      <!-- Content -->
      <% if @listing.body_html.present? %>
        <div class="px-6 py-6">
          <div class="prose max-w-none">
            <%= sanitize(@listing.body_html, tags: %w[p br strong em ul ol li h1 h2 h3 h4 h5 h6 blockquote a], attributes: %w[href]) %>
          </div>
        </div>
      <% elsif @listing.body_text.present? %>
        <div class="px-6 py-6">
          <div class="prose max-w-none">
            <%= simple_format(@listing.body_text) %>
          </div>
        </div>
      <% end %>

      <!-- AI Summaries (if present) -->
      <% if @listing.ai_summaries.present? && @listing.ai_summaries.any? %>
        <div class="px-6 py-6 border-t border-gray-200 bg-gray-50">
          <h3 class="text-lg font-medium text-gray-900 mb-4">AI Summary</h3>
          <% if @listing.ai_summaries['short'].present? %>
            <div class="mb-3">
              <h4 class="text-sm font-medium text-gray-700 mb-1">Quick Summary</h4>
              <p class="text-sm text-gray-600"><%= @listing.ai_summaries['short'] %></p>
            </div>
          <% end %>
          <% if @listing.ai_summaries['medium'].present? %>
            <div class="mb-3">
              <h4 class="text-sm font-medium text-gray-700 mb-1">Overview</h4>
              <p class="text-sm text-gray-600"><%= @listing.ai_summaries['medium'] %></p>
            </div>
          <% end %>
          <% if @listing.ai_summaries['long'].present? %>
            <div>
              <h4 class="text-sm font-medium text-gray-700 mb-1">Detailed Summary</h4>
              <div class="text-sm text-gray-600"><%= simple_format(@listing.ai_summaries['long']) %></div>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Tags (if present) -->
      <% if @listing.ai_tags.present? && @listing.ai_tags['keywords'].present? %>
        <div class="px-6 py-4 border-t border-gray-200">
          <h3 class="text-sm font-medium text-gray-700 mb-2">Tags</h3>
          <div class="flex flex-wrap gap-2">
            <% @listing.ai_tags['keywords'].each do |tag| %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                <%= tag %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </article>

    <!-- Back Navigation -->
    <div class="mt-8">
      <%= link_to category_path(@listing.category), class: "inline-flex items-center text-blue-600 hover:text-blue-500" do %>
        <svg class="mr-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        <%= t('actions.back') %> to <%= @listing.category.name %>
      <% end %>
    </div>
  </div>
</div>
