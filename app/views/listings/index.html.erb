<div class="py-8">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
        <% if @category %>
          <%= @category.name %>
        <% else %>
          <%= t('listings.index.title') %>
        <% end %>
      </h1>
      <p class="mt-2 text-gray-600 dark:text-gray-400">
        <%= t('listings.index.description', category: @category&.name || t('nav.all_categories'), tenant: Current.tenant&.title) %>
      </p>
    </div>

    <!-- Search & Filters -->
    <div class="mb-8 bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-4">
      <%= form_with url: listings_path, method: :get, data: { turbo_frame: "listings_results", turbo_action: "advance" }, class: "space-y-4" do |f| %>
        <!-- Search Input -->
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <%= text_field_tag :q, @current_filters[:q],
              placeholder: t('listings.search.placeholder'),
              autocomplete: "off",
              class: "block w-full pl-10 pr-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
        </div>

        <!-- Filter Row -->
        <div class="flex flex-wrap gap-3">
          <!-- Type Filter -->
          <div class="flex-1 min-w-[140px]">
            <label class="sr-only"><%= t('listings.filters.type') %></label>
            <%= select_tag :type,
                options_for_select([
                  [t('listings.filters.all_types'), ""],
                  [t('listings.types.tool') + " (#{@type_counts['tool'] || 0})", "tool"],
                  [t('listings.types.job') + " (#{@type_counts['job'] || 0})", "job"],
                  [t('listings.types.service') + " (#{@type_counts['service'] || 0})", "service"]
                ], @current_filters[:type]),
                class: "block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <!-- Category Filter (if not already filtered by category) -->
          <% unless @category %>
            <div class="flex-1 min-w-[140px]">
              <label class="sr-only"><%= t('listings.filters.category') %></label>
              <%= select_tag :category_id,
                  options_for_select(
                    [[t('listings.filters.all_categories'), ""]] + @categories.map { |c| [c.name, c.id] },
                    @current_filters[:category_id]
                  ),
                  class: "block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>
          <% end %>

          <!-- Freshness Filter -->
          <div class="flex-1 min-w-[140px]">
            <label class="sr-only"><%= t('listings.filters.freshness') %></label>
            <%= select_tag :freshness,
                options_for_select([
                  [t('listings.filters.any_time'), ""],
                  [t('listings.filters.today'), "today"],
                  [t('listings.filters.this_week'), "week"],
                  [t('listings.filters.this_month'), "month"]
                ], @current_filters[:freshness]),
                class: "block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>

          <!-- Submit Button -->
          <div>
            <%= submit_tag t('listings.filters.apply'),
                class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors cursor-pointer" %>
          </div>

          <!-- Clear Filters -->
          <% if @current_filters.values.any?(&:present?) %>
            <div>
              <%= link_to t('listings.filters.clear'), listings_path,
                  class: "px-4 py-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white font-medium",
                  data: { turbo_frame: "listings_results" } %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <%= turbo_frame_tag "listings_results" do %>
      <!-- Active Filters Summary -->
      <% if @current_filters.values.any?(&:present?) %>
        <div class="mb-4 text-sm text-gray-600 dark:text-gray-400">
          <%= t('listings.filters.showing') %>
          <span class="font-semibold"><%= @listings.size %></span>
          <%= t('listings.filters.results') %>
          <% if @current_filters[:q].present? %>
            for "<span class="font-semibold"><%= @current_filters[:q] %></span>"
          <% end %>
        </div>
      <% end %>

      <!-- Featured Section -->
      <% if @featured_listings.present? && @featured_listings.any? && @current_filters.values.none?(&:present?) %>
        <div class="mb-8">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
            <%= t('monetisation.featured_section.title') %>
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <% @featured_listings.each do |listing| %>
              <div class="bg-gradient-to-br from-purple-50 to-white dark:from-purple-900/20 dark:to-gray-800 border border-purple-200 dark:border-purple-800 rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-center gap-2 mb-2">
                  <%= badge(t('monetisation.badges.featured'), :purple) %>
                  <%= type_badge(listing.listing_type) unless listing.tool? %>
                </div>
                <h3 class="font-medium text-gray-900 dark:text-white line-clamp-2">
                  <%= link_to listing.title, listing_path(listing), class: "hover:text-purple-600 dark:hover:text-purple-400" %>
                </h3>
                <% if listing.description.present? %>
                  <p class="mt-1 text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
                    <%= listing.description %>
                  </p>
                <% end %>
                <div class="mt-2 text-xs text-gray-500 dark:text-gray-500">
                  <%= listing.domain %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Listings -->
      <% if @listings.any? %>
        <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg overflow-hidden border border-gray-200 dark:border-gray-700">
          <ul class="divide-y divide-gray-200 dark:divide-gray-700">
            <% @listings.each do |listing| %>
              <li>
                <div class="px-4 py-6 sm:px-6 hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
                  <div class="flex items-start justify-between">
                    <div class="flex-1 min-w-0">
                      <div class="flex items-center flex-wrap gap-2">
                        <%= badge(listing.category_name, :blue) %>
                        <% if listing.featured? %>
                          <%= badge(t('monetisation.badges.featured'), :purple) %>
                        <% end %>
                        <%= type_badge(listing.listing_type) %>
                        <% if listing.job? && listing.company.present? %>
                          <span class="text-sm text-gray-600 dark:text-gray-400">
                            at <%= listing.company %>
                          </span>
                        <% end %>
                      </div>
                      <h3 class="mt-2 text-xl font-medium text-gray-900 dark:text-white">
                        <%= link_to listing.title, listing_path(listing), class: "hover:text-blue-600 dark:hover:text-blue-400" %>
                      </h3>
                      <% if listing.description.present? %>
                        <p class="mt-2 text-gray-600 dark:text-gray-400 line-clamp-3">
                          <%= listing.description %>
                        </p>
                      <% end %>
                      <div class="mt-4 flex items-center flex-wrap gap-x-4 gap-y-1 text-sm text-gray-500 dark:text-gray-500">
                        <span class="font-medium"><%= listing.domain %></span>
                        <% if listing.published_at %>
                          <span>•</span>
                          <time datetime="<%= listing.published_at.iso8601 %>">
                            <%= t('time.ago', time: time_ago_in_words(listing.published_at)) %>
                          </time>
                        <% end %>
                        <% if listing.job? && listing.location.present? %>
                          <span>•</span>
                          <span><%= listing.location %></span>
                        <% end %>
                        <% if listing.job? && listing.salary_range.present? %>
                          <span>•</span>
                          <span class="text-green-600 dark:text-green-400"><%= listing.salary_range %></span>
                        <% end %>
                      </div>
                    </div>
                    <div class="flex-shrink-0 ml-6 hidden sm:block">
                      <%= link_to listing_path(listing),
                          class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700" do %>
                        <%= t('listings.index.view_details') %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      <% else %>
        <div class="text-center py-12 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h3 class="mt-4 text-sm font-medium text-gray-900 dark:text-white">
            <% if @current_filters.values.any?(&:present?) %>
              <%= t('listings.index.no_results') %>
            <% else %>
              <%= t('listings.index.no_listings_yet') %>
            <% end %>
          </h3>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
            <% if @current_filters.values.any?(&:present?) %>
              <%= t('listings.index.try_different_filters') %>
            <% else %>
              <%= t('listings.index.empty.no_category_content') %>
            <% end %>
          </p>
          <% if @current_filters.values.any?(&:present?) %>
            <div class="mt-4">
              <%= link_to t('listings.filters.clear'), listings_path,
                  class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700",
                  data: { turbo_frame: "listings_results" } %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
