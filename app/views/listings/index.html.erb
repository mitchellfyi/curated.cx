<div class="py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="mb-8" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-4">
        <li>
          <%= link_to categories_path, class: "text-gray-400 hover:text-gray-500" do %>
            <%= t('nav.categories') %>
          <% end %>
        </li>
        <% if @category %>
          <li class="flex">
            <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
            </svg>
            <%= link_to @category.name, category_path(@category), class: "ml-4 text-gray-400 hover:text-gray-500" %>
          </li>
        <% end %>
        <li class="flex">
          <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
          </svg>
          <span class="ml-4 text-sm font-medium text-gray-500">
            <% if @category %><%= t('listings.index.breadcrumb_listings') %><% else %><%= t('listings.index.all_listings') %><% end %>
          </span>
        </li>
      </ol>
    </nav>

    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">
        <% if @category %>
          <%= t('listings.index.category_listings', category: @category.name) %>
        <% else %>
          <%= t('listings.index.title') %>
        <% end %>
      </h1>
      <p class="mt-2 text-gray-600">
        <%= t('listings.index.item_count', count: @listings.length) %>
        <% if @category %>
          <%= t('listings.index.in_category', category: @category.name) %>
        <% else %>
          <%= t('listings.index.across_categories') %>
        <% end %>
      </p>
    </div>

    <!-- Featured Section -->
    <% if @featured_listings.present? && @featured_listings.any? %>
      <div class="mb-8">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">
          <%= t('monetisation.featured_section.title') %>
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <% @featured_listings.each do |listing| %>
            <div class="bg-gradient-to-br from-purple-50 to-white border border-purple-200 rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow">
              <div class="flex items-center mb-2">
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">
                  <%= t('monetisation.badges.featured') %>
                </span>
                <% if listing.job? %>
                  <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                    Job
                  </span>
                <% end %>
              </div>
              <h3 class="font-medium text-gray-900 line-clamp-2">
                <%= link_to listing.title, listing_path(listing), class: "hover:text-purple-600" %>
              </h3>
              <% if listing.description.present? %>
                <p class="mt-1 text-sm text-gray-600 line-clamp-2">
                  <%= listing.description %>
                </p>
              <% end %>
              <div class="mt-2 text-xs text-gray-500">
                <%= listing.domain %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @listings.any? %>
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <ul class="divide-y divide-gray-200">
          <% @listings.each do |listing| %>
            <li>
              <div class="px-4 py-6 sm:px-6 hover:bg-gray-50">
                <div class="flex items-start justify-between">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center flex-wrap gap-2">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        <%= listing.category.name %>
                      </span>
                      <% if listing.featured? %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                          <%= t('monetisation.badges.featured') %>
                        </span>
                      <% end %>
                      <% if listing.job? %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                          Job
                        </span>
                        <% if listing.company.present? %>
                          <span class="text-sm text-gray-600">
                            at <%= listing.company %>
                          </span>
                        <% end %>
                      <% end %>
                    </div>
                    <h3 class="mt-2 text-xl font-medium text-gray-900">
                      <%= link_to listing.title, listing_path(listing), class: "hover:text-blue-600" %>
                    </h3>
                    <% if listing.description.present? %>
                      <p class="mt-2 text-gray-600 line-clamp-3">
                        <%= listing.description %>
                      </p>
                    <% end %>
                    <div class="mt-4 flex items-center flex-wrap gap-x-4 gap-y-1 text-sm text-gray-500">
                      <span class="font-medium"><%= listing.domain %></span>
                      <% if listing.published_at %>
                        <span class="mx-2">•</span>
                        <time datetime="<%= listing.published_at.iso8601 %>">
                          <%= t('time.ago', time: time_ago_in_words(listing.published_at)) %>
                        </time>
                      <% end %>
                      <% if listing.site_name.present? && listing.site_name != listing.domain %>
                        <span class="mx-2">•</span>
                        <span><%= listing.site_name %></span>
                      <% end %>
                      <% if listing.job? && listing.location.present? %>
                        <span class="mx-2">•</span>
                        <span><%= listing.location %></span>
                      <% end %>
                      <% if listing.job? && listing.salary_range.present? %>
                        <span class="mx-2">•</span>
                        <span class="text-green-600"><%= listing.salary_range %></span>
                      <% end %>
                    </div>
                  </div>
                  <div class="flex-shrink-0 ml-6">
                    <%= link_to listing_path(listing),
                        class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
                      <%= t('listings.index.view_details') %>
                    <% end %>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h3 class="mt-4 text-sm font-medium text-gray-900"><%= t('listings.index.no_listings_yet') %></h3>
        <p class="mt-1 text-sm text-gray-500">
          <% if @category %>
            <%= t('listings.index.empty.no_content_in_category') %>
          <% else %>
            <%= t('listings.index.empty.no_category_content') %>
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>
