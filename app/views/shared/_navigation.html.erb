<nav class="bg-white shadow-sm border-b border-gray-200" data-controller="mobile-menu" role="navigation" aria-label="<%= t('nav.main_navigation') %>">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo/Brand -->
      <div class="flex-shrink-0">
        <%= link_to root_path, class: "flex items-center" do %>
          <% if Current.tenant&.logo_url.present? %>
            <%= image_tag Current.tenant.logo_url, alt: Current.tenant.title, class: "h-8 w-auto" %>
          <% end %>
          <span class="ml-2 text-xl font-bold text-gray-900">
            <%= Current.tenant&.title || t("app.name") %>
          </span>
        <% end %>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <!-- Search Box -->
        <div class="relative" data-controller="search-box">
          <%= form_with url: search_path, method: :get, class: "flex items-center" do |f| %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
              </div>
              <%= f.text_field :q,
                  class: "block w-48 pl-9 pr-3 py-1.5 border border-gray-200 rounded-lg text-sm text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:w-64 transition-all",
                  placeholder: t("nav.search_placeholder"),
                  autocomplete: "off" %>
            </div>
          <% end %>
        </div>

        <!-- Main Navigation Links -->
        <div class="flex items-center space-x-4">
          <%= link_to t("nav.home"), root_path, class: "text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium" %>

          <!-- Categories Dropdown -->
          <% if Current.tenant %>
            <div class="relative" data-controller="dropdown">
              <button
                type="button"
                class="flex items-center text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium"
                data-action="click->dropdown#toggle"
                aria-expanded="false"
                aria-haspopup="true"
              >
                <%= t("nav.categories") %>
                <svg class="ml-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
              </button>

              <!-- Categories Dropdown Menu -->
              <div
                class="hidden origin-top-left absolute left-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-50"
                data-dropdown-target="menu"
                role="menu"
                aria-orientation="vertical"
              >
                <div class="py-1" role="none">
                  <%= link_to categories_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: "menuitem" do %>
                    <%= t("nav.all_categories") %>
                  <% end %>

                  <% Category.where(tenant: Current.tenant).order(:name).limit(10).each do |category| %>
                    <%= link_to category_path(category), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: "menuitem" do %>
                      <span><%= category.name %></span>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- User Navigation -->
        <div class="flex items-center space-x-4">
          <% if user_signed_in? %>
            <!-- User Menu -->
            <div class="relative" data-controller="dropdown">
              <button
                type="button"
                class="flex items-center text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                data-action="click->dropdown#toggle"
                aria-expanded="false"
                aria-haspopup="true"
              >
                <span class="sr-only">Open user menu</span>
                <%= current_user.decorate.avatar_image(size: 40) %>
                <span class="ml-2 text-gray-700 text-sm font-medium">
                  <%= current_user.email %>
                </span>
                <svg class="ml-1 h-4 w-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
              </button>

              <!-- Dropdown Menu -->
              <div
                class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-50"
                data-dropdown-target="menu"
                role="menu"
                aria-orientation="vertical"
                aria-labelledby="user-menu-button"
              >
                <div class="py-1" role="none">
                  <!-- User Info -->
                  <div class="px-4 py-2 border-b border-gray-100">
                    <p class="text-sm text-gray-900 font-medium"><%= current_user.email %></p>
                    <% if current_user.admin? %>
                      <p class="text-xs text-blue-600 font-medium">Admin</p>
                    <% end %>
                    <% if Current.tenant %>
                      <% current_user.decorate.role_badges_for_tenant(Current.tenant).each do |badge| %>
                        <%= badge %>
                      <% end %>
                    <% end %>
                  </div>

                  <!-- Menu Items -->
                  <%= link_to t("nav.dashboard"), "#", class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: "menuitem" %>
                  <%= link_to t("nav.my_saves"), bookmarks_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: "menuitem" %>

                  <!-- Admin Link -->
                  <% if current_user.admin? || (Current.tenant && current_user.has_role?(:owner, Current.tenant)) %>
                    <%= link_to admin_root_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: "menuitem" do %>
                      <div class="flex items-center">
                        <svg class="mr-2 h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <%= t("nav.admin") %>
                      </div>
                    <% end %>
                  <% end %>

                  <%= link_to t("nav.settings"), edit_user_registration_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: "menuitem" %>

                  <div class="border-t border-gray-100"></div>

                  <%= link_to t("nav.logout"), destroy_user_session_path,
                      method: :delete,
                      class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                      role: "menuitem",
                      data: {
                        confirm: t('auth.sign_in.sign_out_confirm'),
                        turbo_method: :delete
                      } %>
                </div>
              </div>
            </div>
          <% else %>
            <!-- Guest Navigation -->
            <div class="flex items-center space-x-4">
              <%= link_to t("nav.login"), new_user_session_path, class: "text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium" %>
              <%= link_to t("nav.sign_up"), new_user_registration_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          class="bg-white inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500"
          data-action="click->mobile-menu#toggle"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation Menu -->
    <div class="hidden md:hidden" data-mobile-menu-target="menu">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 border-t border-gray-200">
        <%# Mobile Search %>
        <%= form_with url: search_path, method: :get, class: "px-3 py-2" do |f| %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <%= f.text_field :q,
                class: "block w-full pl-9 pr-3 py-2 border border-gray-200 rounded-lg text-sm text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500",
                placeholder: t("nav.search_placeholder"),
                autocomplete: "off" %>
          </div>
        <% end %>

        <%= link_to t("nav.home"), root_path, class: "text-gray-700 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium" %>

        <!-- Mobile Categories -->
        <% if Current.tenant %>
          <%= link_to categories_path, class: "text-gray-700 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium" do %>
            <%= t("nav.categories") %>
          <% end %>

          <div class="pl-4 space-y-1">
            <% Category.where(tenant: Current.tenant).order(:name).limit(8).each do |category| %>
              <%= link_to category.name, category_path(category), class: "text-gray-600 hover:text-gray-800 block px-3 py-1 text-sm" %>
            <% end %>
          </div>
        <% end %>

        <% if user_signed_in? %>
          <div class="border-t border-gray-200 pt-4 pb-3">
            <div class="flex items-center px-3">
              <%= current_user.decorate.avatar_image(size: 48) %>
              <div class="ml-3">
                <div class="text-base font-medium text-gray-800"><%= current_user.email %></div>
                <% if current_user.admin? %>
                  <div class="text-sm text-blue-600 font-medium">Admin</div>
                <% end %>
              </div>
            </div>
            <div class="mt-3 px-2 space-y-1">
              <%= link_to t("nav.dashboard"), "#", class: "text-gray-700 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium" %>
              <%= link_to t("nav.my_saves"), bookmarks_path, class: "text-gray-700 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium" %>

              <!-- Mobile Admin Link -->
              <% if current_user.admin? || (Current.tenant && current_user.has_role?(:owner, Current.tenant)) %>
                <%= link_to t("nav.admin"), admin_root_path, class: "text-gray-700 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium" %>
              <% end %>

              <%= link_to t("nav.settings"), edit_user_registration_path, class: "text-gray-700 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium" %>
              <%= link_to t("nav.logout"), destroy_user_session_path,
                  method: :delete,
                  class: "text-gray-700 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium",
                  data: {
                    confirm: t('auth.sign_in.sign_out_confirm'),
                    turbo_method: :delete
                  } %>
            </div>
          </div>
        <% else %>
          <div class="border-t border-gray-200 pt-4 pb-3">
            <div class="px-2 space-y-1">
              <%= link_to t("nav.login"), new_user_session_path, class: "text-gray-700 hover:text-gray-900 block px-3 py-2 rounded-md text-base font-medium" %>
              <%= link_to t("nav.sign_up"), new_user_registration_path, class: "bg-blue-600 hover:bg-blue-700 text-white block px-3 py-2 rounded-md text-base font-medium" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</nav>
