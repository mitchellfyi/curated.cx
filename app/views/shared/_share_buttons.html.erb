<%# Social share buttons partial %>
<%# locals: (url:, title:, description: nil, content_type: "page", content_id: nil) %>
<% encoded_url = CGI.escape(url) %>
<% encoded_title = CGI.escape(title) %>
<% encoded_description = CGI.escape(description || title) %>

<div class="flex items-center gap-2" data-controller="share analytics">
  <%# Twitter/X %>
  <a href="https://twitter.com/intent/tweet?url=<%= encoded_url %>&text=<%= encoded_title %>"
     target="_blank"
     rel="noopener noreferrer"
     class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-gray-100 text-gray-600 hover:bg-blue-100 hover:text-blue-600 transition-colors"
     title="<%= t('share.twitter') %>"
     data-action="click->analytics#trackShare"
     data-platform="twitter"
     data-content-type="<%= content_type %>"
     data-content-id="<%= content_id %>">
    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
    </svg>
    <span class="sr-only"><%= t('share.twitter') %></span>
  </a>

  <%# LinkedIn %>
  <a href="https://www.linkedin.com/sharing/share-offsite/?url=<%= encoded_url %>"
     target="_blank"
     rel="noopener noreferrer"
     class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-gray-100 text-gray-600 hover:bg-blue-100 hover:text-blue-700 transition-colors"
     title="<%= t('share.linkedin') %>"
     data-action="click->analytics#trackShare"
     data-platform="linkedin"
     data-content-type="<%= content_type %>"
     data-content-id="<%= content_id %>">
    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
    </svg>
    <span class="sr-only"><%= t('share.linkedin') %></span>
  </a>

  <%# Facebook %>
  <a href="https://www.facebook.com/sharer/sharer.php?u=<%= encoded_url %>"
     target="_blank"
     rel="noopener noreferrer"
     class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-gray-100 text-gray-600 hover:bg-blue-100 hover:text-blue-800 transition-colors"
     title="<%= t('share.facebook') %>"
     data-action="click->analytics#trackShare"
     data-platform="facebook"
     data-content-type="<%= content_type %>"
     data-content-id="<%= content_id %>">
    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd"/>
    </svg>
    <span class="sr-only"><%= t('share.facebook') %></span>
  </a>

  <%# Copy Link %>
  <button type="button"
          class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-gray-100 text-gray-600 hover:bg-green-100 hover:text-green-600 transition-colors"
          title="<%= t('share.copy_link') %>"
          data-action="click->share#copyLink click->analytics#trackShare"
          data-share-url-value="<%= url %>"
          data-platform="copy_link"
          data-content-type="<%= content_type %>"
          data-content-id="<%= content_id %>">
    <svg class="w-4 h-4" data-share-target="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
    </svg>
    <span class="sr-only"><%= t('share.copy_link') %></span>
  </button>

  <%# Native Share (mobile) %>
  <% if true # Always render, JS will show/hide based on support %>
    <button type="button"
            class="hidden inline-flex items-center justify-center w-8 h-8 rounded-full bg-gray-100 text-gray-600 hover:bg-purple-100 hover:text-purple-600 transition-colors"
            title="<%= t('share.native') %>"
            data-action="click->share#nativeShare click->analytics#trackShare"
            data-share-target="nativeButton"
            data-share-url-value="<%= url %>"
            data-share-title-value="<%= title %>"
            data-share-text-value="<%= description || title %>"
            data-platform="native"
            data-content-type="<%= content_type %>"
            data-content-id="<%= content_id %>">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
      </svg>
      <span class="sr-only"><%= t('share.native') %></span>
    </button>
  <% end %>
</div>
