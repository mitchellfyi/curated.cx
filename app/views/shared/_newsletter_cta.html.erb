<%# Newsletter CTA Section %>
<section class="bg-gradient-to-r from-blue-600 to-indigo-700 rounded-xl p-8 text-center text-white shadow-lg">
  <div class="max-w-2xl mx-auto">
    <div class="flex justify-center mb-4">
      <div class="bg-white/20 rounded-full p-3">
        <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
      </div>
    </div>

    <h2 class="text-2xl md:text-3xl font-bold mb-3">
      <%= t('newsletter.cta.title', site: Current.tenant&.title || t('app.name')) %>
    </h2>

    <p class="text-blue-100 mb-6 text-lg">
      <%= t('newsletter.cta.description') %>
    </p>

    <div class="flex flex-col sm:flex-row justify-center gap-4">
      <% if user_signed_in? %>
        <%= link_to digest_subscription_path,
            class: "inline-flex items-center justify-center px-8 py-3 border-2 border-white text-base font-medium rounded-lg text-white hover:bg-white hover:text-blue-600 transition-all duration-200" do %>
          <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
          </svg>
          <%= t('newsletter.cta.manage_preferences') %>
        <% end %>
      <% else %>
        <%= link_to new_user_registration_path(redirect_to: digest_subscription_path),
            class: "inline-flex items-center justify-center px-8 py-3 bg-white text-blue-600 text-base font-semibold rounded-lg hover:bg-blue-50 transition-all duration-200 shadow-md" do %>
          <%= t('newsletter.cta.subscribe') %>
          <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        <% end %>
      <% end %>
    </div>

    <p class="mt-4 text-blue-200 text-sm">
      <%= t('newsletter.cta.frequency') %>
    </p>
  </div>
</section>
