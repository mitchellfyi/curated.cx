<%# Payment cancelled page %>
<% content_for :head do %>
  <%= set_meta_tags(title: t("checkouts.cancel_title")) %>
<% end %>

<div class="max-w-2xl mx-auto px-4 py-16 text-center">
  <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-gray-100 mb-6">
    <svg class="h-10 w-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
    </svg>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= t("checkouts.cancel_title") %></h1>
  <p class="text-lg text-gray-600 mb-8"><%= t("checkouts.cancel_message") %></p>

  <div class="flex flex-col sm:flex-row gap-4 justify-center">
    <%= link_to t("checkouts.try_again"), new_listing_checkout_path(@listing),
        class: "inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>

    <%= link_to t("checkouts.view_listing"), listing_path(@listing),
        class: "inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
  </div>
</div>
