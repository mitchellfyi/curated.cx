<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <%= display_meta_tags %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
    <%= Sentry.get_trace_propagation_meta.html_safe %>
  </head>

  <body class="min-h-screen bg-gray-50" data-controller="admin-sidebar">
    <%= skip_link %>

    <%# Admin top bar %>
    <header role="banner" class="bg-white border-b border-gray-200 sticky top-0 z-30">
      <div class="flex items-center justify-between h-14 px-4">
        <div class="flex items-center">
          <%# Mobile sidebar toggle %>
          <button
            type="button"
            class="lg:hidden mr-3 inline-flex items-center justify-center p-2 rounded-md text-gray-500 hover:text-gray-700 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500"
            data-action="click->admin-sidebar#toggle"
            aria-label="<%= t('a11y.toggle_sidebar') %>"
          >
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>

          <%= link_to admin_root_path, class: "flex items-center text-gray-900 font-semibold text-lg" do %>
            <% if Current.tenant&.logo_url.present? %>
              <%= image_tag Current.tenant.logo_url, alt: Current.tenant.title, class: "h-7 w-auto mr-2" %>
            <% end %>
            <span class="hidden sm:inline"><%= Current.tenant&.title || t("app.name") %></span>
            <span class="ml-2 text-xs font-medium text-gray-400 uppercase hidden sm:inline"><%= t("nav.admin") %></span>
          <% end %>
        </div>

        <div class="flex items-center space-x-3">
          <%= link_to root_path, class: "text-sm text-gray-500 hover:text-gray-700", target: "_blank" do %>
            <span class="hidden sm:inline"><%= t("actions.view") %> site</span>
            <svg class="inline h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          <% end %>

          <% if user_signed_in? %>
            <div class="relative" data-controller="dropdown">
              <button
                type="button"
                class="flex items-center text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                data-action="click->dropdown#toggle"
                aria-expanded="false"
              >
                <%= current_user.decorate.avatar_image(size: 32) %>
              </button>
              <div
                class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 z-50"
                data-dropdown-target="menu"
                role="menu"
              >
                <div class="py-1">
                  <div class="px-4 py-2 border-b border-gray-100">
                    <p class="text-sm text-gray-900 font-medium truncate"><%= current_user.email %></p>
                  </div>
                  <%= link_to t("nav.dashboard"), dashboard_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: "menuitem" %>
                  <%= link_to t("nav.settings"), edit_user_registration_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: "menuitem" %>
                  <div class="border-t border-gray-100"></div>
                  <%= link_to t("nav.logout"), destroy_user_session_path, method: :delete, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100", role: "menuitem", data: { turbo_method: :delete } %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </header>

    <div class="flex">
      <%# Mobile overlay %>
      <div
        class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 z-30 lg:hidden"
        data-admin-sidebar-target="overlay"
        data-action="click->admin-sidebar#close"
      ></div>

      <%# Sidebar %>
      <aside
        class="fixed lg:sticky top-14 left-0 z-40 h-[calc(100vh-3.5rem)] w-64 bg-white border-r border-gray-200 overflow-y-auto -translate-x-full lg:translate-x-0 transition-transform duration-200"
        data-admin-sidebar-target="sidebar"
        role="navigation"
        aria-label="<%= t('a11y.admin_navigation') %>"
      >
        <div class="py-4">
          <%= render "admin/shared/sidebar" %>
        </div>
      </aside>

      <%# Main content %>
      <main
        id="main-content"
        role="main"
        class="flex-1 min-w-0 lg:ml-0"
        data-admin-sidebar-target="content"
        aria-label="<%= t('a11y.primary_content') %>"
      >
        <%= flash_messages %>
        <%= yield %>
      </main>
    </div>
  </body>
</html>
