<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <%= display_meta_tags %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# Google Analytics 4 %>
    <%= render "shared/analytics/ga4" %>

    <%= yield :head %>

    <%# RSS/Atom feed autodiscovery %>
    <% if Current.tenant %>
      <%= auto_discovery_link_tag :rss, feeds_content_url(format: :rss), title: "#{Current.tenant.title} - Content Feed" %>
      <%= auto_discovery_link_tag :atom, feeds_content_url(format: :atom), title: "#{Current.tenant.title} - Content Feed (Atom)" %>
      <%= auto_discovery_link_tag :rss, feeds_listings_url(format: :rss), title: "#{Current.tenant.title} - Listings" %>
    <% end %>

    <%# Structured data for SEO %>
    <% if Current.tenant %>
      <%= json_ld_tag(organization_schema) %>
      <%= json_ld_tag(website_schema) %>
    <% end %>
    <%= yield :structured_data %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body class="min-h-screen flex flex-col">
    <%= skip_link %>

    <header role="banner">
      <%= render "shared/navigation" %>
    </header>

    <main id="main-content" role="main" class="flex-grow" aria-label="<%= t('a11y.primary_content') %>">
      <!-- Flash Messages -->
      <%= flash_messages %>

      <%= yield %>
    </main>

    <footer role="contentinfo" aria-label="<%= t('a11y.footer') %>">
      <% if Current.tenant %>
        <%= render 'shared/powered_by_footer', tenant: Current.tenant.decorate %>
      <% end %>
    </footer>

    <%# Cookie consent banner %>
    <%= render "shared/analytics/cookie_consent" %>
  </body>
</html>
