<%# Purchase detail page %>
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-4">
    <%= link_to my_purchases_path, class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700" do %>
      <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      <%= t("my.purchases.back_to_purchases") %>
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="p-6 sm:p-8">
      <h1 class="text-2xl font-bold text-gray-900"><%= @purchase.digital_product.title %></h1>

      <div class="mt-6 border-t border-gray-200 pt-6">
        <dl class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-gray-500"><%= t("my.purchases.amount") %></dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @purchase.formatted_amount %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500"><%= t("my.purchases.date") %></dt>
            <dd class="mt-1 text-sm text-gray-900"><%= l(@purchase.purchased_at, format: :long) %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500"><%= t("my.purchases.email") %></dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @purchase.email %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500"><%= t("my.purchases.source") %></dt>
            <dd class="mt-1 text-sm text-gray-900"><%= t("my.purchases.sources.#{@purchase.source}") %></dd>
          </div>
        </dl>
      </div>

      <% if @download_token %>
        <div class="mt-8 bg-gray-50 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-gray-900"><%= t("my.purchases.download_section") %></h3>

          <% if @download_token.valid_for_download? %>
            <div class="mt-4">
              <%= link_to download_url(@download_token.token), class: button_classes(variant: :success) do %>
                <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                </svg>
                <%= t("my.purchases.download_now") %>
              <% end %>
            </div>

            <div class="mt-4 text-sm text-gray-500">
              <p><%= t("my.purchases.downloads_remaining", count: @download_token.downloads_remaining) %></p>
              <p><%= t("my.purchases.expires_at", time: l(@download_token.expires_at, format: :long)) %></p>
            </div>
          <% else %>
            <div class="mt-4 p-4 bg-yellow-50 border border-yellow-200 rounded-md">
              <p class="text-sm text-yellow-800">
                <% if @download_token.expired? %>
                  <%= t("my.purchases.token_expired") %>
                <% else %>
                  <%= t("my.purchases.token_exhausted") %>
                <% end %>
              </p>
            </div>
          <% end %>

          <div class="mt-4">
            <%= button_to regenerate_token_my_purchase_path(@purchase), method: :post, class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
              </svg>
              <%= t("my.purchases.regenerate_token") %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
