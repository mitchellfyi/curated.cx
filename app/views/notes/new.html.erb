<%# New note form %>
<div class="py-8">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <nav class="mb-6">
      <%= link_to notes_path, class: "text-sm text-gray-500 hover:text-blue-600 transition-colors flex items-center gap-1" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        <%= t('notes.back_to_notes') %>
      <% end %>
    </nav>

    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900"><%= t('notes.create') %></h1>
      <p class="mt-2 text-gray-600"><%= t('notes.create_description', default: "Share a quick thought or update") %></p>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <%= render 'notes/form', note: @note %>
    </div>
  </div>
</div>
