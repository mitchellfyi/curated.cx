<%# Single note detail page %>
<div class="max-w-2xl mx-auto px-4 py-8">
  <%# Breadcrumb %>
  <nav class="mb-6">
    <%= link_to notes_path, class: "text-sm text-gray-500 hover:text-blue-600 transition-colors flex items-center gap-1" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      <%= t('notes.back_to_notes') %>
    <% end %>
  </nav>

  <%# Note card %>
  <%= render 'notes/note', note: @note, expanded: true %>

  <%# Comments section %>
  <div class="mt-6">
    <%= render 'comments/comments_section', commentable: @note, comments: @comments %>
  </div>
</div>
