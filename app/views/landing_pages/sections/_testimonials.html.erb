<%# Testimonials section partial %>
<%# locals: (section:, index:) %>
<section class="py-16 <%= index.even? ? 'bg-white' : 'bg-gray-50' %>">
  <div class="max-w-6xl mx-auto px-4">
    <% if section["title"].present? %>
      <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">
        <%= section["title"] %>
      </h2>
    <% end %>

    <% if section["items"].present? %>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% section["items"].each do |testimonial| %>
          <div class="bg-white rounded-lg shadow-lg p-6 <%= index.even? ? '' : 'bg-white' %>">
            <div class="flex items-start mb-4">
              <svg class="w-8 h-8 text-blue-500 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
              </svg>
            </div>
            <p class="text-gray-600 mb-4"><%= testimonial["quote"] %></p>
            <div class="flex items-center">
              <% if testimonial["avatar_url"].present? %>
                <img src="<%= testimonial["avatar_url"] %>" alt="" class="w-10 h-10 rounded-full mr-3" loading="lazy">
              <% else %>
                <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center mr-3">
                  <span class="text-gray-500 font-medium"><%= testimonial["name"]&.first&.upcase %></span>
                </div>
              <% end %>
              <div>
                <div class="font-semibold text-gray-900"><%= testimonial["name"] %></div>
                <% if testimonial["title"].present? %>
                  <div class="text-sm text-gray-500"><%= testimonial["title"] %></div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
