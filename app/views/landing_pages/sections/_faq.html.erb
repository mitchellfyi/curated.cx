<%# FAQ accordion section partial %>
<%# locals: (section:, index:) %>
<section class="py-16 <%= index.even? ? 'bg-white' : 'bg-gray-50' %>">
  <div class="max-w-3xl mx-auto px-4">
    <% if section["title"].present? %>
      <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">
        <%= section["title"] %>
      </h2>
    <% end %>

    <% if section["items"].present? %>
      <div class="space-y-4" data-controller="accordion">
        <% section["items"].each_with_index do |faq, faq_index| %>
          <div class="border border-gray-200 rounded-lg">
            <button
              type="button"
              class="w-full px-6 py-4 text-left flex items-center justify-between focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded-lg"
              data-accordion-target="trigger"
              data-action="click->accordion#toggle"
              aria-expanded="false"
              aria-controls="faq-<%= index %>-<%= faq_index %>">
              <span class="font-medium text-gray-900"><%= faq["question"] %></span>
              <svg class="w-5 h-5 text-gray-500 transform transition-transform duration-200" data-accordion-target="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>
            <div
              id="faq-<%= index %>-<%= faq_index %>"
              class="hidden px-6 pb-4"
              data-accordion-target="content">
              <p class="text-gray-600"><%= faq["answer"] %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
