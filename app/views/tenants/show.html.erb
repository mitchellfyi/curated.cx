<% setup_meta_tags(
  title: Current.tenant&.title || "Tenant Information",
  description: Current.tenant&.description || "View tenant information and details"
) %>

<div class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <% if Current.tenant %>
      <div class="bg-white shadow rounded-lg p-6">
        <div class="flex items-center justify-between mb-6">
          <div>
            <h1 class="text-3xl font-bold text-gray-900"><%= Current.tenant.title %></h1>
            <p class="mt-1 text-sm text-gray-600"><%= Current.tenant.hostname %></p>
          </div>
          <div class="text-right">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              <%= Current.tenant.status.humanize %>
            </span>
          </div>
        </div>

        <% if Current.tenant.description.present? %>
          <div class="mb-6">
            <h2 class="text-lg font-medium text-gray-900 mb-2">Description</h2>
            <p class="text-gray-700"><%= Current.tenant.description %></p>
          </div>
        <% end %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-sm font-medium text-gray-900 mb-2">Tenant Details</h3>
            <dl class="space-y-2">
              <div>
                <dt class="text-xs text-gray-500">Slug</dt>
                <dd class="text-sm text-gray-900 font-mono"><%= Current.tenant.slug %></dd>
              </div>
              <div>
                <dt class="text-xs text-gray-500">Created</dt>
                <dd class="text-sm text-gray-900"><%= Current.tenant.created_at.strftime("%B %d, %Y") %></dd>
              </div>
            </dl>
          </div>

          <% if Current.tenant.settings.present? %>
            <div>
              <h3 class="text-sm font-medium text-gray-900 mb-2">Settings</h3>
              <div class="bg-gray-50 rounded p-3">
                <div class="mb-2">
                  <span class="text-xs text-gray-500">Theme:</span>
                  <span class="text-sm text-gray-900">
                    Primary: <span class="text-<%= Current.tenant.primary_color %>-600"><%= Current.tenant.primary_color.capitalize %></span>
                  </span>
                </div>
                <div>
                  <span class="text-xs text-gray-500">Categories:</span>
                  <div class="mt-1 flex flex-wrap gap-1">
                    <% Current.tenant.enabled_categories.each do |category| %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-<%= Current.tenant.primary_color %>-100 text-<%= Current.tenant.primary_color %>-800">
                        <%= category.humanize %>
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- User Information Section -->
        <% if user_signed_in? %>
          <div class="mt-8 pt-6 border-t border-gray-200">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Current User</h3>
            <div class="bg-gray-50 rounded-lg p-4">
              <div class="flex items-center space-x-3">
                <%= user_avatar(current_user, size: :large) %>
                <div>
                  <p class="text-sm font-medium text-gray-900"><%= current_user.email %></p>
                  <% if current_user.admin? %>
                    <p class="text-xs text-blue-600 font-medium">Platform Admin</p>
                  <% end %>
                  <%= user_role_badges(current_user) %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="mt-8 pt-6 border-t border-gray-200">
          <div class="flex items-center justify-between">
            <p class="text-xs text-gray-500">
              Multi-tenant platform powered by Rails 8
            </p>
            <div class="flex space-x-4">
              <% if Current.tenant.root? %>
                <span class="text-sm text-gray-500">Root Tenant</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="text-center">
        <div class="bg-red-50 border border-red-200 rounded-lg p-6">
          <h1 class="text-2xl font-bold text-red-900 mb-2">Tenant Not Found</h1>
          <p class="text-red-700">
            No tenant is configured for this hostname.
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>