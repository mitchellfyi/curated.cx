<%# Discussion index page - list all discussions %>
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900"><%= t("discussions.index.title") %></h1>
    <% if policy(Discussion).create? %>
      <%= link_to new_discussion_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <%= t("discussions.new") %>
      <% end %>
    <% end %>
  </div>

  <% if @discussions.any? %>
    <div class="bg-white shadow rounded-lg divide-y divide-gray-200" id="discussions_list">
      <% @discussions.each do |discussion| %>
        <%= render "discussions/discussion", discussion: discussion %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 bg-white rounded-lg shadow">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900"><%= t("discussions.empty.title") %></h3>
      <p class="mt-1 text-sm text-gray-500"><%= t("discussions.empty.description") %></p>
      <% if policy(Discussion).create? %>
        <div class="mt-6">
          <%= link_to new_discussion_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
            <%= t("discussions.start_first") %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
