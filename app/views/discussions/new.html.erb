<%# New discussion page %>
<div class="py-8">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-6">
      <%= link_to discussions_path, class: "text-sm text-gray-500 hover:text-gray-700 flex items-center gap-1" do %>
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        <%= t("discussions.back_to_discussions") %>
      <% end %>
    </div>

    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900"><%= t("discussions.new_title") %></h1>
      <p class="mt-2 text-gray-600"><%= t("discussions.new_description") %></p>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <%= render "discussions/form", discussion: @discussion %>
    </div>
  </div>
</div>
