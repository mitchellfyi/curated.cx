<%# Discussion show page - discussion details and posts %>
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <%# Back link %>
  <div class="mb-4">
    <%= link_to discussions_path, class: "text-sm text-gray-500 hover:text-gray-700 flex items-center gap-1" do %>
      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      <%= t("discussions.back_to_discussions") %>
    <% end %>
  </div>

  <%# Discussion header %>
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <div class="flex items-center gap-2 mb-2">
          <%= badge(t("discussions.pinned"), :yellow) if @discussion.pinned? %>
          <%= badge(t("discussions.locked_badge"), :gray) if @discussion.locked? %>
          <%= badge(t("discussions.subscribers_only"), :purple) if @discussion.visibility_subscribers_only? %>
        </div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @discussion.title %></h1>
        <% if @discussion.body.present? %>
          <div class="mt-3 text-gray-700 prose prose-sm max-w-none">
            <%= simple_format(@discussion.body, {}, sanitize: true) %>
          </div>
        <% end %>
      </div>

      <%# Discussion actions %>
      <% if policy(@discussion).update? || policy(@discussion).destroy? %>
        <div class="ml-4 flex items-center gap-2">
          <% if policy(@discussion).update? %>
            <button type="button"
                    class="text-gray-400 hover:text-gray-600"
                    data-controller="discussion-edit"
                    data-action="click->discussion-edit#toggle">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
              </svg>
            </button>
          <% end %>
          <% if policy(@discussion).destroy? %>
            <%= button_to discussion_path(@discussion),
                          method: :delete,
                          class: "text-gray-400 hover:text-red-600",
                          data: { turbo_confirm: t("discussions.confirm_delete") } do %>
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>

    <%# Author info %>
    <div class="mt-4 pt-4 border-t border-gray-200 flex items-center gap-3">
      <%= link_to profile_path(@discussion.user), class: "flex-shrink-0" do %>
        <% if @discussion.user.avatar_url.present? %>
          <%= image_tag @discussion.user.avatar_url, alt: @discussion.user.profile_name, class: "w-8 h-8 rounded-full object-cover" %>
        <% else %>
          <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 text-sm font-medium">
            <%= @discussion.user.initials %>
          </div>
        <% end %>
      <% end %>
      <div class="text-sm">
        <%= link_to @discussion.user.profile_name, profile_path(@discussion.user), class: "font-medium text-gray-900 hover:text-blue-600" %>
        <time class="text-gray-500 block" datetime="<%= @discussion.created_at.iso8601 %>">
          <%= t("discussions.started", time: time_ago_in_words(@discussion.created_at)) %>
        </time>
      </div>
    </div>
  </div>

  <%# Posts section %>
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900" id="posts_count">
        <%= t("discussions.posts_count", count: @discussion.posts_count) %>
      </h2>
    </div>

    <%# Posts list %>
    <div id="posts_list" class="divide-y divide-gray-200">
      <% @posts.each do |post| %>
        <%= render "discussion_posts/post", post: post %>
      <% end %>
    </div>

    <%# Locked message or new post form %>
    <% if @discussion.locked? %>
      <div class="px-6 py-4 bg-gray-50 text-center text-gray-500 text-sm">
        <svg class="mx-auto h-6 w-6 text-gray-400 mb-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
        </svg>
        <%= t("discussions.locked_message") %>
      </div>
    <% elsif user_signed_in? && policy(DiscussionPost).create? %>
      <div class="px-6 py-4 border-t border-gray-200">
        <%= render "discussion_posts/form", post: @new_post, discussion: @discussion %>
      </div>
    <% elsif !user_signed_in? %>
      <div class="px-6 py-4 bg-gray-50 text-center">
        <%= link_to new_user_session_path, class: "text-blue-600 hover:text-blue-700 font-medium" do %>
          <%= t("discussions.sign_in_to_post") %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
