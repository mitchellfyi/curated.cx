<%# Comment form partial for creating/editing comments %>
<%# locals: (comment:, content_item:, editing: false, replying_to: nil) %>
<%= form_with model: [content_item, comment],
              class: "space-y-3",
              data: { turbo_stream: true } do |f| %>
  <% if comment.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= t('errors.form_errors', count: comment.errors.count) %>
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% comment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% if replying_to %>
    <%= f.hidden_field :parent_id %>
    <div class="text-sm text-gray-500">
      <%= t('comments.reply_to', user: replying_to.user.email.split('@').first) %>
    </div>
  <% end %>

  <div>
    <%= f.text_area :body,
                    rows: editing ? 4 : 3,
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                    placeholder: t('comments.form.placeholder'),
                    maxlength: Comment::BODY_MAX_LENGTH,
                    data: { controller: "character-counter", character_counter_max_value: Comment::BODY_MAX_LENGTH } %>
    <div class="mt-1 text-xs text-gray-400 text-right" data-character-counter-target="display">
      <%= Comment::BODY_MAX_LENGTH %> <%= t('comments.form.characters_remaining') %>
    </div>
  </div>

  <div class="flex items-center justify-end gap-2">
    <% if editing || replying_to %>
      <button type="button"
              class="px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
              data-action="click->comment-edit#cancel click->comment-reply#cancel">
        <%= t('comments.form.cancel') %>
      </button>
    <% end %>
    <%= f.submit editing ? t('comments.form.update') : t('comments.form.submit'),
                 class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
  </div>
<% end %>
