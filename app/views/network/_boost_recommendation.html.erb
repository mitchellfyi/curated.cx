<%# Boost recommendation card for displaying sponsored site recommendations %>
<% site = boost.source_site %>
<article class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow"
         data-boost-id="<%= boost.id %>">
  <div class="p-4">
    <div class="flex items-start justify-between mb-2">
      <div class="flex-1 min-w-0">
        <h4 class="text-base font-semibold text-gray-900 mb-1">
          <%= site.name %>
        </h4>
        <% if site.primary_hostname.present? %>
          <p class="text-xs text-gray-500 truncate">
            <%= site.primary_hostname %>
          </p>
        <% end %>
      </div>
      <%= badge(t('boosts.sponsored'), :gray) %>
    </div>

    <% if site.description.present? %>
      <p class="text-gray-600 text-sm line-clamp-2 mb-3">
        <%= truncate(site.description, length: 100) %>
      </p>
    <% end %>

    <% if site.topics.any? %>
      <div class="flex flex-wrap gap-1 mb-3">
        <% site.topics.first(2).each do |topic| %>
          <%= badge(topic, :gray) %>
        <% end %>
      </div>
    <% end %>

    <%= link_to boost_click_path(boost),
                class: "inline-flex items-center justify-center w-full px-3 py-2 border border-blue-300 text-sm font-medium rounded text-blue-700 hover:bg-blue-50 transition-colors",
                data: { turbo: false } do %>
      <%= t('boosts.visit_site') %>
      <svg class="ml-1 w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
      </svg>
    <% end %>
  </div>
</article>
