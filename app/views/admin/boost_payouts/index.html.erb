<% content_for :title, t("admin.boost_payouts.title") %>

<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900"><%= t("admin.boost_payouts.title") %></h1>
      <p class="mt-2 text-gray-600"><%= t("admin.boost_payouts.description", default: "Track and manage boost payouts") %></p>
    </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-4 text-center">
      <div class="text-3xl font-bold"><%= @stats[:total_payouts] %></div>
      <div class="text-gray-600 text-sm"><%= t("admin.boost_payouts.stats.total") %></div>
    </div>
    <div class="bg-white rounded-lg shadow p-4 text-center">
      <div class="text-3xl font-bold text-yellow-600"><%= @stats[:pending_count] %></div>
      <div class="text-gray-600 text-sm"><%= t("admin.boost_payouts.stats.pending") %></div>
    </div>
    <div class="bg-white rounded-lg shadow p-4 text-center">
      <div class="text-3xl font-bold text-yellow-600">$<%= number_with_precision(@stats[:pending_amount], precision: 2) %></div>
      <div class="text-gray-600 text-sm"><%= t("admin.boost_payouts.stats.pending_amount") %></div>
    </div>
    <div class="bg-white rounded-lg shadow p-4 text-center">
      <div class="text-3xl font-bold text-green-600">$<%= number_with_precision(@stats[:paid_amount], precision: 2) %></div>
      <div class="text-gray-600 text-sm"><%= t("admin.boost_payouts.stats.paid_amount") %></div>
    </div>
  </div>

  <!-- Payouts Table -->
  <div class="bg-white rounded-lg shadow p-6">
    <h2 class="text-xl font-semibold mb-4"><%= t("admin.boost_payouts.payout_history") %></h2>
    <% if @payouts.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr class="border-b">
              <th class="text-left py-2"><%= t("admin.boost_payouts.table.period") %></th>
              <th class="text-center py-2"><%= t("admin.boost_payouts.table.amount") %></th>
              <th class="text-center py-2"><%= t("admin.boost_payouts.table.status") %></th>
              <th class="text-left py-2"><%= t("admin.boost_payouts.table.paid_at") %></th>
              <th class="text-left py-2"><%= t("admin.boost_payouts.table.actions") %></th>
            </tr>
          </thead>
          <tbody>
            <% @payouts.each do |payout| %>
              <tr class="border-b hover:bg-gray-50">
                <td class="py-2">
                  <div class="font-medium"><%= payout.period_description %></div>
                  <div class="text-sm text-gray-500"><%= payout.period_start.strftime("%b %d") %> - <%= payout.period_end.strftime("%b %d, %Y") %></div>
                </td>
                <td class="py-2 text-center font-medium">
                  $<%= number_with_precision(payout.amount, precision: 2) %>
                </td>
                <td class="py-2 text-center">
                  <span class="px-2 py-1 text-xs rounded-full
                               <%= payout.paid? ? 'bg-green-100 text-green-800' :
                                   payout.pending? ? 'bg-yellow-100 text-yellow-800' :
                                   'bg-gray-100 text-gray-800' %>">
                    <%= payout.status.humanize %>
                  </span>
                </td>
                <td class="py-2 text-sm text-gray-600">
                  <%= payout.paid_at ? l(payout.paid_at, format: :short) : "â€”" %>
                </td>
                <td class="py-2">
                  <%= link_to t("admin.boost_payouts.view"), admin_boost_payout_path(payout), class: "text-blue-600 hover:underline" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-8">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No payouts yet</h3>
        <p class="mt-1 text-sm text-gray-500"><%= t("admin.boost_payouts.no_payouts") %></p>
      </div>
    <% end %>
  </div>
  </div>
</div>
