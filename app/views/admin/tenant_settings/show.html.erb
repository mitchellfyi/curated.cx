<div class="py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Tenant Settings</h1>
      <p class="mt-2 text-gray-600">Configure your tenant: <%= @tenant.title %></p>
    </div>

    <% if @tenant.errors.any? %>
      <div class="rounded-md bg-red-50 p-4 mb-8">
        <div class="flex">
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(@tenant.errors.count, "error") %> prevented saving:
            </h3>
            <ul class="mt-2 text-sm text-red-700 list-disc pl-5">
              <% @tenant.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <%= form_with model: @tenant, url: admin_tenant_settings_path, method: :patch, local: true, class: "space-y-8" do |f| %>

      <%# General section %>
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
          <h2 class="text-lg font-medium text-gray-900">General</h2>
        </div>
        <div class="p-6 space-y-4">
          <div>
            <%= f.label :title, "Tenant Name", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>
          <div>
            <%= f.label :hostname, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :hostname, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
            <p class="mt-1 text-xs text-gray-500">The primary hostname for this tenant.</p>
          </div>
        </div>
      </div>

      <%# Branding section %>
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
          <h2 class="text-lg font-medium text-gray-900">Branding</h2>
        </div>
        <div class="p-6 space-y-4">
          <div>
            <%= f.label :logo_url, "Logo URL", class: "block text-sm font-medium text-gray-700" %>
            <%= f.url_field :logo_url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "https://example.com/logo.png", autocomplete: "off" %>
          </div>
          <div>
            <%= label_tag "tenant[favicon_url]", "Favicon URL", class: "block text-sm font-medium text-gray-700" %>
            <%= text_field_tag "tenant[favicon_url]", @tenant.setting("favicon_url"), class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "https://example.com/favicon.ico", autocomplete: "off" %>
          </div>
          <div>
            <%= label_tag "tenant[custom_css]", "Custom CSS", class: "block text-sm font-medium text-gray-700" %>
            <%= text_area_tag "tenant[custom_css]", @tenant.setting("custom_css"), rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 font-mono text-sm", autocomplete: "off" %>
            <p class="mt-1 text-xs text-gray-500">Custom CSS injected into the page head.</p>
          </div>
        </div>
      </div>

      <%# SEO section %>
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
          <h2 class="text-lg font-medium text-gray-900">SEO & Meta</h2>
        </div>
        <div class="p-6 space-y-4">
          <div>
            <%= label_tag "tenant[meta_title]", "Meta Title", class: "block text-sm font-medium text-gray-700" %>
            <%= text_field_tag "tenant[meta_title]", @tenant.setting("meta_title"), class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", autocomplete: "off" %>
          </div>
          <div>
            <%= label_tag "tenant[meta_description]", "Meta Description", class: "block text-sm font-medium text-gray-700" %>
            <%= text_area_tag "tenant[meta_description]", @tenant.setting("meta_description"), rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", autocomplete: "off" %>
          </div>
          <div>
            <%= label_tag "tenant[analytics_id]", "Analytics ID", class: "block text-sm font-medium text-gray-700" %>
            <%= text_field_tag "tenant[analytics_id]", @tenant.setting("analytics_id"), class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "G-XXXXXXXXXX", autocomplete: "off" %>
          </div>
        </div>
      </div>

      <%# Social section %>
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
          <h2 class="text-lg font-medium text-gray-900">Social</h2>
        </div>
        <div class="p-6 space-y-4">
          <div>
            <%= label_tag "tenant[twitter_handle]", "Twitter Handle", class: "block text-sm font-medium text-gray-700" %>
            <%= text_field_tag "tenant[twitter_handle]", @tenant.setting("twitter_handle"), class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "@handle", autocomplete: "off" %>
          </div>
        </div>
      </div>

      <%# Advanced section %>
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
          <h2 class="text-lg font-medium text-gray-900">Advanced</h2>
        </div>
        <div class="p-6 space-y-4">
          <div>
            <%= label_tag "tenant[custom_head_html]", "Custom HTML (Head)", class: "block text-sm font-medium text-gray-700" %>
            <%= text_area_tag "tenant[custom_head_html]", @tenant.setting("custom_head_html"), rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 font-mono text-sm", autocomplete: "off" %>
            <p class="mt-1 text-xs text-gray-500">Custom HTML injected into the &lt;head&gt; tag. Use for tracking scripts, custom meta tags, etc.</p>
          </div>
        </div>
      </div>

      <%# Sites & Domains (read-only) %>
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
          <div class="flex items-center justify-between">
            <h2 class="text-lg font-medium text-gray-900">Sites & Domains</h2>
            <%= link_to "Manage Sites", admin_sites_path, class: "text-sm text-blue-600 hover:underline" %>
          </div>
        </div>
        <div class="p-6">
          <% if @sites.any? %>
            <div class="space-y-4">
              <% @sites.each do |site| %>
                <div class="border border-gray-200 rounded-lg p-4">
                  <div class="flex items-center justify-between">
                    <div>
                      <p class="text-sm font-medium text-gray-900"><%= site.name %></p>
                      <% site.domains.each do |domain| %>
                        <p class="text-xs text-gray-500"><%= domain.hostname %></p>
                      <% end %>
                    </div>
                    <%= link_to "Edit", edit_admin_site_path(site), class: "text-sm text-blue-600 hover:underline" %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-500">No sites configured.</p>
          <% end %>
        </div>
      </div>

      <div class="flex justify-end">
        <%= f.submit "Save Settings", class: "px-6 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
