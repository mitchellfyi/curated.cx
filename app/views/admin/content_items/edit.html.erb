<div class="py-8">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <%= link_to "â† Back to Content Item", admin_content_item_path(@content_item), class: "text-gray-600 hover:underline text-sm" %>
      <h1 class="mt-4 text-3xl font-bold text-gray-900">Edit Content Item</h1>
      <p class="mt-2 text-gray-600 truncate"><%= @content_item.url_canonical %></p>
    </div>

    <%= form_with model: @content_item, url: admin_content_item_path(@content_item), method: :patch, class: "space-y-6" do |f| %>
      <% if @content_item.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">There were errors:</h3>
              <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                <% @content_item.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Basic Info -->
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Basic Information</h3>
        <div class="space-y-6">
          <div>
            <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>

          <div>
            <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= f.label :url_raw, "Original URL", class: "block text-sm font-medium text-gray-700" %>
              <%= f.url_field :url_raw, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
            </div>

            <div>
              <%= f.label :url_canonical, "Canonical URL", class: "block text-sm font-medium text-gray-700" %>
              <%= f.url_field :url_canonical, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
            </div>
          </div>

          <div>
            <%= f.label :content_type, class: "block text-sm font-medium text-gray-700" %>
            <%= f.select :content_type, options_for_select([["", ""], ["Article", "article"], ["Video", "video"], ["Podcast", "podcast"], ["Tool", "tool"], ["News", "news"]], @content_item.content_type), {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>
        </div>
      </div>

      <!-- Publishing -->
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Publishing</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= f.label :published_at, class: "block text-sm font-medium text-gray-700" %>
            <%= f.datetime_local_field :published_at, value: @content_item.published_at&.strftime("%Y-%m-%dT%H:%M"), class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
            <p class="mt-1 text-xs text-gray-500">Leave blank for draft status</p>
          </div>

          <div>
            <%= f.label :scheduled_for, class: "block text-sm font-medium text-gray-700" %>
            <%= f.datetime_local_field :scheduled_for, value: @content_item.scheduled_for&.strftime("%Y-%m-%dT%H:%M"), class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
            <p class="mt-1 text-xs text-gray-500">Schedule for future publication</p>
          </div>
        </div>
      </div>

      <!-- AI Fields -->
      <div class="bg-purple-50 shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-purple-900 mb-4">AI Editorialisation</h3>
        <div class="space-y-6">
          <div>
            <%= f.label :ai_summary, "AI Summary", class: "block text-sm font-medium text-purple-700" %>
            <%= f.text_area :ai_summary, rows: 3, class: "mt-1 block w-full rounded-md border-purple-300 shadow-sm focus:border-purple-500 focus:ring-purple-500" %>
          </div>

          <div>
            <%= f.label :why_it_matters, class: "block text-sm font-medium text-purple-700" %>
            <%= f.text_area :why_it_matters, rows: 4, class: "mt-1 block w-full rounded-md border-purple-300 shadow-sm focus:border-purple-500 focus:ring-purple-500" %>
          </div>
        </div>
      </div>

      <!-- Tags -->
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Tags</h3>
        <div>
          <label class="block text-sm font-medium text-gray-700">Topic Tags</label>
          <p class="text-xs text-gray-500 mb-2">Comma-separated list of tags</p>
          <%= text_field_tag "content_item[topic_tags_string]", @content_item.topic_tags&.join(", "), class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", autocomplete: "off" %>
        </div>
      </div>

      <div class="flex justify-end space-x-3">
        <%= link_to "Cancel", admin_content_item_path(@content_item), class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
        <%= f.submit "Save Changes", class: "px-4 py-2 border border-transparent rounded-md text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
