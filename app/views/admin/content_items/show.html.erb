<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <%= link_to "← Back to Content Items", admin_content_items_path, class: "text-gray-600 hover:underline text-sm" %>
      <div class="mt-4 flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900"><%= @content_item.title.presence || "(No title)" %></h1>
          <p class="text-gray-500 truncate" style="max-width: 600px;">
            <% if @content_item.url_canonical.present? && @content_item.url_canonical.match?(%r{\Ahttps?://}) %>
              <%= link_to @content_item.url_canonical, @content_item.url_canonical, target: "_blank", rel: "noopener noreferrer", class: "hover:underline" %>
            <% else %>
              <%= @content_item.url_canonical %>
            <% end %>
          </p>
        </div>
        <div class="flex space-x-3">
          <%= link_to edit_admin_content_item_path(@content_item), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
            Edit
          <% end %>
          <% if @content_item.published_at.nil? %>
            <%= button_to "Publish", publish_admin_content_item_path(@content_item), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md text-sm font-medium text-white bg-green-600 hover:bg-green-700" %>
          <% else %>
            <%= button_to "Unpublish", unpublish_admin_content_item_path(@content_item), method: :post, class: "inline-flex items-center px-4 py-2 border border-yellow-600 rounded-md text-sm font-medium text-yellow-600 bg-white hover:bg-yellow-50" %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Status Badges -->
    <div class="flex flex-wrap gap-2 mb-6">
      <% if @content_item.published_at.present? %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
          ✓ Published <%= time_ago_in_words(@content_item.published_at) %> ago
        </span>
      <% else %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">Draft</span>
      <% end %>
      <% if @content_item.editorialised_at.present? %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
          ✓ AI Processed
        </span>
      <% else %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-500">
          Not editorialised
        </span>
        <%= button_to "Run AI →", editorialise_admin_content_item_path(@content_item), method: :post, class: "inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-600 text-white hover:bg-purple-700", form: { class: "inline" } %>
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Description -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Description</h3>
          </div>
          <div class="px-4 py-5 sm:p-6">
            <% if @content_item.description.present? %>
              <p class="text-gray-700"><%= @content_item.description %></p>
            <% else %>
              <p class="text-gray-400 italic">No description</p>
            <% end %>
          </div>
        </div>

        <!-- AI Summary -->
        <% if @content_item.ai_summary.present? || @content_item.why_it_matters.present? %>
          <div class="bg-purple-50 shadow rounded-lg">
            <div class="px-4 py-5 border-b border-purple-100 sm:px-6">
              <h3 class="text-lg leading-6 font-medium text-purple-900">AI Editorialisation</h3>
            </div>
            <div class="px-4 py-5 sm:p-6 space-y-4">
              <% if @content_item.ai_summary.present? %>
                <div>
                  <h4 class="text-sm font-medium text-purple-700">Summary</h4>
                  <p class="mt-1 text-gray-700"><%= @content_item.ai_summary %></p>
                </div>
              <% end %>
              <% if @content_item.why_it_matters.present? %>
                <div>
                  <h4 class="text-sm font-medium text-purple-700">Why It Matters</h4>
                  <p class="mt-1 text-gray-700"><%= @content_item.why_it_matters %></p>
                </div>
              <% end %>
              <% if @content_item.ai_suggested_tags.present? %>
                <div>
                  <h4 class="text-sm font-medium text-purple-700">Suggested Tags</h4>
                  <div class="mt-1 flex flex-wrap gap-1">
                    <% @content_item.ai_suggested_tags.each do |tag| %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs bg-purple-100 text-purple-700"><%= tag %></span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Extracted Text -->
        <% if @content_item.extracted_text.present? %>
          <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
              <h3 class="text-lg leading-6 font-medium text-gray-900">Extracted Text</h3>
            </div>
            <div class="px-4 py-5 sm:p-6">
              <pre class="text-sm text-gray-700 whitespace-pre-wrap max-h-64 overflow-y-auto"><%= truncate(@content_item.extracted_text, length: 2000) %></pre>
            </div>
          </div>
        <% end %>

        <!-- Raw Payload -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Raw Payload</h3>
          </div>
          <div class="px-4 py-5 sm:p-6">
            <pre class="text-xs text-gray-600 bg-gray-50 p-4 rounded overflow-x-auto max-h-64 overflow-y-auto"><%= JSON.pretty_generate(@content_item.raw_payload || {}) %></pre>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Metadata -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Metadata</h3>
          </div>
          <div class="px-4 py-5 sm:p-6">
            <dl class="space-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Source</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= link_to @content_item.source&.name || "Unknown", admin_source_path(@content_item.source), class: "text-blue-600 hover:underline" if @content_item.source %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Site</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @content_item.site&.name %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Content Type</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @content_item.content_type.presence || "Not set" %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Created</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @content_item.created_at.strftime("%Y-%m-%d %H:%M UTC") %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Published At</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @content_item.published_at&.strftime("%Y-%m-%d %H:%M UTC") || "Not published" %></dd>
              </div>
              <% if @content_item.scheduled_for.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Scheduled For</dt>
                  <dd class="mt-1 text-sm text-yellow-600"><%= @content_item.scheduled_for.strftime("%Y-%m-%d %H:%M UTC") %></dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>

        <!-- Tags -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Topic Tags</h3>
          </div>
          <div class="px-4 py-5 sm:p-6">
            <% if @content_item.topic_tags.present? %>
              <div class="flex flex-wrap gap-2">
                <% @content_item.topic_tags.each do |tag| %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800"><%= tag %></span>
                <% end %>
              </div>
            <% else %>
              <p class="text-sm text-gray-500">No tags</p>
            <% end %>
          </div>
        </div>

        <!-- Editorialisation Record -->
        <% if @editorialisation %>
          <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
              <h3 class="text-lg leading-6 font-medium text-gray-900">AI Processing Details</h3>
            </div>
            <div class="px-4 py-5 sm:p-6">
              <dl class="space-y-3">
                <div>
                  <dt class="text-sm font-medium text-gray-500">Status</dt>
                  <dd class="mt-1">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      <%= @editorialisation.completed? ? 'bg-green-100 text-green-800' :
                          @editorialisation.failed? ? 'bg-red-100 text-red-800' :
                          'bg-yellow-100 text-yellow-800' %>">
                      <%= @editorialisation.status.titleize %>
                    </span>
                  </dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Model</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @editorialisation.ai_model || "N/A" %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Tokens Used</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @editorialisation.tokens_used || "N/A" %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Duration</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @editorialisation.duration_ms ? "#{(@editorialisation.duration_ms / 1000.0).round(2)}s" : "N/A" %></dd>
                </div>
                <% if @editorialisation.error_message.present? %>
                  <div>
                    <dt class="text-sm font-medium text-gray-500">Error</dt>
                    <dd class="mt-1 text-sm text-red-600"><%= @editorialisation.error_message %></dd>
                  </div>
                <% end %>
              </dl>
              <div class="mt-4">
                <%= link_to "View Full Details →", admin_editorialisation_path(@editorialisation), class: "text-sm text-blue-600 hover:underline" %>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Engagement -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Engagement</h3>
          </div>
          <div class="px-4 py-5 sm:p-6">
            <div class="grid grid-cols-3 gap-4 text-center">
              <div>
                <p class="text-2xl font-semibold text-gray-900"><%= @content_item.upvotes_count %></p>
                <p class="text-xs text-gray-500">Upvotes</p>
              </div>
              <div>
                <p class="text-2xl font-semibold text-gray-900"><%= @content_item.comments_count %></p>
                <p class="text-xs text-gray-500">Comments</p>
              </div>
              <div>
                <p class="text-2xl font-semibold text-gray-900"><%= @content_item.views_count %></p>
                <p class="text-xs text-gray-500">Views</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
