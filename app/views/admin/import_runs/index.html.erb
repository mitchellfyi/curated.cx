<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center sm:justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Import Runs</h1>
        <p class="mt-2 text-gray-600">
          <% if @source %>
            Runs for: <strong><%= @source.name %></strong>
            (<%= link_to "show all", admin_import_runs_path, class: "text-blue-600 hover:underline" %>)
          <% else %>
            All import runs across sources
          <% end %>
        </p>
      </div>
      <%= link_to admin_sources_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
        Manage Sources
      <% end %>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-5 gap-6 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Total</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= number_with_delimiter(@stats[:total]) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Completed</dt>
        <dd class="mt-1 text-3xl font-semibold text-green-600"><%= number_with_delimiter(@stats[:completed]) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Failed</dt>
        <dd class="mt-1 text-3xl font-semibold text-red-600"><%= number_with_delimiter(@stats[:failed]) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Running</dt>
        <dd class="mt-1 text-3xl font-semibold text-yellow-600"><%= number_with_delimiter(@stats[:running]) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Last 24h</dt>
        <dd class="mt-1 text-3xl font-semibold text-blue-600"><%= number_with_delimiter(@stats[:last_24h]) %></dd>
      </div>
    </div>

    <!-- Filters -->
    <div class="bg-white shadow rounded-lg mb-6 p-4">
      <%= form_with url: admin_import_runs_path, method: :get, class: "flex flex-wrap gap-4" do |f| %>
        <div>
          <%= f.select :source_id,
              options_for_select([["All sources", ""]] + Source.enabled.order(:name).pluck(:name, :id), params[:source_id]),
              {},
              class: "rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
        <div>
          <%= f.select :status,
              options_for_select([["All status", ""], ["Running", "running"], ["Completed", "completed"], ["Failed", "failed"]], params[:status]),
              {},
              class: "rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
        <%= f.submit "Filter", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 cursor-pointer" %>
        <%= link_to "Clear", admin_import_runs_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300" %>
      <% end %>
    </div>

    <!-- Import Runs Table -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Source</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Started</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Duration</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Updated</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Failed</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @import_runs.each do |run| %>
            <tr class="<%= run.failed? ? 'bg-red-50' : '' %>">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= run.source.name %></div>
                <div class="text-xs text-gray-500">
                  <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium
                    <%= run.source.kind.start_with?('serp_api') ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>">
                    <%= run.source.kind.gsub('serp_api_', '').titleize %>
                  </span>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= run.started_at.strftime("%Y-%m-%d %H:%M:%S") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if run.completed_at && run.started_at %>
                  <%= ((run.completed_at - run.started_at) * 1000).round %>ms
                <% elsif run.running? %>
                  <span class="text-yellow-600">In progress...</span>
                <% else %>
                  -
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% case run.status %>
                <% when "completed" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Completed</span>
                <% when "failed" %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Failed</span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Running</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-green-600 font-medium">
                +<%= run.items_created %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-blue-600">
                <%= run.items_updated %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-red-600">
                <%= run.items_failed %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= link_to "View", admin_import_run_path(run), class: "text-blue-600 hover:underline" %>
              </td>
            </tr>
            <% if run.failed? && run.error_message.present? %>
              <tr class="bg-red-50">
                <td colspan="8" class="px-6 py-2 text-sm text-red-700">
                  <strong>Error:</strong> <%= truncate(run.error_message, length: 200) %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>

      <% if @import_runs.empty? %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No import runs yet</h3>
          <p class="mt-1 text-sm text-gray-500">Import runs will appear here when sources are processed.</p>
        </div>
      <% end %>

      <% if @import_runs.respond_to?(:total_pages) && @import_runs.total_pages > 1 %>
        <div class="px-4 py-3 border-t border-gray-200">
          <%= paginate @import_runs %>
        </div>
      <% end %>
    </div>
  </div>
</div>
