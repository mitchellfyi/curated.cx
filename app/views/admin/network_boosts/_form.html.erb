<%= form_with model: [:admin, boost], class: "bg-white rounded-lg shadow p-6" do |f| %>
  <% if boost.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-6">
      <ul class="list-disc list-inside">
        <% boost.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-6">
    <%= f.label :source_site_id, t("admin.network_boosts.form.source_site"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.select :source_site_id,
                 options_from_collection_for_select(available_sites, :id, :name, boost.source_site_id),
                 { prompt: t("admin.network_boosts.form.select_site") },
                 class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    <p class="mt-1 text-sm text-gray-500"><%= t("admin.network_boosts.form.source_site_hint") %></p>
  </div>

  <div class="mb-6">
    <%= f.label :cpc_rate, t("admin.network_boosts.form.cpc_rate"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <div class="relative rounded-md shadow-sm">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <span class="text-gray-500 sm:text-sm">$</span>
      </div>
      <%= f.number_field :cpc_rate, step: 0.01, min: 0.01, class: "pl-7 w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <p class="mt-1 text-sm text-gray-500"><%= t("admin.network_boosts.form.cpc_rate_hint") %></p>
  </div>

  <div class="mb-6">
    <%= f.label :monthly_budget, t("admin.network_boosts.form.monthly_budget"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <div class="relative rounded-md shadow-sm">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <span class="text-gray-500 sm:text-sm">$</span>
      </div>
      <%= f.number_field :monthly_budget, step: 0.01, min: 0, class: "pl-7 w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <p class="mt-1 text-sm text-gray-500"><%= t("admin.network_boosts.form.monthly_budget_hint") %></p>
  </div>

  <div class="mb-6">
    <div class="flex items-center">
      <%= f.check_box :enabled, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
      <%= f.label :enabled, t("admin.network_boosts.form.enabled"), class: "ml-2 block text-sm text-gray-900" %>
    </div>
    <p class="mt-1 text-sm text-gray-500"><%= t("admin.network_boosts.form.enabled_hint") %></p>
  </div>

  <div class="flex justify-end gap-4">
    <%= link_to t("admin.network_boosts.cancel"), admin_network_boosts_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
    <%= f.submit class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
