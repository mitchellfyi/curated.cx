<% content_for :title, t("admin.network_boosts.show_title", name: @boost.source_site.name) %>

<div class="max-w-7xl mx-auto py-8 px-4">
  <div class="flex justify-between items-center mb-6">
    <div>
      <%= link_to "&larr; #{t('admin.network_boosts.back')}".html_safe, admin_network_boosts_path, class: "text-gray-600 hover:underline" %>
      <h1 class="text-3xl font-bold mt-2"><%= @boost.source_site.name %></h1>
      <p class="text-gray-600"><%= @boost.source_site.primary_hostname %></p>
    </div>
    <div class="flex gap-2">
      <%= link_to t("admin.network_boosts.edit"), edit_admin_network_boost_path(@boost), class: "bg-gray-200 text-gray-800 px-4 py-2 rounded hover:bg-gray-300" %>
      <%= button_to t("admin.network_boosts.delete"), admin_network_boost_path(@boost), method: :delete, data: { turbo_confirm: t("admin.network_boosts.confirm_delete") }, class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700" %>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-2 md:grid-cols-6 gap-4 mb-8">
    <div class="bg-white rounded-lg shadow p-4 text-center">
      <div class="text-3xl font-bold"><%= number_with_delimiter(@stats[:impressions]) %></div>
      <div class="text-gray-600 text-sm"><%= t("admin.network_boosts.stats.impressions") %></div>
    </div>
    <div class="bg-white rounded-lg shadow p-4 text-center">
      <div class="text-3xl font-bold"><%= number_with_delimiter(@stats[:clicks]) %></div>
      <div class="text-gray-600 text-sm"><%= t("admin.network_boosts.stats.clicks") %></div>
    </div>
    <div class="bg-white rounded-lg shadow p-4 text-center">
      <div class="text-3xl font-bold text-green-600"><%= number_with_delimiter(@stats[:conversions]) %></div>
      <div class="text-gray-600 text-sm"><%= t("admin.network_boosts.stats.conversions") %></div>
    </div>
    <div class="bg-white rounded-lg shadow p-4 text-center">
      <div class="text-3xl font-bold text-blue-600"><%= @stats[:click_rate] %>%</div>
      <div class="text-gray-600 text-sm"><%= t("admin.network_boosts.stats.click_rate") %></div>
    </div>
    <div class="bg-white rounded-lg shadow p-4 text-center">
      <div class="text-3xl font-bold text-purple-600"><%= @stats[:conversion_rate] %>%</div>
      <div class="text-gray-600 text-sm"><%= t("admin.network_boosts.stats.conversion_rate") %></div>
    </div>
    <div class="bg-white rounded-lg shadow p-4 text-center">
      <div class="text-3xl font-bold">$<%= number_with_precision(@stats[:earnings] || 0, precision: 2) %></div>
      <div class="text-gray-600 text-sm"><%= t("admin.network_boosts.stats.spend") %></div>
    </div>
  </div>

  <!-- Boost Details -->
  <div class="bg-white rounded-lg shadow p-6 mb-8">
    <h2 class="text-xl font-semibold mb-4"><%= t("admin.network_boosts.details") %></h2>
    <dl class="grid grid-cols-2 gap-4">
      <div>
        <dt class="text-sm text-gray-500"><%= t("admin.network_boosts.table.status") %></dt>
        <dd class="mt-1"><%= status_indicator(@boost.enabled? ? :enabled : :disabled) %></dd>
      </div>
      <div>
        <dt class="text-sm text-gray-500"><%= t("admin.network_boosts.table.cpc_rate") %></dt>
        <dd class="mt-1 font-medium">$<%= number_with_precision(@boost.cpc_rate, precision: 2) %></dd>
      </div>
      <div>
        <dt class="text-sm text-gray-500"><%= t("admin.network_boosts.table.budget") %></dt>
        <dd class="mt-1 font-medium">
          <% if @boost.monthly_budget %>
            $<%= number_with_precision(@boost.spent_this_month, precision: 2) %> / $<%= number_with_precision(@boost.monthly_budget, precision: 2) %>
            <% if @boost.remaining_budget && @boost.remaining_budget > 0 %>
              <span class="text-sm text-gray-500">($<%= number_with_precision(@boost.remaining_budget, precision: 2) %> remaining)</span>
            <% end %>
          <% else %>
            <%= t("admin.network_boosts.unlimited") %>
          <% end %>
        </dd>
      </div>
      <div>
        <dt class="text-sm text-gray-500"><%= t("admin.network_boosts.created_at") %></dt>
        <dd class="mt-1"><%= l(@boost.created_at, format: :long) %></dd>
      </div>
    </dl>
  </div>
</div>
