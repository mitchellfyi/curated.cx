<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= t('admin.categories.title') %></h1>
        <p class="mt-2 text-gray-600"><%= t('admin.categories.description', tenant: Current.tenant&.title) %></p>
      </div>
      <%= link_to new_admin_category_path, class: "inline-flex items-center px-4 py-2 <%= button_classes(variant: :primary) %>" do %>
        <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        New Category
      <% end %>
    </div>

    <% if @categories.any? %>
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <ul class="divide-y divide-gray-200">
          <% @categories.each do |category| %>
            <li>
              <div class="px-4 py-4 sm:px-6 hover:bg-gray-50">
                <div class="flex items-center justify-between">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center">
                      <h3 class="text-lg font-medium text-gray-900">
                        <%= link_to category.name, admin_category_path(category), class: "hover:text-blue-600" %>
                      </h3>
                    </div>
                    <div class="mt-1 flex items-center text-sm text-gray-500">
                      <span>Key: <code class="bg-gray-100 px-1 rounded"><%= category.key %></code></span>
                      <span class="mx-2">â€¢</span>
                      <span><%= t('counts.listing', count: category.listings.size) %></span>
                    </div>
                  </div>
                  <div class="flex-shrink-0 flex items-center space-x-2">
                    <%= link_to t('actions.edit'), edit_admin_category_path(category), class: "text-blue-600 hover:text-blue-500 font-medium text-sm" %>
                    <%= link_to t('actions.show'), admin_category_path(category), class: "text-gray-600 hover:text-gray-500 font-medium text-sm" %>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
        </svg>
        <h3 class="mt-4 text-sm font-medium text-gray-900">No categories</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new category.</p>
        <div class="mt-6">
          <%= link_to new_admin_category_path, class: "inline-flex items-center px-4 py-2 <%= button_classes(variant: :primary) %>" do %>
            <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            New Category
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
