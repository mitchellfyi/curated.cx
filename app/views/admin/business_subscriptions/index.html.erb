<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-2xl font-bold text-gray-900">Business Subscriptions</h1>
      <p class="mt-1 text-sm text-gray-500">Manage pro and premium business listing subscriptions</p>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
      <div class="bg-white rounded-lg shadow p-4">
        <p class="text-xs font-medium text-gray-500 uppercase">Total</p>
        <p class="mt-1 text-2xl font-bold text-gray-900"><%= @total_subscriptions %></p>
      </div>
      <div class="bg-white rounded-lg shadow p-4">
        <p class="text-xs font-medium text-gray-500 uppercase">Active</p>
        <p class="mt-1 text-2xl font-bold text-green-600"><%= @active_subscriptions %></p>
      </div>
      <div class="bg-white rounded-lg shadow p-4">
        <p class="text-xs font-medium text-gray-500 uppercase">Pro</p>
        <p class="mt-1 text-2xl font-bold text-blue-600"><%= @pro_subscriptions %></p>
      </div>
      <div class="bg-white rounded-lg shadow p-4">
        <p class="text-xs font-medium text-gray-500 uppercase">Premium</p>
        <p class="mt-1 text-2xl font-bold text-purple-600"><%= @premium_subscriptions %></p>
      </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow mb-6 p-4">
      <%= form_with url: admin_business_subscriptions_path, method: :get, class: "flex flex-wrap gap-4 items-end" do |f| %>
        <div>
          <label class="block text-xs font-medium text-gray-500 mb-1">Tier</label>
          <%= f.select :tier, options_for_select(BusinessSubscription::TIERS.map { |t| [t.titleize, t] }, params[:tier]), { include_blank: "All" }, class: "block w-full rounded-md border-gray-300 text-sm" %>
        </div>
        <div>
          <label class="block text-xs font-medium text-gray-500 mb-1">Status</label>
          <%= f.select :status, options_for_select(BusinessSubscription::STATUSES.map { |s| [s.titleize, s] }, params[:status]), { include_blank: "All" }, class: "block w-full rounded-md border-gray-300 text-sm" %>
        </div>
        <div>
          <%= f.submit "Filter", class: "px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-md hover:bg-gray-200" %>
        </div>
        <div>
          <%= link_to "Clear", admin_business_subscriptions_path, class: "px-4 py-2 text-sm text-gray-500 hover:text-gray-700" %>
        </div>
      <% end %>
    </div>

    <!-- Table -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <% if @subscriptions.any? %>
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Entry</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Subscriber</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tier</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Period</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @subscriptions.each do |subscription| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4">
                  <div class="text-sm font-medium text-gray-900 truncate max-w-xs"><%= subscription.entry&.title || "Unknown" %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= subscription.user&.email || "Unknown" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% tier_class = case subscription.tier
                     when "pro" then "bg-blue-100 text-blue-800"
                     when "premium" then "bg-purple-100 text-purple-800"
                     else "bg-gray-100 text-gray-800"
                     end %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= tier_class %>">
                    <%= subscription.tier.titleize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% status_class = case subscription.status
                     when "active" then "bg-green-100 text-green-800"
                     when "past_due" then "bg-yellow-100 text-yellow-800"
                     when "cancelled" then "bg-red-100 text-red-800"
                     else "bg-gray-100 text-gray-800"
                     end %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_class %>">
                    <%= subscription.status.titleize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <% if subscription.current_period_start && subscription.current_period_end %>
                    <div><%= subscription.current_period_start.strftime("%b %d") %> - <%= subscription.current_period_end.strftime("%b %d, %Y") %></div>
                  <% else %>
                    <span class="text-gray-400">â€”</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to "View", admin_business_subscription_path(subscription), class: "text-blue-600 hover:text-blue-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="px-6 py-4 border-t border-gray-200">
          <%= paginate @subscriptions %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No business subscriptions</h3>
          <p class="mt-1 text-sm text-gray-500">Subscriptions will appear here when businesses upgrade to Pro or Premium.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
