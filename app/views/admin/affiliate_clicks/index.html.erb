<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8 flex justify-between items-start">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= t("admin.affiliate_clicks.title") %></h1>
        <p class="mt-2 text-gray-600"><%= t("admin.affiliate_clicks.description") %></p>
      </div>
      <%= link_to export_admin_affiliate_clicks_path(period: @period, category_id: @category_id, format: :csv),
                  class: button_classes(variant: :secondary) do %>
        <svg class="mr-2 -ml-1 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
        </svg>
        <%= t("admin.affiliate_clicks.export_csv") %>
      <% end %>
    </div>

    <%# Filters %>
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-4 py-5 sm:p-6">
        <%= form_with url: admin_affiliate_clicks_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |f| %>
          <div>
            <%= f.label :period, t("admin.affiliate_clicks.filters.period"), class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :period,
                         options_for_select([
                           [t("admin.affiliate_clicks.periods.7d"), "7d"],
                           [t("admin.affiliate_clicks.periods.30d"), "30d"],
                           [t("admin.affiliate_clicks.periods.90d"), "90d"],
                           [t("admin.affiliate_clicks.periods.365d"), "365d"]
                         ], @period),
                         {},
                         class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md" %>
          </div>

          <div>
            <%= f.label :category_id, t("admin.affiliate_clicks.filters.category"), class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :category_id,
                         options_for_select([[t("admin.affiliate_clicks.filters.all_categories"), ""]] + @categories.map { |c| [c.name, c.id] }, @category_id),
                         {},
                         class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md" %>
          </div>

          <%= f.submit t("admin.affiliate_clicks.filters.apply"),
                       class: button_classes(variant: :primary) %>
        <% end %>
      </div>
    </div>

    <%# Stats Cards %>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"/>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate"><%= t("admin.affiliate_clicks.stats.total_clicks") %></dt>
                <dd class="text-lg font-medium text-gray-900"><%= number_with_delimiter(@stats[:total_clicks]) %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate"><%= t("admin.affiliate_clicks.stats.unique_entries") %></dt>
                <dd class="text-lg font-medium text-gray-900"><%= number_with_delimiter(@stats[:unique_entries]) %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate"><%= t("admin.affiliate_clicks.stats.clicks_today") %></dt>
                <dd class="text-lg font-medium text-gray-900"><%= number_with_delimiter(@stats[:clicks_today]) %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate"><%= t("admin.affiliate_clicks.stats.clicks_this_week") %></dt>
                <dd class="text-lg font-medium text-gray-900"><%= number_with_delimiter(@stats[:clicks_this_week]) %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%# Chart %>
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4"><%= t("admin.affiliate_clicks.chart_title") %></h3>
        <div class="h-72">
          <%= line_chart @daily_clicks,
                         library: {
                           scales: {
                             y: { beginAtZero: true, ticks: { stepSize: 1 } }
                           },
                           plugins: {
                             legend: { display: false }
                           }
                         } %>
        </div>
      </div>
    </div>

    <%# Top Listings %>
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4"><%= t("admin.affiliate_clicks.top_entries") %></h3>
        <% if @top_entries.any? %>
          <div class="flow-root">
            <ul class="-my-5 divide-y divide-gray-200">
              <% @top_entries.each_with_index do |item, index| %>
                <% next unless item[:entry] %>
                <li class="py-4">
                  <div class="flex items-center space-x-4">
                    <div class="flex-shrink-0 w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center">
                      <span class="text-sm font-medium text-gray-600"><%= index + 1 %></span>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900 truncate">
                        <%= link_to item[:entry].title, admin_entry_path(item[:entry]), class: "hover:text-blue-600" %>
                      </p>
                      <p class="text-sm text-gray-500 truncate">
                        <%= item[:entry].category&.name %> &bull; <%= item[:entry].domain %>
                      </p>
                    </div>
                    <div class="flex-shrink-0">
                      <%= badge("#{number_with_delimiter(item[:click_count])} #{t('admin.affiliate_clicks.clicks')}", :blue) %>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        <% else %>
          <p class="text-gray-500 text-center py-8"><%= t("admin.affiliate_clicks.no_clicks") %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
