<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <%= link_to "← Back to Users", admin_users_path, class: "text-gray-600 hover:underline text-sm" %>
      <div class="mt-4 flex items-center justify-between">
        <div class="flex items-center">
          <% if @user.avatar_url.present? %>
            <%= image_tag @user.avatar_url, class: "h-16 w-16 rounded-full mr-4" %>
          <% else %>
            <div class="h-16 w-16 rounded-full bg-gray-200 flex items-center justify-center mr-4">
              <span class="text-gray-500 text-2xl font-bold"><%= @user.email.first.upcase %></span>
            </div>
          <% end %>
          <div>
            <h1 class="text-3xl font-bold text-gray-900">
              <%= @user.display_name.presence || @user.email %>
              <% if @user.admin? %>
                <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">Super Admin</span>
              <% end %>
            </h1>
            <p class="text-gray-500"><%= @user.email %></p>
          </div>
        </div>
        <div class="flex space-x-3">
          <%= link_to edit_admin_user_path(@user), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
            Edit
          <% end %>
          <% if current_user.admin? && !@user.admin? %>
            <%= button_to "Make Admin", make_admin_admin_user_path(@user), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md text-sm font-medium text-white bg-red-600 hover:bg-red-700", data: { confirm: "Are you sure you want to make this user a super admin?" } %>
          <% elsif current_user.admin? && @user.admin? && @user != current_user %>
            <%= button_to "Remove Admin", remove_admin_admin_user_path(@user), method: :post, class: "inline-flex items-center px-4 py-2 border border-red-600 rounded-md text-sm font-medium text-red-600 bg-white hover:bg-red-50", data: { confirm: "Are you sure you want to remove admin status?" } %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- User Details -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">User Details</h3>
        </div>
        <div class="px-4 py-5 sm:p-6">
          <dl class="space-y-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Email</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @user.email %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Display Name</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @user.display_name.presence || "Not set" %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Bio</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @user.bio.presence || "Not set" %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Status</dt>
              <dd class="mt-1">
                <% if @user.confirmed_at.present? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Confirmed</span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Pending</span>
                <% end %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Joined</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @user.created_at.strftime("%Y-%m-%d %H:%M UTC") %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Last Sign In</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @user.last_sign_in_at&.strftime("%Y-%m-%d %H:%M UTC") || "Never" %></dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Roles -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Roles & Permissions</h3>
        </div>
        <div class="px-4 py-5 sm:p-6">
          <% if @user.admin? %>
            <div class="mb-4 p-3 bg-red-50 rounded-lg">
              <p class="text-sm text-red-800 font-medium">Super Admin</p>
              <p class="text-xs text-red-600">Has full access to all tenants and settings</p>
            </div>
          <% end %>

          <% if @roles.any? %>
            <ul class="space-y-3">
              <% @roles.each do |role| %>
                <li class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= role.name.titleize %></p>
                    <% if role.resource %>
                      <p class="text-xs text-gray-500">
                        <%= role.resource_type %>: <%= role.resource.try(:title) || role.resource.try(:name) %>
                      </p>
                    <% end %>
                  </div>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-sm text-gray-500">No tenant-specific roles</p>
          <% end %>
        </div>
      </div>

      <!-- Actions -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Actions</h3>
        </div>
        <div class="px-4 py-5 sm:p-6 space-y-4">
          <% if Current.site %>
            <% ban = SiteBan.find_by(site: Current.site, user: @user) %>
            <% if ban %>
              <div class="p-3 bg-red-50 rounded-lg mb-4">
                <p class="text-sm text-red-800 font-medium">Banned from <%= Current.site.name %></p>
                <p class="text-xs text-red-600">Reason: <%= ban.reason %></p>
              </div>
              <%= button_to "Unban User", unban_admin_user_path(@user), method: :post, class: "w-full inline-flex justify-center items-center px-4 py-2 border border-green-600 rounded-md text-sm font-medium text-green-600 bg-white hover:bg-green-50" %>
            <% else %>
              <%= button_to "Ban User", ban_admin_user_path(@user), method: :post, class: "w-full inline-flex justify-center items-center px-4 py-2 border border-red-600 rounded-md text-sm font-medium text-red-600 bg-white hover:bg-red-50", data: { confirm: "Are you sure you want to ban this user?" } %>
            <% end %>
          <% end %>

          <%= link_to profile_path(@user), class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50", target: "_blank" do %>
            View Public Profile →
          <% end %>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="mt-8 grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Recent Comments -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Comments</h3>
        </div>
        <ul class="divide-y divide-gray-200 max-h-64 overflow-y-auto">
          <% @recent_activity[:comments].each do |comment| %>
            <li class="px-4 py-3">
              <p class="text-sm text-gray-900 truncate"><%= truncate(comment.body, length: 100) %></p>
              <p class="text-xs text-gray-500"><%= time_ago_in_words(comment.created_at) %> ago</p>
            </li>
          <% end %>
          <% if @recent_activity[:comments].empty? %>
            <li class="px-4 py-3 text-sm text-gray-500">No comments yet</li>
          <% end %>
        </ul>
      </div>

      <!-- Recent Submissions -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Submissions</h3>
        </div>
        <ul class="divide-y divide-gray-200 max-h-64 overflow-y-auto">
          <% @recent_activity[:submissions].each do |submission| %>
            <li class="px-4 py-3">
              <p class="text-sm text-gray-900 truncate"><%= submission.title %></p>
              <p class="text-xs text-gray-500">
                <%= submission.status.titleize %> · <%= time_ago_in_words(submission.created_at) %> ago
              </p>
            </li>
          <% end %>
          <% if @recent_activity[:submissions].empty? %>
            <li class="px-4 py-3 text-sm text-gray-500">No submissions yet</li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
