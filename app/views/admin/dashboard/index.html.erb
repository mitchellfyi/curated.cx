<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
      <p class="mt-2 text-gray-600">Manage content and settings for <%= @tenant.title %></p>
      <span class="sr-only" id="tenant-title-raw"><%= Current.tenant.title %></span>
    </div>

    <%# ==================== ALERTS ==================== %>
    <% if @system_stats[:submissions_pending].to_i > 0 || @system_stats[:flags_open].to_i > 0 || @system_stats[:imports_failed_today].to_i > 0 || @system_stats[:editorialisations_failed_today].to_i > 0 || @system_stats[:workflow_pauses_active].to_i > 0 %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
        <% if @system_stats[:submissions_pending].to_i > 0 %>
          <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-yellow-700">
                  <strong><%= @system_stats[:submissions_pending] %></strong> pending submissions
                  <%= link_to "Review →", admin_submissions_path, class: "font-medium underline" %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
        <% if @system_stats[:flags_open].to_i > 0 %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 6a3 3 0 013-3h10a1 1 0 01.8 1.6L14.25 8l2.55 3.4A1 1 0 0116 13H6a1 1 0 00-1 1v3a1 1 0 11-2 0V6z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-red-700">
                  <strong><%= @system_stats[:flags_open] %></strong> open flags
                  <%= link_to "Review →", admin_flags_path, class: "font-medium underline" %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
        <% if @system_stats[:imports_failed_today].to_i > 0 %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-red-700">
                  <strong><%= @system_stats[:imports_failed_today] %></strong> failed imports today
                  <%= link_to "View →", imports_admin_observability_path, class: "font-medium underline" %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
        <% if @system_stats[:editorialisations_failed_today].to_i > 0 %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-red-700">
                  <strong><%= @system_stats[:editorialisations_failed_today] %></strong> failed AI processing today
                  <%= link_to "View →", editorialisations_admin_observability_path, class: "font-medium underline" %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
        <% if @system_stats[:workflow_pauses_active].to_i > 0 %>
          <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zM7 8a1 1 0 012 0v4a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v4a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-yellow-700">
                  <strong><%= @system_stats[:workflow_pauses_active] %></strong> active workflow pauses
                  <%= link_to "Manage →", admin_workflow_pauses_path, class: "font-medium underline" %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <%# ==================== SUPER ADMIN SECTION ==================== %>
    <% if current_user&.admin? %>
      <div class="mb-8">
        <h2 class="text-xs font-bold text-red-600 uppercase tracking-wider mb-3 flex items-center">
          <svg class="mr-1.5 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 8a6 6 0 01-7.743 5.743L10 14l-1 1-1 1H6v2H2v-4l4.257-4.257A6 6 0 1118 8zm-6-4a1 1 0 100 2 2 2 0 012 2 1 1 0 102 0 4 4 0 00-4-4z" clip-rule="evenodd"></path>
          </svg>
          Super Admin
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <%= render "admin/dashboard/section_card",
            title: "Tenants",
            link: admin_tenants_path,
            stats: [
              { label: "Total tenants", value: @system_stats[:tenants_count] || 0 },
              { label: "Total users", value: number_with_delimiter(@system_stats[:users]) },
              { label: "New this week", value: "+#{@system_stats[:users_this_week]}", color: @system_stats[:users_this_week].to_i > 0 ? :green : nil }
            ] %>
        </div>
      </div>
    <% end %>

    <%# ==================== API USAGE ==================== %>
    <% if @ai_usage.present? || @serp_api_usage.present? %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <% if @ai_usage.present? %>
          <%= link_to ai_usage_admin_observability_path, class: "block bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow" do %>
            <div class="p-5">
              <div class="flex items-center justify-between mb-3">
                <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide">AI Usage</h3>
                <% if @ai_usage[:is_paused] %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Paused</span>
                <% elsif !@ai_usage[:on_track] %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Over budget</span>
                <% end %>
              </div>
              <div class="flex items-baseline space-x-2 mb-2">
                <span class="text-2xl font-bold <%= @ai_usage[:monthly_cost_percent].to_f > 90 ? 'text-red-600' : @ai_usage[:monthly_cost_percent].to_f > 70 ? 'text-yellow-600' : 'text-gray-900' %>">
                  $<%= @ai_usage[:monthly_cost_dollars] %>
                </span>
                <span class="text-sm text-gray-500">/ $<%= @ai_usage[:monthly_cost_limit_dollars] %> this month</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2 mb-3">
                <div class="h-2 rounded-full <%= @ai_usage[:monthly_cost_percent].to_f > 90 ? 'bg-red-500' : @ai_usage[:monthly_cost_percent].to_f > 70 ? 'bg-yellow-500' : 'bg-green-500' %>" style="width: <%= [@ai_usage[:monthly_cost_percent].to_f, 100].min %>%"></div>
              </div>
              <dl class="space-y-1">
                <div class="flex justify-between text-sm">
                  <dt class="text-gray-500">Projected</dt>
                  <dd class="font-medium <%= @ai_usage[:on_track] ? 'text-green-600' : 'text-red-600' %>">$<%= @ai_usage[:projected_monthly_dollars] %></dd>
                </div>
                <div class="flex justify-between text-sm">
                  <dt class="text-gray-500">Tokens used</dt>
                  <dd class="font-medium text-gray-900"><%= number_with_delimiter(@ai_usage[:monthly_tokens]) %> (<%= @ai_usage[:monthly_token_percent] %>%)</dd>
                </div>
                <div class="flex justify-between text-sm">
                  <dt class="text-gray-500">Requests today</dt>
                  <dd class="font-medium text-gray-900"><%= @ai_usage[:requests_today] %></dd>
                </div>
              </dl>
            </div>
            <div class="bg-gray-50 px-5 py-2">
              <span class="text-xs font-medium text-blue-600">View AI usage details &rarr;</span>
            </div>
          <% end %>
        <% end %>

        <% if @serp_api_usage.present? %>
          <%= link_to serp_api_admin_observability_path, class: "block bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow" do %>
            <div class="p-5">
              <div class="flex items-center justify-between mb-3">
                <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide">SerpAPI Usage</h3>
                <% unless @serp_api_usage[:on_track] %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Over budget</span>
                <% end %>
              </div>
              <div class="flex items-baseline space-x-2 mb-2">
                <span class="text-2xl font-bold <%= @serp_api_usage[:monthly_percent].to_f > 90 ? 'text-red-600' : @serp_api_usage[:monthly_percent].to_f > 70 ? 'text-yellow-600' : 'text-gray-900' %>">
                  <%= @serp_api_usage[:monthly_used] %>
                </span>
                <span class="text-sm text-gray-500">/ <%= @serp_api_usage[:monthly_limit] %> requests this month</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2 mb-3">
                <div class="h-2 rounded-full <%= @serp_api_usage[:monthly_percent].to_f > 90 ? 'bg-red-500' : @serp_api_usage[:monthly_percent].to_f > 70 ? 'bg-yellow-500' : 'bg-green-500' %>" style="width: <%= [@serp_api_usage[:monthly_percent].to_f, 100].min %>%"></div>
              </div>
              <dl class="space-y-1">
                <div class="flex justify-between text-sm">
                  <dt class="text-gray-500">Projected monthly</dt>
                  <dd class="font-medium <%= @serp_api_usage[:on_track] ? 'text-green-600' : 'text-red-600' %>"><%= @serp_api_usage[:projected_monthly] %></dd>
                </div>
                <div class="flex justify-between text-sm">
                  <dt class="text-gray-500">Used today</dt>
                  <dd class="font-medium text-gray-900"><%= @serp_api_usage[:daily_used] %></dd>
                </div>
              </dl>
            </div>
            <div class="bg-gray-50 px-5 py-2">
              <span class="text-xs font-medium text-blue-600">View SerpAPI details &rarr;</span>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <%# ==================== SECTION CARDS ==================== %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
      <%# Content %>
      <%= render "admin/dashboard/section_card",
        title: "Content",
        link: admin_content_items_path,
        alert_count: @system_stats[:submissions_pending].to_i,
        stats: [
          { label: "Content items", value: number_with_delimiter(@system_stats[:content_items]) },
          { label: "Published listings", value: number_with_delimiter(@stats[:published_listings]) },
          { label: "Pending submissions", value: @system_stats[:submissions_pending], color: @system_stats[:submissions_pending].to_i > 0 ? :yellow : nil },
          { label: "Notes", value: number_with_delimiter(@system_stats[:notes]) }
        ] %>

      <%# Sources %>
      <%= render "admin/dashboard/section_card",
        title: "Sources",
        link: admin_sources_path,
        alert_count: @system_stats[:imports_failed_today].to_i,
        stats: [
          { label: "Enabled sources", value: "#{@system_stats[:sources_enabled]} / #{@system_stats[:sources_total]}" },
          { label: "Imports today", value: @system_stats[:imports_today], color: :blue },
          { label: "Failed today", value: @system_stats[:imports_failed_today], color: @system_stats[:imports_failed_today].to_i > 0 ? :red : nil }
        ] %>

      <%# Commerce %>
      <%= render "admin/dashboard/section_card",
        title: "Commerce",
        link: admin_digital_products_path,
        stats: [
          { label: "Digital products", value: @system_stats[:digital_products] },
          { label: "Affiliate clicks today", value: @system_stats[:affiliate_clicks_today], color: @system_stats[:affiliate_clicks_today].to_i > 0 ? :green : nil },
          { label: "Live streams", value: @system_stats[:live_streams] }
        ] %>

      <%# Boosts / Network %>
      <%= render "admin/dashboard/section_card",
        title: "Boosts / Network",
        link: admin_network_boosts_path,
        stats: [
          { label: "Active boosts", value: @system_stats[:network_boosts_enabled] },
          { label: "Total clicks", value: number_with_delimiter(@system_stats[:boost_clicks_total]) },
          { label: "Pending payouts", value: @system_stats[:boost_payouts_pending], color: @system_stats[:boost_payouts_pending].to_i > 0 ? :yellow : nil }
        ] %>

      <%# Subscribers %>
      <%= render "admin/dashboard/section_card",
        title: "Subscribers",
        link: admin_digest_subscriptions_path,
        stats: [
          { label: "Active subscribers", value: number_with_delimiter(@system_stats[:digest_subscribers_active]) },
          { label: "Email sequences", value: @system_stats[:email_sequences_enabled] },
          { label: "Tags", value: @system_stats[:subscriber_tags] },
          { label: "Referrals", value: @system_stats[:referrals] }
        ] %>

      <%# Community %>
      <%= render "admin/dashboard/section_card",
        title: "Community",
        link: admin_comments_path,
        alert_count: @system_stats[:comments_hidden].to_i,
        stats: [
          { label: "Comments", value: number_with_delimiter(@system_stats[:comments]) },
          { label: "Hidden comments", value: @system_stats[:comments_hidden], color: @system_stats[:comments_hidden].to_i > 0 ? :yellow : nil },
          { label: "Discussions", value: @system_stats[:discussions] }
        ] %>

      <%# Moderation %>
      <%= render "admin/dashboard/section_card",
        title: "Moderation",
        link: admin_flags_path,
        alert_count: @system_stats[:flags_open].to_i,
        stats: [
          { label: "Open flags", value: @system_stats[:flags_open], color: @system_stats[:flags_open].to_i > 0 ? :red : nil },
          { label: "Active site bans", value: @system_stats[:site_bans_active], color: @system_stats[:site_bans_active].to_i > 0 ? :red : nil }
        ] %>

      <%# Taxonomy %>
      <%= render "admin/dashboard/section_card",
        title: "Taxonomy",
        link: admin_categories_path,
        stats: [
          { label: "Categories", value: @stats[:total_categories] },
          { label: "Taxonomies", value: @system_stats[:taxonomies] },
          { label: "Tagging rules", value: @system_stats[:tagging_rules_enabled] }
        ] %>

      <%# System %>
      <%= render "admin/dashboard/section_card",
        title: "System",
        link: admin_observability_path,
        alert_count: @system_stats[:editorialisations_failed_today].to_i + @system_stats[:workflow_pauses_active].to_i,
        stats: [
          { label: "AI processing pending", value: @system_stats[:editorialisations_pending], color: @system_stats[:editorialisations_pending].to_i > 0 ? :yellow : nil },
          { label: "AI failed today", value: @system_stats[:editorialisations_failed_today], color: @system_stats[:editorialisations_failed_today].to_i > 0 ? :red : nil },
          { label: "Workflow pauses", value: @system_stats[:workflow_pauses_active], color: @system_stats[:workflow_pauses_active].to_i > 0 ? :yellow : nil }
        ] %>

      <%# Settings %>
      <%= render "admin/dashboard/section_card",
        title: "Settings",
        link: admin_sites_path,
        stats: [
          { label: "Sites", value: @system_stats[:sites] },
          { label: "Domains", value: @system_stats[:domains] }
        ] %>
    </div>

    <%# ==================== QUICK ACTIONS ==================== %>
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Quick Actions</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
          <%= link_to admin_categories_path, class: button_classes(variant: :secondary) do %>
            <svg class="mr-2 -ml-1 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
            Manage Categories
          <% end %>

          <%= link_to admin_listings_path, class: button_classes(variant: :secondary) do %>
            <svg class="mr-2 -ml-1 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Manage Listings
          <% end %>

          <%= link_to admin_sources_path, class: button_classes(variant: :secondary) do %>
            <svg class="mr-2 -ml-1 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
            </svg>
            Manage Sources
          <% end %>

          <%= link_to admin_observability_path, class: button_classes(variant: :secondary) do %>
            <svg class="mr-2 -ml-1 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
            </svg>
            Observability
          <% end %>

          <%= link_to admin_sites_path, class: button_classes(variant: :secondary) do %>
            <svg class="mr-2 -ml-1 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            Manage Sites
          <% end %>

          <%= link_to new_admin_listing_path, class: button_classes(variant: :primary) do %>
            <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            New Listing
          <% end %>

          <%= link_to new_admin_category_path, class: button_classes(variant: :primary) do %>
            <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            New Category
          <% end %>

          <% if @system_stats[:submissions_pending].to_i > 0 %>
            <%= link_to admin_submissions_path, class: button_classes(variant: :warning_outline) do %>
              <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
              Review Submissions (<%= @system_stats[:submissions_pending] %>)
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <%# ==================== RECENT ACTIVITY ==================== %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <%# Recent Listings %>
      <% if @recent_listings.any? %>
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Recent Listings</h3>
            <div class="flow-root">
              <ul class="-my-5 divide-y divide-gray-200">
                <% @recent_listings.each do |listing| %>
                  <li class="py-4">
                    <div class="flex items-center space-x-4">
                      <div class="flex-shrink-0">
                        <%= badge(listing.category&.name || t('admin.dashboard.uncategorized'), :blue) %>
                      </div>
                      <div class="flex-1 min-w-0">
                        <p class="text-sm font-medium text-gray-900 truncate">
                          <%= link_to listing.title, admin_listing_path(listing), class: "hover:text-blue-600" %>
                        </p>
                        <p class="text-sm text-gray-500 truncate">
                          <%= listing.domain %> &bull; <%= time_ago_in_words(listing.created_at) %> ago
                        </p>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
            <div class="mt-6">
              <%= link_to t('admin.dashboard.view_all_listings'), admin_listings_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
            </div>
          </div>
        </div>
      <% end %>

      <%# Recent Import Runs %>
      <% if @recent_activity[:import_runs].present? %>
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Recent Imports</h3>
            <div class="flow-root">
              <ul class="-my-5 divide-y divide-gray-200">
                <% @recent_activity[:import_runs].each do |run| %>
                  <li class="py-4">
                    <div class="flex items-center space-x-4">
                      <div class="flex-shrink-0">
                        <%= admin_status_badge(run.status) %>
                      </div>
                      <div class="flex-1 min-w-0">
                        <p class="text-sm font-medium text-gray-900 truncate">
                          <%= run.source&.name || "Unknown source" %>
                        </p>
                        <p class="text-sm text-gray-500">
                          <%= admin_time_ago(run.started_at) %>
                          <% if run.items_created.to_i > 0 %>
                            &bull; <span class="text-green-600"><%= run.items_created %> created</span>
                          <% end %>
                        </p>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
            <div class="mt-6">
              <%= link_to "View all imports", admin_import_runs_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
