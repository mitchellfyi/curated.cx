<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
      <p class="mt-2 text-gray-600">Manage content and settings for <%= @tenant.title %></p>
      <span class="sr-only" id="tenant-title-raw"><%= Current.tenant.title.html_safe %></span>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Categories</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @stats[:total_categories] %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Listings</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @stats[:total_listings] %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Published</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @stats[:published_listings] %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Today</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @stats[:listings_today] %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Alerts Section -->
    <% if @system_stats[:submissions_pending].to_i > 0 || @system_stats[:flags_open].to_i > 0 || @system_stats[:imports_failed_today].to_i > 0 %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <% if @system_stats[:submissions_pending].to_i > 0 %>
          <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-yellow-700">
                  <strong><%= @system_stats[:submissions_pending] %></strong> pending submissions
                  <%= link_to "Review →", admin_submissions_path, class: "font-medium underline" %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
        <% if @system_stats[:flags_open].to_i > 0 %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 6a3 3 0 013-3h10a1 1 0 01.8 1.6L14.25 8l2.55 3.4A1 1 0 0116 13H6a1 1 0 00-1 1v3a1 1 0 11-2 0V6z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-red-700">
                  <strong><%= @system_stats[:flags_open] %></strong> open flags
                  <%= link_to "Review →", admin_flags_path, class: "font-medium underline" %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
        <% if @system_stats[:imports_failed_today].to_i > 0 %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-red-700">
                  <strong><%= @system_stats[:imports_failed_today] %></strong> failed imports today
                  <%= link_to "View →", imports_admin_observability_path, class: "font-medium underline" %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- System Stats -->
    <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg p-4">
        <dt class="text-xs font-medium text-gray-500 truncate">Users</dt>
        <dd class="mt-1 text-xl font-semibold text-gray-900"><%= number_with_delimiter(@system_stats[:users]) %></dd>
        <% if @system_stats[:users_this_week].to_i > 0 %>
          <dd class="text-xs text-green-600">+<%= @system_stats[:users_this_week] %> this week</dd>
        <% end %>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-4">
        <dt class="text-xs font-medium text-gray-500 truncate">Content Items</dt>
        <dd class="mt-1 text-xl font-semibold text-gray-900"><%= number_with_delimiter(@system_stats[:content_items]) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-4">
        <dt class="text-xs font-medium text-gray-500 truncate">Notes</dt>
        <dd class="mt-1 text-xl font-semibold text-gray-900"><%= number_with_delimiter(@system_stats[:notes]) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-4">
        <dt class="text-xs font-medium text-gray-500 truncate">Comments</dt>
        <dd class="mt-1 text-xl font-semibold text-gray-900"><%= number_with_delimiter(@system_stats[:comments]) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-4">
        <dt class="text-xs font-medium text-gray-500 truncate">Imports Today</dt>
        <dd class="mt-1 text-xl font-semibold text-blue-600"><%= @system_stats[:imports_today] %></dd>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Quick Actions</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
          <%= link_to admin_categories_path, class: button_classes(variant: :secondary) do %>
            <svg class="mr-2 -ml-1 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
            Manage Categories
          <% end %>

          <%= link_to admin_listings_path, class: button_classes(variant: :secondary) do %>
            <svg class="mr-2 -ml-1 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Manage Listings
          <% end %>

          <%= link_to new_admin_category_path, class: button_classes(variant: :primary) do %>
            <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            New Category
          <% end %>

          <%= link_to new_admin_listing_path, class: button_classes(variant: :success) do %>
            <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            New Listing
          <% end %>

          <%= link_to admin_sites_path, class: button_classes(variant: :secondary) do %>
            <svg class="mr-2 -ml-1 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            Manage Sites
          <% end %>
        </div>
      </div>
    </div>

    <!-- Recent Listings -->
    <% if @recent_listings.any? %>
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Recent Listings</h3>
          <div class="flow-root">
            <ul class="-my-5 divide-y divide-gray-200">
              <% @recent_listings.each do |listing| %>
                <li class="py-4">
                  <div class="flex items-center space-x-4">
                    <div class="flex-shrink-0">
                      <%= badge(listing.category&.name || t('admin.dashboard.uncategorized'), :blue) %>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900 truncate">
                        <%= link_to listing.title, admin_listing_path(listing), class: "hover:text-blue-600" %>
                      </p>
                      <p class="text-sm text-gray-500 truncate">
                        <%= listing.domain %> • <%= time_ago_in_words(listing.created_at) %> ago
                      </p>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
          <div class="mt-6">
            <%= link_to t('admin.dashboard.view_all_listings'), admin_listings_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
