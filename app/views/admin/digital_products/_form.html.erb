<%= form_with model: [:admin, digital_product], local: true, class: "mt-6 space-y-6" do |f| %>
  <% if digital_product.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= t("admin.digital_products.form.errors", count: digital_product.errors.count) %></h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% digital_product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :title, t("admin.digital_products.form.title"), class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: t("admin.digital_products.form.title_placeholder") %>
  </div>

  <div>
    <%= f.label :slug, t("admin.digital_products.form.slug"), class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :slug, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: t("admin.digital_products.form.slug_placeholder") %>
    <p class="mt-1 text-xs text-gray-500"><%= t("admin.digital_products.form.slug_hint") %></p>
  </div>

  <div>
    <%= f.label :description, t("admin.digital_products.form.description"), class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: t("admin.digital_products.form.description_placeholder") %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :price_cents, t("admin.digital_products.form.price_cents"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :price_cents, min: 0, step: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      <p class="mt-1 text-xs text-gray-500"><%= t("admin.digital_products.form.price_hint") %></p>
    </div>

    <div>
      <%= f.label :status, t("admin.digital_products.form.status"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :status, DigitalProduct.statuses.keys.map { |s| [t("admin.digital_products.statuses.#{s}"), s] }, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>
  </div>

  <div>
    <%= f.label :file, t("admin.digital_products.form.file"), class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md">
      <div class="space-y-1 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
          <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
        <div class="flex text-sm text-gray-600">
          <%= f.file_field :file, class: "sr-only", accept: ".pdf,.zip,.epub,.mp3,.mp4,.png,.jpg,.jpeg" %>
          <%= f.label :file, t("admin.digital_products.form.upload_file"), class: "relative cursor-pointer rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none" %>
          <p class="pl-1"><%= t("admin.digital_products.form.drag_drop") %></p>
        </div>
        <p class="text-xs text-gray-500"><%= t("admin.digital_products.form.file_types") %></p>
      </div>
    </div>
    <% if digital_product.file.attached? %>
      <div class="mt-2 p-2 bg-gray-50 rounded flex items-center justify-between">
        <span class="text-sm text-gray-600"><%= digital_product.file.filename %> (<%= number_to_human_size(digital_product.file.byte_size) %>)</span>
      </div>
    <% end %>
  </div>

  <div class="flex justify-end space-x-3 pt-4 border-t">
    <%= link_to t("admin.digital_products.form.cancel"), digital_product.persisted? ? admin_digital_product_path(digital_product) : admin_digital_products_path, class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
    <%= f.submit digital_product.persisted? ? t("admin.digital_products.form.update") : t("admin.digital_products.form.create"), class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
