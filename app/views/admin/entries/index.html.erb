<% content_for :title, "Entries" %>

<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center sm:justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Entries</h1>
        <p class="mt-2 text-gray-600">
          <% if @source %>
            Feed from: <strong><%= @source.name %></strong>
            (<%= link_to "show all", admin_entries_path, class: "text-blue-600 hover:underline" %>)
          <% else %>
            Feed and directory content
          <% end %>
        </p>
      </div>
      <%= link_to new_admin_entry_path(kind: "directory"), class: button_classes(variant: :primary) do %>
        <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
        New Entry
      <% end %>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-5 gap-6 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Total</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= number_with_delimiter(@stats[:total]) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Published</dt>
        <dd class="mt-1 text-3xl font-semibold text-green-600"><%= number_with_delimiter(@stats[:published]) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Unpublished</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-400"><%= number_with_delimiter(@stats[:unpublished]) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Editorialised</dt>
        <dd class="mt-1 text-3xl font-semibold text-purple-600"><%= number_with_delimiter(@stats[:editorialised]) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">This Week</dt>
        <dd class="mt-1 text-3xl font-semibold text-blue-600">+<%= number_with_delimiter(@stats[:this_week]) %></dd>
      </div>
    </div>

    <!-- Kind + Filters -->
    <div class="bg-white shadow rounded-lg mb-6 p-4">
      <div class="flex flex-wrap items-center gap-4 mb-4">
        <%= link_to "All", admin_entries_path, class: "inline-flex px-3 py-2 text-sm font-medium rounded-md #{params[:kind].blank? ? 'bg-blue-600 text-white' : 'text-gray-700 bg-white border border-gray-300'}" %>
        <%= link_to "Feed", admin_entries_path(kind: "feed"), class: "inline-flex px-3 py-2 text-sm font-medium rounded-md #{params[:kind] == 'feed' ? 'bg-blue-600 text-white' : 'text-gray-700 bg-white border border-gray-300'}" %>
        <%= link_to "Directory", admin_entries_path(kind: "directory"), class: "inline-flex px-3 py-2 text-sm font-medium rounded-md #{params[:kind] == 'directory' ? 'bg-blue-600 text-white' : 'text-gray-700 bg-white border border-gray-300'}" %>
      </div>
      <%= form_with url: admin_entries_path, method: :get, class: "flex flex-wrap gap-4" do |f| %>
        <%= f.hidden_field :kind, value: params[:kind] if params[:kind].present? %>
        <div class="flex-1 min-w-[200px]">
          <%= f.text_field :search, value: params[:search], placeholder: "Search by title or URL...", class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
        <div>
          <%= f.select :source_id, options_for_select([["All sources", ""]] + @sources.map { |s| [s.name, s.id] }, params[:source_id]), {}, class: "rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
        <div>
          <%= f.select :status, options_for_select([["All status", ""], ["Published", "published"], ["Unpublished", "unpublished"], ["Editorialised", "editorialised"], ["Not editorialised", "not_editorialised"], ["Enrichment: Pending", "enrichment_pending"], ["Enrichment: Complete", "enrichment_complete"], ["Enrichment: Failed", "enrichment_failed"]], params[:status]), {}, class: "rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
        <%= f.submit "Filter", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
        <%= link_to "Clear", admin_entries_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300" %>
      <% end %>
    </div>

    <!-- Bulk Actions -->
    <div id="bulk-actions" class="bg-yellow-50 border border-yellow-200 rounded-lg mb-4 p-4 hidden">
      <%= form_with url: bulk_action_admin_entries_path, method: :post, id: "bulk-form" do |f| %>
        <%= f.hidden_field :entry_ids, id: "bulk-ids", value: "" %>
        <div class="flex items-center justify-between">
          <span class="text-sm text-yellow-800"><strong id="selected-count">0</strong> items selected</span>
          <div class="flex gap-2">
            <%= f.submit "Publish", name: "bulk_action", value: "publish", class: "px-3 py-1.5 text-sm bg-green-600 text-white rounded hover:bg-green-700 cursor-pointer" %>
            <%= f.submit "Unpublish", name: "bulk_action", value: "unpublish", class: "px-3 py-1.5 text-sm bg-yellow-600 text-white rounded hover:bg-yellow-700 cursor-pointer" %>
            <%= f.submit "Editorialise", name: "bulk_action", value: "editorialise", class: "px-3 py-1.5 text-sm bg-purple-600 text-white rounded hover:bg-purple-700 cursor-pointer" %>
            <%= f.submit "Enrich", name: "bulk_action", value: "enrich", class: "px-3 py-1.5 text-sm bg-blue-600 text-white rounded hover:bg-blue-700 cursor-pointer" %>
            <%= f.submit "Delete", name: "bulk_action", value: "delete", class: "px-3 py-1.5 text-sm bg-red-600 text-white rounded hover:bg-red-700 cursor-pointer", data: { confirm: "Delete selected items permanently?" } %>
            <button type="button" onclick="clearSelection()" class="px-3 py-1.5 text-sm bg-gray-200 text-gray-700 rounded hover:bg-gray-300">Clear</button>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Table -->
    <div class="bg-white shadow rounded-lg overflow-hidden overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-3 py-3 text-left">
              <input type="checkbox" id="select-all" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" onclick="toggleSelectAll(this)">
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kind</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Content</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Source / Category</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">AI</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Enrichment</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @entries.each do |entry| %>
            <tr>
              <td class="px-3 py-4">
                <input type="checkbox" class="item-checkbox rounded border-gray-300 text-blue-600 focus:ring-blue-500" value="<%= entry.id %>" onclick="updateSelection()">
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= entry.feed? ? badge("Feed", :blue) : type_badge(entry.listing_type_key) %>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm font-medium text-gray-900 truncate" style="max-width: 350px;"><%= entry.title.presence || "(No title)" %></div>
                <div class="text-xs text-gray-500 truncate" style="max-width: 350px;"><%= entry.url_canonical %></div>
                <% if entry.feed? && entry.topic_tags.present? %>
                  <div class="mt-1 flex flex-wrap gap-1">
                    <% entry.topic_tags.first(3).each do |tag| %>
                      <span class="inline-flex items-center px-1.5 py-0.5 rounded text-xs bg-gray-100 text-gray-600"><%= tag %></span>
                    <% end %>
                    <% if entry.topic_tags.size > 3 %>
                      <span class="text-xs text-gray-400">+<%= entry.topic_tags.size - 3 %></span>
                    <% end %>
                  </div>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if entry.feed? %>
                  <div class="text-sm text-gray-900"><%= entry.source&.name || "Unknown" %></div>
                <% else %>
                  <div class="text-sm text-gray-900"><%= entry.category&.name || "-" %></div>
                <% end %>
                <div class="text-xs text-gray-500"><%= entry.site&.name %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if entry.published_at.present? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Published</span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Draft</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if entry.feed? %>
                  <% if entry.editorialised_at.present? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">✓ Done</span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">Pending</span>
                  <% end %>
                <% else %>
                  <span class="text-xs text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if entry.feed? %>
                  <% case entry.enrichment_status %>
                  <% when "complete" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">✓ Complete</span>
                  <% when "enriching" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">⟳ Enriching</span>
                  <% when "failed" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">✗ Failed</span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">Pending</span>
                  <% end %>
                <% else %>
                  <span class="text-xs text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= entry.created_at.strftime("%Y-%m-%d %H:%M") %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= link_to "View", admin_entry_path(entry), class: "text-blue-600 hover:underline mr-2" %>
                <%= link_to "Edit", edit_admin_entry_path(entry), class: "text-gray-600 hover:underline mr-2" %>
                <% if entry.published_at.nil? %>
                  <%= button_to "Publish", publish_admin_entry_path(entry), method: :post, class: "text-green-600 hover:underline", form: { class: "inline" } %>
                <% else %>
                  <%= button_to "Unpublish", unpublish_admin_entry_path(entry), method: :post, class: "text-yellow-600 hover:underline", form: { class: "inline" } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <% if @entries.respond_to?(:total_pages) && @entries.total_pages > 1 %>
        <div class="px-4 py-3 border-t border-gray-200"><%= paginate @entries %></div>
      <% end %>
    </div>
  </div>
</div>

<script>
  function updateSelection() {
    const checkboxes = document.querySelectorAll('.item-checkbox:checked');
    const ids = Array.from(checkboxes).map(cb => cb.value);
    const bulkActions = document.getElementById('bulk-actions');
    const bulkIds = document.getElementById('bulk-ids');
    const selectedCount = document.getElementById('selected-count');

    bulkIds.value = ids.join(',');
    selectedCount.textContent = ids.length;
    bulkActions.classList.toggle('hidden', ids.length === 0);

    const allCheckboxes = document.querySelectorAll('.item-checkbox');
    const selectAll = document.getElementById('select-all');
    selectAll.checked = allCheckboxes.length > 0 && checkboxes.length === allCheckboxes.length;
    selectAll.indeterminate = checkboxes.length > 0 && checkboxes.length < allCheckboxes.length;
  }

  function toggleSelectAll(checkbox) {
    document.querySelectorAll('.item-checkbox').forEach(cb => cb.checked = checkbox.checked);
    updateSelection();
  }

  function clearSelection() {
    document.querySelectorAll('.item-checkbox').forEach(cb => cb.checked = false);
    document.getElementById('select-all').checked = false;
    updateSelection();
  }
</script>
