<%= form_with model: [:admin, live_stream], class: "space-y-6" do |form| %>
  <% if live_stream.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= t("errors.form_errors", count: live_stream.errors.count) %>
          </h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% live_stream.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow-md rounded-lg p-6 space-y-6">
    <div>
      <%= form.label :title, t("admin.live_streams.form.title"), class: "block text-sm font-medium text-gray-700" %>
      <p class="text-sm text-gray-500 mb-1"><%= t("admin.live_streams.form.title_hint") %></p>
      <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", required: true %>
    </div>

    <div>
      <%= form.label :description, t("admin.live_streams.form.description"), class: "block text-sm font-medium text-gray-700" %>
      <p class="text-sm text-gray-500 mb-1"><%= t("admin.live_streams.form.description_hint") %></p>
      <%= form.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :scheduled_at, t("admin.live_streams.form.scheduled_at"), class: "block text-sm font-medium text-gray-700" %>
      <%= form.datetime_local_field :scheduled_at, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", required: true %>
    </div>

    <div>
      <%= form.label :visibility, t("admin.live_streams.form.visibility"), class: "block text-sm font-medium text-gray-700" %>
      <p class="text-sm text-gray-500 mb-1"><%= t("admin.live_streams.form.visibility_hint") %></p>
      <%= form.select :visibility, [
        [t("admin.live_streams.visibility.public_access"), "public_access"],
        [t("admin.live_streams.visibility.subscribers_only"), "subscribers_only"]
      ], {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>

    <div class="flex justify-end gap-3">
      <%= link_to t("admin.live_streams.form.cancel"), admin_live_streams_path, class: button_classes(variant: :secondary) %>
      <%= form.submit live_stream.persisted? ? t("admin.live_streams.form.update") : t("admin.live_streams.form.create"), class: "#{button_classes(variant: :primary)} cursor-pointer" %>
    </div>
  </div>
<% end %>
