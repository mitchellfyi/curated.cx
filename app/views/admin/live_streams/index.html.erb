<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center sm:justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= t("admin.live_streams.index.title") %></h1>
        <p class="mt-2 text-gray-600"><%= t("admin.live_streams.index.description") %></p>
      </div>
      <% if Current.site.streaming_enabled? %>
        <%= link_to new_admin_live_stream_path, class: button_classes(variant: :primary) do %>
          <svg class="mr-2 -ml-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <%= t("admin.live_streams.index.new_stream") %>
        <% end %>
      <% end %>
    </div>

  <% unless Current.site.streaming_enabled? %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-yellow-700"><%= t("admin.live_streams.disabled") %></p>
        </div>
      </div>
    </div>
  <% end %>

  <% if @live_streams.any? %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.live_streams.table.title") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.live_streams.table.status") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.live_streams.table.visibility") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.live_streams.table.scheduled") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.live_streams.table.viewers") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.live_streams.table.actions") %></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @live_streams.each do |stream| %>
            <tr>
              <td class="px-6 py-4">
                <span class="text-sm font-medium text-gray-900 truncate max-w-xs">
                  <%= link_to truncate(stream.title, length: 50), admin_live_stream_path(stream), class: "hover:text-blue-600" %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= status_indicator(stream.status) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= badge(t("admin.live_streams.visibility.#{stream.visibility}"), stream.visibility_public_access? ? :green : :purple) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= l(stream.scheduled_at, format: :long) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= stream.viewer_count %> / <%= stream.peak_viewers %> peak
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                <%= link_to t("admin.live_streams.actions.view"), admin_live_stream_path(stream), class: "text-blue-600 hover:text-blue-900" %>
                <%= link_to t("admin.live_streams.actions.edit"), edit_admin_live_stream_path(stream), class: "text-gray-600 hover:text-gray-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No live streams yet</h3>
      <p class="mt-1 text-sm text-gray-500"><%= t("admin.live_streams.index.no_streams") %></p>
      <% if Current.site.streaming_enabled? %>
        <div class="mt-6">
          <%= link_to new_admin_live_stream_path, class: button_classes(variant: :primary) do %>
            <svg class="mr-2 -ml-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            <%= t("admin.live_streams.index.new_stream") %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
  </div>
</div>
