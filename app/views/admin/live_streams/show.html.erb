<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to t("admin.live_streams.show.back"), admin_live_streams_path, class: "text-blue-600 hover:text-blue-800 text-sm" %>
  </div>

  <div class="flex justify-between items-start mb-6">
    <div>
      <div class="flex items-center gap-3">
        <h1 class="text-2xl font-bold"><%= @live_stream.title %></h1>
        <% if @live_stream.status_live? %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-red-600 text-white animate-pulse">
            <%= t("admin.live_streams.show.live_indicator") %>
          </span>
        <% end %>
      </div>
      <p class="text-sm text-gray-500 mt-1"><%= t("admin.live_streams.show.status") %>: <%= t("admin.live_streams.status.#{@live_stream.status}") %></p>
    </div>
    <div class="flex gap-2">
      <% if @live_stream.can_start? %>
        <%= button_to t("admin.live_streams.actions.start"), start_admin_live_stream_path(@live_stream), method: :post, class: button_classes(variant: :success) %>
      <% end %>
      <% if @live_stream.can_end? %>
        <%= button_to t("admin.live_streams.actions.end_stream"), end_stream_admin_live_stream_path(@live_stream), method: :post, class: button_classes(variant: :danger) %>
      <% end %>
      <%= link_to t("admin.live_streams.actions.edit"), edit_admin_live_stream_path(@live_stream), class: button_classes(variant: :secondary) %>
      <%= button_to t("admin.live_streams.actions.delete"), admin_live_stream_path(@live_stream), method: :delete, class: button_classes(variant: :danger_outline), data: { turbo_confirm: t("admin.live_streams.confirm_delete") } %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Stream Dashboard -->
      <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-lg font-semibold mb-4"><%= t("admin.live_streams.show.stream_dashboard") %></h2>

        <% if @live_stream.description.present? %>
          <p class="text-gray-600 mb-4"><%= @live_stream.description %></p>
        <% end %>

        <dl class="grid grid-cols-2 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500"><%= t("admin.live_streams.show.scheduled") %></dt>
            <dd class="text-sm text-gray-900"><%= l(@live_stream.scheduled_at, format: :long) %></dd>
          </div>
          <% if @live_stream.started_at %>
            <div>
              <dt class="text-sm font-medium text-gray-500"><%= t("admin.live_streams.show.started") %></dt>
              <dd class="text-sm text-gray-900"><%= l(@live_stream.started_at, format: :long) %></dd>
            </div>
          <% end %>
          <div>
            <dt class="text-sm font-medium text-gray-500"><%= t("admin.live_streams.show.created") %></dt>
            <dd class="text-sm text-gray-900"><%= l(@live_stream.created_at, format: :long) %></dd>
          </div>
        </dl>
      </div>

      <!-- Stream Key (for OBS) -->
      <% if @live_stream.stream_key.present? && (@live_stream.status_scheduled? || @live_stream.status_live?) %>
        <div class="bg-yellow-50 border border-yellow-200 shadow-md rounded-lg p-6">
          <h2 class="text-lg font-semibold mb-2"><%= t("admin.live_streams.show.stream_key") %></h2>
          <p class="text-sm text-yellow-700 mb-4"><%= t("admin.live_streams.show.stream_key_warning") %></p>

          <div class="flex items-center gap-2">
            <code class="flex-1 bg-yellow-100 px-3 py-2 rounded text-sm font-mono break-all"><%= @live_stream.stream_key %></code>
          </div>

          <p class="text-sm text-gray-600 mt-4">
            <strong>RTMP URL:</strong> rtmp://global-live.mux.com:5222/app
          </p>
        </div>
      <% end %>

      <!-- Replay Info -->
      <% if @live_stream.replay_available? %>
        <div class="bg-green-50 border border-green-200 shadow-md rounded-lg p-6">
          <h2 class="text-lg font-semibold mb-2"><%= t("admin.live_streams.show.replay_available") %></h2>
          <dl class="space-y-2">
            <div>
              <dt class="text-sm font-medium text-gray-500"><%= t("admin.live_streams.show.replay_playback_id") %></dt>
              <dd class="text-sm text-gray-900 font-mono"><%= @live_stream.replay_playback_id %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500"><%= t("admin.live_streams.show.playback_url") %></dt>
              <dd class="text-sm text-blue-600"><%= @live_stream.replay_url %></dd>
            </div>
          </dl>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Analytics -->
      <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-lg font-semibold mb-4"><%= t("admin.live_streams.show.analytics") %></h2>
        <dl class="space-y-4">
          <div class="flex justify-between">
            <dt class="text-sm font-medium text-gray-500"><%= t("admin.live_streams.show.viewer_count") %></dt>
            <dd class="text-lg font-semibold text-gray-900"><%= @live_stream.viewer_count %></dd>
          </div>
          <div class="flex justify-between">
            <dt class="text-sm font-medium text-gray-500"><%= t("admin.live_streams.show.peak_viewers") %></dt>
            <dd class="text-lg font-semibold text-gray-900"><%= @live_stream.peak_viewers %></dd>
          </div>
        </dl>
      </div>

      <!-- Live Chat Discussion -->
      <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-lg font-semibold mb-4"><%= t("admin.live_streams.show.discussion") %></h2>
        <% if @live_stream.discussion %>
          <p class="text-sm text-gray-600 mb-3"><%= @live_stream.discussion.posts_count %> posts</p>
          <%= link_to t("admin.live_streams.show.chat_link"), admin_discussion_path(@live_stream.discussion), class: "text-blue-600 hover:text-blue-800 text-sm" %>
        <% else %>
          <p class="text-sm text-gray-500"><%= t("admin.live_streams.show.no_discussion") %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
