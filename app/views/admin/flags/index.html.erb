<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center sm:justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= t("admin.flags.index.title", default: "Content Flags") %></h1>
        <p class="mt-2 text-gray-600">Review and resolve flagged content</p>
      </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Pending</dt>
        <dd class="mt-1 text-3xl font-semibold text-yellow-600"><%= @flags.count %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Resolved (24h)</dt>
        <dd class="mt-1 text-3xl font-semibold text-green-600"><%= @resolved_flags.count { |f| f.reviewed_at && f.reviewed_at > 24.hours.ago } rescue 0 %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Content Items</dt>
        <dd class="mt-1 text-3xl font-semibold text-blue-600"><%= @flags.count(&:content_item?) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Comments</dt>
        <dd class="mt-1 text-3xl font-semibold text-purple-600"><%= @flags.count(&:comment?) %></dd>
      </div>
    </div>

  <%# Pending Flags Queue %>
  <div class="mb-8">
    <h2 class="text-lg font-semibold mb-4"><%= t("admin.flags.index.pending_section") %></h2>
    <% if @flags.any? %>
      <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.flags.content") %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.flags.reason") %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.flags.flagged_by") %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.flags.created_at") %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @flags.each do |flag| %>
              <%= turbo_frame_tag dom_id(flag) do %>
                <tr>
                  <td class="px-6 py-4">
                    <div class="flex items-center">
                      <%= badge(flag.content_item? ? t("admin.flags.type.content_item") : t("admin.flags.type.comment"), flag.content_item? ? :blue : :green) %>
                      <span class="ml-2 text-sm text-gray-900 truncate max-w-xs">
                        <% if flag.content_item? %>
                          <%= truncate(flag.flaggable.title, length: 50) %>
                        <% else %>
                          <%= truncate(flag.flaggable.body, length: 50) %>
                        <% end %>
                      </span>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <%= badge(t("flags.reasons.#{flag.reason}"), :red) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= flag.user.email %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= time_ago_in_words(flag.created_at) %> ago</td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                    <%= link_to t("common.view"), admin_flag_path(flag), class: "text-blue-600 hover:text-blue-900" %>
                    <%= button_to t("admin.flags.resolve"), resolve_admin_flag_path(flag), method: :post, class: "text-green-600 hover:text-green-900", data: { turbo_stream: true } %>
                    <%= button_to t("admin.flags.dismiss"), dismiss_admin_flag_path(flag), method: :post, class: "text-gray-600 hover:text-gray-900", data: { turbo_stream: true } %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="bg-white shadow-md rounded-lg p-6 text-center text-gray-500">
        <%= t("admin.flags.no_pending_flags") %>
      </div>
    <% end %>
  </div>

  <%# Recently Resolved Flags %>
  <div>
    <h2 class="text-lg font-semibold mb-4"><%= t("admin.flags.index.resolved_section") %></h2>
    <% if @resolved_flags.any? %>
      <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.flags.content") %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.flags.reason") %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.flags.status") %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.flags.reviewed_by") %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.flags.reviewed_at") %></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @resolved_flags.each do |flag| %>
              <tr class="bg-gray-50">
                <td class="px-6 py-4">
                  <div class="flex items-center">
                    <%= badge(flag.content_item? ? t("admin.flags.type.content_item") : t("admin.flags.type.comment"), flag.content_item? ? :blue : :green) %>
                    <span class="ml-2 text-sm text-gray-500 truncate max-w-xs">
                      <% if flag.content_item? %>
                        <%= truncate(flag.flaggable&.title || t("admin.flags.content_deleted"), length: 50) %>
                      <% else %>
                        <%= truncate(flag.flaggable&.body || t("admin.flags.content_deleted"), length: 50) %>
                      <% end %>
                    </span>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= badge(t("flags.reasons.#{flag.reason}"), :gray) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= badge(t("flags.statuses.#{flag.status}"), flag.action_taken? ? :green : :gray) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= flag.reviewed_by&.email %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= time_ago_in_words(flag.reviewed_at) %> ago</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="bg-white shadow rounded-lg p-6 text-center text-gray-500">
        <%= t("admin.flags.no_resolved_flags", default: "No resolved flags yet") %>
      </div>
    <% end %>
  </div>
  </div>
</div>
