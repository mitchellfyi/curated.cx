<div class="container mx-auto px-4 py-8">
  <%# Back link %>
  <div class="mb-4">
    <%= link_to admin_discussions_path, class: "text-sm text-gray-500 hover:text-gray-700 flex items-center gap-1" do %>
      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      <%= t("admin.discussions.show.back") %>
    <% end %>
  </div>

  <%# Discussion header %>
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <div class="flex items-center gap-2 mb-2">
          <% if @discussion.pinned? %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
              <%= t("discussions.pinned") %>
            </span>
          <% end %>
          <% if @discussion.locked? %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
              <%= t("discussions.locked_badge") %>
            </span>
          <% end %>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= @discussion.visibility_public_access? ? 'bg-green-100 text-green-800' : 'bg-purple-100 text-purple-800' %>">
            <%= @discussion.visibility_public_access? ? t("discussions.visibility.public") : t("discussions.visibility.subscribers_only") %>
          </span>
        </div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @discussion.title %></h1>
        <% if @discussion.body.present? %>
          <div class="mt-3 text-gray-700 prose prose-sm max-w-none">
            <%= simple_format(@discussion.body, {}, sanitize: true) %>
          </div>
        <% end %>
      </div>
    </div>

    <%# Author info %>
    <div class="mt-4 pt-4 border-t border-gray-200 flex items-center gap-3">
      <% if @discussion.user.avatar_url.present? %>
        <%= image_tag @discussion.user.avatar_url, alt: @discussion.user.profile_name, class: "w-8 h-8 rounded-full object-cover" %>
      <% else %>
        <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 text-sm font-medium">
          <%= @discussion.user.initials %>
        </div>
      <% end %>
      <div class="text-sm">
        <span class="font-medium text-gray-900"><%= @discussion.user.email %></span>
        <time class="text-gray-500 block" datetime="<%= @discussion.created_at.iso8601 %>">
          <%= t("discussions.started", time: time_ago_in_words(@discussion.created_at)) %>
        </time>
      </div>
      <% if @discussion.locked? && @discussion.locked_by.present? %>
        <div class="ml-auto text-sm text-gray-500">
          Locked by <%= @discussion.locked_by.email %> at <%= @discussion.locked_at.strftime("%Y-%m-%d %H:%M") %>
        </div>
      <% end %>
    </div>
  </div>

  <%# Moderation actions %>
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <h2 class="text-lg font-medium text-gray-900 mb-4"><%= t("admin.discussions.show.moderation") %></h2>
    <div class="flex flex-wrap gap-3">
      <% if @discussion.locked? %>
        <%= button_to t("admin.discussions.actions.unlock"), unlock_admin_discussion_path(@discussion), method: :post, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <% else %>
        <%= button_to t("admin.discussions.actions.lock"), lock_admin_discussion_path(@discussion), method: :post, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <% end %>

      <% if @discussion.pinned? %>
        <%= button_to t("admin.discussions.actions.unpin"), unpin_admin_discussion_path(@discussion), method: :post, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <% else %>
        <%= button_to t("admin.discussions.actions.pin"), pin_admin_discussion_path(@discussion), method: :post, class: "inline-flex items-center px-4 py-2 border border-yellow-300 rounded-md shadow-sm text-sm font-medium text-yellow-700 bg-yellow-50 hover:bg-yellow-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500" %>
      <% end %>

      <%= button_to t("admin.discussions.actions.delete"), admin_discussion_path(@discussion), method: :delete, class: "inline-flex items-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-red-50 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500", data: { turbo_confirm: t("admin.discussions.confirm_delete") } %>

      <%= link_to t("admin.discussions.actions.view_public"), discussion_path(@discussion), class: "inline-flex items-center px-4 py-2 border border-blue-300 rounded-md shadow-sm text-sm font-medium text-blue-700 bg-blue-50 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500", target: "_blank" %>
    </div>
  </div>

  <%# Posts section %>
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">
        <%= t("admin.discussions.show.posts_section") %> (<%= @discussion.posts_count %>)
      </h2>
    </div>

    <% if @posts.any? %>
      <div class="divide-y divide-gray-200">
        <% @posts.each do |post| %>
          <div class="px-6 py-4">
            <div class="flex items-start gap-3">
              <% if post.user.avatar_url.present? %>
                <%= image_tag post.user.avatar_url, alt: post.user.profile_name, class: "w-8 h-8 rounded-full object-cover" %>
              <% else %>
                <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 text-sm font-medium">
                  <%= post.user.initials %>
                </div>
              <% end %>
              <div class="flex-1">
                <div class="flex items-center gap-2 text-sm">
                  <span class="font-medium text-gray-900"><%= post.user.email %></span>
                  <time class="text-gray-500" datetime="<%= post.created_at.iso8601 %>">
                    <%= time_ago_in_words(post.created_at) %> ago
                  </time>
                  <% if post.edited? %>
                    <span class="text-gray-400">(edited)</span>
                  <% end %>
                  <% if post.hidden? %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
                      Hidden
                    </span>
                  <% end %>
                </div>
                <div class="mt-1 text-gray-700">
                  <%= simple_format(post.body, {}, sanitize: true) %>
                </div>

                <%# Show replies %>
                <% if post.replies.any? %>
                  <div class="mt-4 ml-6 pl-4 border-l-2 border-gray-200 space-y-4">
                    <% post.replies.each do |reply| %>
                      <div class="flex items-start gap-3">
                        <% if reply.user.avatar_url.present? %>
                          <%= image_tag reply.user.avatar_url, alt: reply.user.profile_name, class: "w-6 h-6 rounded-full object-cover" %>
                        <% else %>
                          <div class="w-6 h-6 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 text-xs font-medium">
                            <%= reply.user.initials %>
                          </div>
                        <% end %>
                        <div class="flex-1">
                          <div class="flex items-center gap-2 text-sm">
                            <span class="font-medium text-gray-900"><%= reply.user.email %></span>
                            <time class="text-gray-500" datetime="<%= reply.created_at.iso8601 %>">
                              <%= time_ago_in_words(reply.created_at) %> ago
                            </time>
                            <% if reply.hidden? %>
                              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
                                Hidden
                              </span>
                            <% end %>
                          </div>
                          <div class="mt-1 text-gray-700 text-sm">
                            <%= simple_format(reply.body, {}, sanitize: true) %>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-8 text-center text-gray-500">
        No posts yet.
      </div>
    <% end %>
  </div>
</div>
