<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold"><%= t("admin.discussions.title") %></h1>
      <p class="text-sm text-gray-500 mt-1"><%= t("admin.discussions.description") %></p>
    </div>
    <span class="text-sm text-gray-500">
      <%= @discussions.count %> discussions
    </span>
  </div>

  <% if @discussions.any? %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.discussions.table.title") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.discussions.table.author") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.discussions.table.visibility") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.discussions.table.posts") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.discussions.table.status") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.discussions.table.created") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.discussions.table.actions") %></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @discussions.each do |discussion| %>
            <tr>
              <td class="px-6 py-4">
                <div class="flex items-center gap-2">
                  <% if discussion.pinned? %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                      <%= t("discussions.pinned") %>
                    </span>
                  <% end %>
                  <span class="text-sm font-medium text-gray-900 truncate max-w-xs">
                    <%= link_to truncate(discussion.title, length: 50), admin_discussion_path(discussion), class: "hover:text-blue-600" %>
                  </span>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= discussion.user.email %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= discussion.visibility_public_access? ? 'bg-green-100 text-green-800' : 'bg-purple-100 text-purple-800' %>">
                  <%= discussion.visibility_public_access? ? t("discussions.visibility.public") : t("discussions.visibility.subscribers_only") %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= discussion.posts_count %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if discussion.locked? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    <%= t("discussions.locked_badge") %>
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Open
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= time_ago_in_words(discussion.created_at) %> ago
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                <%= link_to t("admin.discussions.actions.view"), admin_discussion_path(discussion), class: "text-blue-600 hover:text-blue-900" %>
                <%= button_to t("admin.discussions.actions.delete"), admin_discussion_path(discussion), method: :delete, class: "text-red-600 hover:text-red-900", data: { turbo_confirm: t("admin.discussions.confirm_delete") } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white shadow-md rounded-lg p-6 text-center text-gray-500">
      <%= t("admin.discussions.no_discussions") %>
    </div>
  <% end %>
</div>
