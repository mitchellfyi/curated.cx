<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center sm:justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= t("admin.discussions.title", default: "Discussions") %></h1>
        <p class="mt-2 text-gray-600"><%= t("admin.discussions.description", default: "Manage community discussions") %></p>
      </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Total</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @discussions.count %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Pinned</dt>
        <dd class="mt-1 text-3xl font-semibold text-yellow-600"><%= @discussions.count(&:pinned?) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Locked</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-400"><%= @discussions.count(&:locked?) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Total Posts</dt>
        <dd class="mt-1 text-3xl font-semibold text-blue-600"><%= @discussions.sum(&:posts_count) %></dd>
      </div>
    </div>

  <% if @discussions.any? %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.discussions.table.title") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.discussions.table.author") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.discussions.table.visibility") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.discussions.table.posts") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.discussions.table.status") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.discussions.table.created") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.discussions.table.actions") %></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @discussions.each do |discussion| %>
            <tr>
              <td class="px-6 py-4">
                <div class="flex items-center gap-2">
                  <%= badge(t("discussions.pinned"), :yellow) if discussion.pinned? %>
                  <span class="text-sm font-medium text-gray-900 truncate max-w-xs">
                    <%= link_to truncate(discussion.title, length: 50), admin_discussion_path(discussion), class: "hover:text-blue-600" %>
                  </span>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= discussion.user.email %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= badge(discussion.visibility_public_access? ? t("discussions.visibility.public") : t("discussions.visibility.subscribers_only"), discussion.visibility_public_access? ? :green : :purple) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= discussion.posts_count %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= badge(discussion.locked? ? t("discussions.locked_badge") : t("admin.discussions.statuses.open"), discussion.locked? ? :gray : :green) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= time_ago_in_words(discussion.created_at) %> ago
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                <%= link_to t("admin.discussions.actions.view"), admin_discussion_path(discussion), class: "text-blue-600 hover:text-blue-900" %>
                <%= button_to t("admin.discussions.actions.delete"), admin_discussion_path(discussion), method: :delete, class: "text-red-600 hover:text-red-900", data: { turbo_confirm: t("admin.discussions.confirm_delete") } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No discussions yet</h3>
      <p class="mt-1 text-sm text-gray-500">Discussions will appear here when users create them.</p>
    </div>
  <% end %>
  </div>
</div>
