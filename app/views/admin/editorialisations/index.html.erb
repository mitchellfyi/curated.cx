<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900"><%= t('admin.editorialisations.title') %></h1>
      <p class="mt-2 text-gray-600"><%= t('admin.editorialisations.description') %></p>
    </div>

    <!-- Stats -->
    <% if @stats.present? %>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-8 gap-4 mb-8">
        <div class="bg-white overflow-hidden shadow rounded-lg p-3">
          <dt class="text-xs font-medium text-gray-500 truncate">Total</dt>
          <dd class="mt-1 text-lg font-semibold text-gray-900"><%= number_with_delimiter(@stats[:total]) %></dd>
        </div>
        <div class="bg-white overflow-hidden shadow rounded-lg p-3">
          <dt class="text-xs font-medium text-gray-500 truncate">Completed</dt>
          <dd class="mt-1 text-lg font-semibold text-green-600"><%= number_with_delimiter(@stats[:completed]) %></dd>
        </div>
        <div class="bg-white overflow-hidden shadow rounded-lg p-3">
          <dt class="text-xs font-medium text-gray-500 truncate">Pending</dt>
          <dd class="mt-1 text-lg font-semibold text-yellow-600"><%= number_with_delimiter(@stats[:pending]) %></dd>
        </div>
        <div class="bg-white overflow-hidden shadow rounded-lg p-3">
          <dt class="text-xs font-medium text-gray-500 truncate">Processing</dt>
          <dd class="mt-1 text-lg font-semibold text-blue-600"><%= number_with_delimiter(@stats[:processing]) %></dd>
        </div>
        <div class="bg-white overflow-hidden shadow rounded-lg p-3">
          <dt class="text-xs font-medium text-gray-500 truncate">Failed</dt>
          <dd class="mt-1 text-lg font-semibold text-red-600"><%= number_with_delimiter(@stats[:failed]) %></dd>
        </div>
        <div class="bg-white overflow-hidden shadow rounded-lg p-3">
          <dt class="text-xs font-medium text-gray-500 truncate">Skipped</dt>
          <dd class="mt-1 text-lg font-semibold text-gray-400"><%= number_with_delimiter(@stats[:skipped]) %></dd>
        </div>
        <div class="bg-white overflow-hidden shadow rounded-lg p-3">
          <dt class="text-xs font-medium text-gray-500 truncate">Today</dt>
          <dd class="mt-1 text-lg font-semibold text-purple-600"><%= number_with_delimiter(@stats[:today_count]) %></dd>
        </div>
        <div class="bg-white overflow-hidden shadow rounded-lg p-3">
          <dt class="text-xs font-medium text-gray-500 truncate">Tokens Today</dt>
          <dd class="mt-1 text-lg font-semibold text-indigo-600"><%= number_with_delimiter(@stats[:tokens_today]) %></dd>
        </div>
      </div>
    <% end %>

    <div class="mb-6 flex items-center justify-between">
      <div class="flex gap-2">
        <%= link_to admin_editorialisations_path,
            class: "px-3 py-1 text-sm rounded-full #{params[:status].blank? ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700'}" do %>
          <%= t('admin.editorialisations.all') %>
        <% end %>
      <% %w[completed pending processing failed skipped].each do |status| %>
        <%= link_to admin_editorialisations_path(status: status),
            class: "px-3 py-1 text-sm rounded-full #{params[:status] == status ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700'}" do %>
          <%= t("admin.editorialisations.status.#{status}") %>
        <% end %>
      <% end %>
      </div>

      <% if @stats[:failed].to_i > 0 %>
        <%= button_to "Retry Failed (#{@stats[:failed]})", retry_failed_admin_editorialisations_path,
            method: :post,
            class: "px-3 py-1 text-sm bg-red-600 text-white rounded-md hover:bg-red-700",
            data: { confirm: "Retry all #{@stats[:failed]} failed editorialisations?" } %>
      <% end %>
    </div>

    <% if @editorialisations.any? %>
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <%= t('admin.editorialisations.content_item') %>
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <%= t('admin.editorialisations.status_header') %>
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <%= t('admin.editorialisations.prompt_version') %>
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <%= t('admin.editorialisations.tokens') %>
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <%= t('admin.editorialisations.created') %>
              </th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                <%= t('admin.editorialisations.actions') %>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @editorialisations.each do |editorialisation| %>
              <tr>
                <td class="px-6 py-4">
                  <div class="text-sm font-medium text-gray-900 truncate max-w-xs">
                    <%= editorialisation.content_item.title || '(No title)' %>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                    <%= case editorialisation.status
                        when 'completed' then 'bg-green-100 text-green-800'
                        when 'processing' then 'bg-blue-100 text-blue-800'
                        when 'pending' then 'bg-yellow-100 text-yellow-800'
                        when 'failed' then 'bg-red-100 text-red-800'
                        when 'skipped' then 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= t("admin.editorialisations.status.#{editorialisation.status}") %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                  <%= editorialisation.prompt_version %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                  <%= editorialisation.tokens_used || '-' %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                  <%= l(editorialisation.created_at, format: :short) %>
                </td>
                <td class="px-6 py-4 text-right text-sm">
                  <%= link_to t('admin.editorialisations.view'), admin_editorialisation_path(editorialisation),
                      class: "text-blue-600 hover:text-blue-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @editorialisations.respond_to?(:total_pages) && @editorialisations.total_pages > 1 %>
        <div class="px-4 py-3 border-t border-gray-200">
          <%= paginate @editorialisations %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12 bg-white rounded-lg shadow">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
        </svg>
        <h3 class="mt-4 text-sm font-medium text-gray-900"><%= t('admin.editorialisations.empty') %></h3>
        <p class="mt-1 text-sm text-gray-500"><%= t('admin.editorialisations.empty_description') %></p>
      </div>
    <% end %>
  </div>
</div>
