<%# Admin Sidebar Navigation - Organized with clear Super Admin / Tenant Admin separation %>
<%# Role gating: editors see Content, Community, Moderation; admin/owner sees everything %>
<% is_admin_or_owner = current_user&.admin? || (Current.tenant && %i[owner admin].any? { |r| current_user&.has_role?(r, Current.tenant) }) %>
<nav class="space-y-1" data-controller="sidebar">
  <!-- Current Context -->
  <% if Current.tenant %>
    <div class="px-3 py-2 mb-2 bg-blue-50 rounded-md border border-blue-100">
      <p class="text-xs font-semibold text-blue-600 uppercase tracking-wider">Current Site</p>
      <p class="text-sm font-medium text-blue-900 truncate"><%= Current.tenant.title %></p>
      <% if current_user&.admin? %>
        <p class="text-xs text-blue-600 mt-1">
          <%= link_to "Switch tenant â†’", admin_tenants_path, class: "hover:underline" %>
        </p>
      <% end %>
    </div>
  <% end %>

  <!-- Search -->
  <div class="px-3 mb-4">
    <%= form_with url: admin_search_path, method: :get, class: "relative" do |f| %>
      <%= f.text_field :q, value: params[:q], placeholder: "Search...",
          class: "block w-full pl-8 pr-3 py-1.5 text-sm rounded-md border-gray-300 bg-gray-50 focus:bg-white focus:border-blue-500 focus:ring-blue-500" %>
      <div class="absolute inset-y-0 left-0 pl-2 flex items-center pointer-events-none">
        <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
    <% end %>
  </div>

  <%# ==================== SUPER ADMIN SECTION ==================== %>
  <% if current_user&.admin? %>
    <div class="mb-4 pb-4 border-b-2 border-red-200">
      <p class="px-3 mb-2 text-xs font-bold text-red-600 uppercase tracking-wider flex items-center">
        <svg class="mr-1.5 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 8a6 6 0 01-7.743 5.743L10 14l-1 1-1 1H6v2H2v-4l4.257-4.257A6 6 0 1118 8zm-6-4a1 1 0 100 2 2 2 0 012 2 1 1 0 102 0 4 4 0 00-4-4z" clip-rule="evenodd"></path>
        </svg>
        Super Admin
      </p>

      <%= link_to admin_tenants_path, class: "group flex items-center px-3 py-2 text-sm font-medium rounded-md #{request.path.include?('tenants') ? 'bg-red-100 text-red-900 border-l-4 border-red-500' : 'text-red-700 hover:bg-red-50 hover:text-red-900'}" do %>
        <svg class="mr-3 h-5 w-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
        </svg>
        All Tenants
        <span class="ml-auto text-xs bg-red-100 text-red-600 px-2 py-0.5 rounded-full"><%= Tenant.count rescue 0 %></span>
      <% end %>

      <%= link_to admin_users_path, class: "group flex items-center px-3 py-2 text-sm font-medium rounded-md #{request.path.include?('users') ? 'bg-red-100 text-red-900 border-l-4 border-red-500' : 'text-red-700 hover:bg-red-50 hover:text-red-900'}" do %>
        <svg class="mr-3 h-5 w-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
        </svg>
        All Users
        <span class="ml-auto text-xs bg-red-100 text-red-600 px-2 py-0.5 rounded-full"><%= User.count rescue 0 %></span>
      <% end %>
    </div>
  <% end %>

  <%# ==================== TENANT ADMIN SECTION ==================== %>
  <p class="px-3 mb-2 text-xs font-bold text-gray-500 uppercase tracking-wider">Tenant Admin</p>

  <!-- Dashboard -->
  <%= link_to admin_root_path, class: "group flex items-center px-3 py-2 text-sm font-medium rounded-md #{request.path == admin_root_path ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}" do %>
    <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
    </svg>
    Dashboard
  <% end %>

  <!-- Content Section (Collapsible) -->
  <% content_active = request.path.include?('entries') || request.path.include?('submissions') || (request.path.include?('notes') && !request.path.include?('content')) %>
  <div data-sidebar-target="section" data-section-name="content">
    <button type="button" data-action="click->sidebar#toggle" class="w-full group flex items-center justify-between px-3 py-2 text-sm font-medium rounded-md <%= content_active ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900' %>">
      <span class="flex items-center">
        <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
        Content
      </span>
      <svg data-sidebar-target="icon" class="h-4 w-4 text-gray-400 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </button>
    <div data-sidebar-target="content" class="hidden ml-6 mt-1 space-y-1">
      <%= link_to admin_entries_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('entries') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Entries
      <% end %>
      <%= link_to admin_submissions_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('submissions') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Submissions
        <% pending = Submission.pending.count rescue 0 %>
        <% if pending > 0 %>
          <span class="ml-auto inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800"><%= pending %></span>
        <% end %>
      <% end %>
      <%= link_to admin_notes_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('notes') && !request.path.include?('content') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Notes
      <% end %>
    </div>
  </div>

  <!-- Sources (Top-level) - Admin/Owner only -->
  <% if is_admin_or_owner %>
  <%= link_to admin_sources_path, class: "group flex items-center px-3 py-2 text-sm font-medium rounded-md #{request.path.include?('sources') ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}" do %>
    <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
    </svg>
    Sources
  <% end %>
  <% end %>

  <!-- Commerce Section (Collapsible) - Admin/Owner only -->
  <% if is_admin_or_owner %>
  <% commerce_active = request.path.include?('digital_products') || request.path.include?('affiliate_clicks') || request.path.include?('live_streams') || request.path.include?('sponsorships') || request.path.include?('business_claims') || request.path.include?('business_subscriptions') %>
  <div data-sidebar-target="section" data-section-name="commerce">
    <button type="button" data-action="click->sidebar#toggle" class="w-full group flex items-center justify-between px-3 py-2 text-sm font-medium rounded-md <%= commerce_active ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900' %>">
      <span class="flex items-center">
        <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        Commerce
      </span>
      <svg data-sidebar-target="icon" class="h-4 w-4 text-gray-400 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </button>
    <div data-sidebar-target="content" class="hidden ml-6 mt-1 space-y-1">
      <%= link_to admin_digital_products_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('digital_products') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Digital Products
      <% end %>
      <%= link_to admin_affiliate_clicks_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('affiliate_clicks') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Affiliate Clicks
      <% end %>
      <%= link_to admin_sponsorships_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('sponsorships') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Sponsorships
        <% pending_sponsorships = Current.site ? Sponsorship.where(site: Current.site).pending.count : 0 %>
        <% if pending_sponsorships > 0 %>
          <span class="ml-auto inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800"><%= pending_sponsorships %></span>
        <% end %>
      <% end %>
      <%= link_to admin_business_claims_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('business_claims') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Business Claims
        <% pending_claims = Current.site ? BusinessClaim.joins(:entry).where(entries: { site_id: Current.site.id }).pending.count : 0 %>
        <% if pending_claims > 0 %>
          <span class="ml-auto inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800"><%= pending_claims %></span>
        <% end %>
      <% end %>
      <%= link_to admin_business_subscriptions_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('business_subscriptions') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Subscriptions
      <% end %>
      <%= link_to admin_live_streams_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('live_streams') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Live Streams
      <% end %>
    </div>
  </div>
  <% end %>

  <!-- Boosts / Network Section (Collapsible) - Admin/Owner only -->
  <% if is_admin_or_owner %>
  <% boosts_active = request.path.include?('network_boosts') || request.path.include?('boost_earnings') || request.path.include?('boost_payouts') %>
  <div data-sidebar-target="section" data-section-name="boosts">
    <button type="button" data-action="click->sidebar#toggle" class="w-full group flex items-center justify-between px-3 py-2 text-sm font-medium rounded-md <%= boosts_active ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900' %>">
      <span class="flex items-center">
        <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
        </svg>
        Boosts / Network
      </span>
      <svg data-sidebar-target="icon" class="h-4 w-4 text-gray-400 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </button>
    <div data-sidebar-target="content" class="hidden ml-6 mt-1 space-y-1">
      <%= link_to admin_network_boosts_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('network_boosts') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Network Boosts
      <% end %>
      <%= link_to admin_boost_earnings_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('boost_earnings') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Boost Earnings
      <% end %>
      <%= link_to admin_boost_payouts_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('boost_payouts') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Boost Payouts
      <% end %>
    </div>
  </div>
  <% end %>

  <!-- Subscribers Section (Collapsible) - Admin/Owner only -->
  <% if is_admin_or_owner %>
  <% subscribers_active = request.path.include?('digest') || request.path.include?('subscriber_tags') || request.path.include?('subscriber_segments') || request.path.include?('email_sequences') || (request.path.include?('referrals') && !request.path.include?('tiers')) || request.path.include?('referral_reward_tiers') %>
  <div data-sidebar-target="section" data-section-name="subscribers">
    <button type="button" data-action="click->sidebar#toggle" class="w-full group flex items-center justify-between px-3 py-2 text-sm font-medium rounded-md <%= subscribers_active ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900' %>">
      <span class="flex items-center">
        <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        Subscribers
      </span>
      <svg data-sidebar-target="icon" class="h-4 w-4 text-gray-400 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </button>
    <div data-sidebar-target="content" class="hidden ml-6 mt-1 space-y-1">
      <%= link_to admin_digest_subscriptions_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('digest') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Email Subscribers
      <% end %>
      <%= link_to admin_subscriber_tags_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('subscriber_tags') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Subscriber Tags
      <% end %>
      <%= link_to admin_subscriber_segments_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('subscriber_segments') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Subscriber Segments
      <% end %>
      <%= link_to admin_email_sequences_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('email_sequences') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Email Sequences
      <% end %>
      <%= link_to admin_referrals_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('referrals') && !request.path.include?('tiers') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Referrals
      <% end %>
      <%= link_to admin_referral_reward_tiers_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('referral_reward_tiers') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Referral Reward Tiers
      <% end %>
    </div>
  </div>
  <% end %>

  <!-- Community Section (Collapsible) -->
  <% community_active = request.path.include?('comments') || request.path.include?('discussions') %>
  <div data-sidebar-target="section" data-section-name="community">
    <button type="button" data-action="click->sidebar#toggle" class="w-full group flex items-center justify-between px-3 py-2 text-sm font-medium rounded-md <%= community_active ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900' %>">
      <span class="flex items-center">
        <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path>
        </svg>
        Community
      </span>
      <% hidden_comments = Comment.where.not(hidden_at: nil).count rescue 0 %>
      <% if hidden_comments > 0 %>
        <span class="mr-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800"><%= hidden_comments %></span>
      <% end %>
      <svg data-sidebar-target="icon" class="h-4 w-4 text-gray-400 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </button>
    <div data-sidebar-target="content" class="hidden ml-6 mt-1 space-y-1">
      <%= link_to admin_comments_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('comments') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Comments
        <% if hidden_comments > 0 %>
          <span class="ml-auto inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800"><%= hidden_comments %></span>
        <% end %>
      <% end %>
      <%= link_to admin_discussions_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('discussions') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Discussions
      <% end %>
    </div>
  </div>

  <!-- Moderation Section (Collapsible) -->
  <% moderation_active = request.path.include?('flags') || request.path.include?('site_bans') %>
  <% open_flags = Flag.open.count rescue 0 %>
  <% active_bans = SiteBan.active.count rescue 0 %>
  <div data-sidebar-target="section" data-section-name="moderation">
    <button type="button" data-action="click->sidebar#toggle" class="w-full group flex items-center justify-between px-3 py-2 text-sm font-medium rounded-md <%= moderation_active ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900' %>">
      <span class="flex items-center">
        <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
        </svg>
        Moderation
      </span>
      <% if open_flags > 0 %>
        <span class="mr-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800"><%= open_flags %></span>
      <% end %>
      <svg data-sidebar-target="icon" class="h-4 w-4 text-gray-400 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </button>
    <div data-sidebar-target="content" class="hidden ml-6 mt-1 space-y-1">
      <%= link_to admin_flags_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('flags') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Flags
        <% if open_flags > 0 %>
          <span class="ml-auto inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800"><%= open_flags %></span>
        <% end %>
      <% end %>
      <%= link_to admin_site_bans_path, class: "group flex items-center px-3 py-1.5 text-sm rounded-md #{request.path.include?('site_bans') ? 'bg-gray-100 text-gray-900' : 'text-gray-500 hover:bg-gray-50 hover:text-gray-900'}" do %>
        Site Bans
        <% if active_bans > 0 %>
          <span class="ml-auto inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800"><%= active_bans %></span>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Taxonomy Section (Collapsible) - Admin/Owner only -->
  <% if is_admin_or_owner %>
