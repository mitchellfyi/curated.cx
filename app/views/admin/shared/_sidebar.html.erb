  <% end %>

  <%= link_to admin_observability_path, class: "group flex items-center px-3 py-2 text-sm font-medium rounded-md #{request.path.include?('observability') ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}" do %>
