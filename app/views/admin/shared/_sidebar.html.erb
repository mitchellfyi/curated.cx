    </svg>
    Notes
  <% end %>

  <%= link_to admin_comments_path, class: "group flex items-center px-3 py-2 text-sm font-medium rounded-md #{request.path.include?('comments') ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}" do %>
    <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
    </svg>
    Comments
    <% hidden_comments = Comment.where.not(hidden_at: nil).count rescue 0 %>
    <% if hidden_comments > 0 %>
      <span class="ml-auto inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800"><%= hidden_comments %></span>
    <% end %>
  <% end %>

  <%= link_to admin_flags_path, class: "group flex items-center px-3 py-2 text-sm font-medium rounded-md #{request.path.include?('flags') ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}" do %>
    <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"></path>
    </svg>
    Flags
    <% open_flags = Flag.open.count rescue 0 %>
    <% if open_flags > 0 %>
      <span class="ml-auto inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800"><%= open_flags %></span>
    <% end %>
  <% end %>

  <div class="pt-4">
    <p class="px-3 text-xs font-semibold text-gray-400 uppercase tracking-wider">Configuration</p>
  </div>

  <%= link_to admin_sources_path, class: "group flex items-center px-3 py-2 text-sm font-medium rounded-md #{request.path.include?('sources') ? 'bg-gray-100 text-gray-900' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}" do %>
    <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
