<%= form_with model: [:admin, @sequence, @step], local: true, class: "space-y-6" do |f| %>
  <% if @step.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h3 class="text-red-800 font-semibold mb-2"><%= t("admin.email_steps.form.errors") %></h3>
      <ul class="list-disc list-inside text-red-700">
        <% @step.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :position, t("admin.email_steps.form.position"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.number_field :position, min: 0, class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
    <p class="text-sm text-gray-500 mt-1"><%= t("admin.email_steps.form.position_help") %></p>
  </div>

  <div>
    <%= f.label :delay_seconds, t("admin.email_steps.form.delay_seconds"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.number_field :delay_seconds, min: 0, class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
    <p class="text-sm text-gray-500 mt-1"><%= t("admin.email_steps.form.delay_help") %></p>
  </div>

  <div>
    <%= f.label :subject, t("admin.email_steps.form.subject"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :subject, class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :body_html, t("admin.email_steps.form.body_html"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :body_html, rows: 10, class: "w-full px-4 py-2 border rounded-lg font-mono text-sm focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :body_text, t("admin.email_steps.form.body_text"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :body_text, rows: 6, class: "w-full px-4 py-2 border rounded-lg font-mono text-sm focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="flex gap-4">
    <%= f.submit class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition cursor-pointer" %>
    <%= link_to t("admin.email_steps.form.cancel"),
                admin_email_sequence_path(@sequence),
                class: "px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition" %>
  </div>
<% end %>
