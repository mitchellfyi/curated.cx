<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900"><%= t('admin.digest_subscriptions.title') %></h1>
      <p class="mt-2 text-gray-600"><%= t('admin.digest_subscriptions.description') %></p>
    </div>

    <% if @digest_subscriptions.any? %>
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('admin.digest_subscriptions.table.email') %></th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('admin.digest_subscriptions.table.frequency') %></th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('admin.digest_subscriptions.table.status') %></th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('admin.digest_subscriptions.table.tags') %></th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('admin.digest_subscriptions.table.referrals') %></th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('admin.digest_subscriptions.table.subscribed') %></th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only"><%= t('actions.actions') %></span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @digest_subscriptions.each do |subscription| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= subscription.user.email %></td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= badge(subscription.frequency.humanize, :blue) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= status_indicator(subscription.active? ? :active : :inactive) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if subscription.subscriber_tags.any? %>
                    <div class="flex flex-wrap gap-1">
                      <% subscription.subscriber_tags.each do |tag| %>
                        <%= badge(tag.name, :gray) %>
                      <% end %>
                    </div>
                  <% else %>
                    <span class="text-sm text-gray-400">â€”</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= subscription.confirmed_referrals_count %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= subscription.created_at.strftime("%b %d, %Y") %></td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to t('actions.view'), admin_digest_subscription_path(subscription), class: "text-blue-600 hover:text-blue-500" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @digest_subscriptions.respond_to?(:total_pages) && @digest_subscriptions.total_pages > 1 %>
        <div class="mt-4">
          <%= paginate @digest_subscriptions %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <h3 class="mt-4 text-sm font-medium text-gray-900"><%= t('admin.digest_subscriptions.empty') %></h3>
      </div>
    <% end %>
  </div>
</div>
