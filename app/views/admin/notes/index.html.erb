<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center sm:justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Notes</h1>
        <p class="mt-2 text-gray-600">
          <% if @user %>
            Notes by: <strong><%= @user.email %></strong>
            (<%= link_to "show all", admin_notes_path, class: "text-blue-600 hover:underline" %>)
          <% else %>
            User-generated short posts
          <% end %>
        </p>
      </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg p-4">
        <dt class="text-sm font-medium text-gray-500 truncate">Total</dt>
        <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= number_with_delimiter(@stats[:total]) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-4">
        <dt class="text-sm font-medium text-gray-500 truncate">Published</dt>
        <dd class="mt-1 text-2xl font-semibold text-green-600"><%= number_with_delimiter(@stats[:published]) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-4">
        <dt class="text-sm font-medium text-gray-500 truncate">Drafts</dt>
        <dd class="mt-1 text-2xl font-semibold text-gray-400"><%= number_with_delimiter(@stats[:drafts]) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-4">
        <dt class="text-sm font-medium text-gray-500 truncate">Hidden</dt>
        <dd class="mt-1 text-2xl font-semibold text-red-600"><%= number_with_delimiter(@stats[:hidden]) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-4">
        <dt class="text-sm font-medium text-gray-500 truncate">This Week</dt>
        <dd class="mt-1 text-2xl font-semibold text-blue-600">+<%= number_with_delimiter(@stats[:this_week]) %></dd>
      </div>
    </div>

    <!-- Filters -->
    <div class="bg-white shadow rounded-lg mb-6 p-4">
      <%= form_with url: admin_notes_path, method: :get, class: "flex flex-wrap gap-4" do |f| %>
        <div class="flex-1 min-w-[200px]">
          <%= f.text_field :search, value: params[:search], placeholder: "Search note content...", class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
        <div>
          <%= f.select :status,
              options_for_select([["All status", ""], ["Published", "published"], ["Drafts", "drafts"], ["Hidden", "hidden"]], params[:status]),
              {},
              class: "rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
        <%= f.submit "Filter", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 cursor-pointer" %>
        <%= link_to "Clear", admin_notes_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300" %>
      <% end %>
    </div>

    <!-- Notes List -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <ul class="divide-y divide-gray-200">
        <% @notes.each do |note| %>
          <li class="p-4 hover:bg-gray-50 <%= note.hidden? ? 'bg-red-50' : '' %>">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <!-- Author -->
                <div class="flex items-center mb-2">
                  <% if note.user.avatar_url.present? %>
                    <%= image_tag note.user.avatar_url, class: "h-8 w-8 rounded-full mr-2" %>
                  <% else %>
                    <div class="h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center mr-2">
                      <span class="text-gray-500 text-xs font-medium"><%= note.user.email.first.upcase %></span>
                    </div>
                  <% end %>
                  <div>
                    <p class="text-sm font-medium text-gray-900">
                      <%= link_to note.user.display_name.presence || note.user.email, admin_user_path(note.user), class: "hover:underline" %>
                    </p>
                    <p class="text-xs text-gray-500"><%= time_ago_in_words(note.created_at) %> ago</p>
                  </div>
                </div>

                <!-- Body -->
                <p class="text-gray-700 mb-2"><%= truncate(note.body, length: 280) %></p>

                <!-- Badges -->
                <div class="flex flex-wrap gap-2">
                  <% if note.published? %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">Published</span>
                  <% else %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">Draft</span>
                  <% end %>
                  <% if note.hidden? %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">Hidden</span>
                  <% end %>
                  <% if note.repost? %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">Repost</span>
                  <% end %>
                  <span class="inline-flex items-center text-xs text-gray-500">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                    </svg>
                    <%= note.upvotes_count %>
                  </span>
                  <span class="inline-flex items-center text-xs text-gray-500">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                    </svg>
                    <%= note.comments_count %>
                  </span>
                </div>
              </div>

              <!-- Actions -->
              <div class="ml-4 flex-shrink-0">
                <%= link_to "View", admin_note_path(note), class: "text-blue-600 hover:underline text-sm" %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>

      <% if @notes.empty? %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No notes yet</h3>
          <p class="mt-1 text-sm text-gray-500">User notes will appear here.</p>
        </div>
      <% end %>

      <% if @notes.respond_to?(:total_pages) && @notes.total_pages > 1 %>
        <div class="px-4 py-3 border-t border-gray-200">
          <%= paginate @notes %>
        </div>
      <% end %>
    </div>
  </div>
</div>
