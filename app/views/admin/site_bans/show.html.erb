<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold"><%= t("admin.site_bans.show.title") %></h1>
    <%= link_to t("common.back"), admin_site_bans_path, class: "btn btn-secondary" %>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6">
    <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("admin.site_bans.user") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @site_ban.user&.email %></dd>
      </div>

      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("admin.site_bans.banned_by") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @site_ban.banned_by&.email %></dd>
      </div>

      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500"><%= t("admin.site_bans.reason") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @site_ban.reason %></dd>
      </div>

      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("admin.site_bans.expires_at") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @site_ban.expires_at&.strftime("%Y-%m-%d %H:%M") || t("admin.site_bans.permanent") %></dd>
      </div>

      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("admin.site_bans.created_at") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @site_ban.created_at.strftime("%Y-%m-%d %H:%M") %></dd>
      </div>
    </dl>

    <div class="mt-6 border-t pt-6">
      <%= button_to t("common.delete"), admin_site_ban_path(@site_ban), method: :delete, class: "btn btn-danger", data: { turbo_confirm: t("admin.site_bans.confirm_destroy") } %>
    </div>
  </div>
</div>
