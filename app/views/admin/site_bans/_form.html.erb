<%= form_with(model: [:admin, site_ban], class: "space-y-6") do |form| %>
  <% if site_ban.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <h3 class="text-sm font-medium text-red-800"><%= pluralize(site_ban.errors.count, "error") %> prohibited this ban from being saved:</h3>
      <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
        <% site_ban.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :user_id, t("admin.site_bans.user"), class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :user_id, User.all.order(:email), :id, :email, { include_blank: true }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :reason, t("admin.site_bans.reason"), class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :reason, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :expires_at, t("admin.site_bans.expires_at"), class: "block text-sm font-medium text-gray-700" %>
    <%= form.datetime_local_field :expires_at, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    <p class="mt-1 text-sm text-gray-500"><%= t("admin.site_bans.expires_at_help") %></p>
  </div>

  <div class="flex justify-end">
    <%= form.submit t("common.save"), class: "btn btn-primary" %>
  </div>
<% end %>
