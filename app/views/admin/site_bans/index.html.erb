<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center sm:justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= t("admin.site_bans.index.title") %></h1>
        <p class="mt-2 text-gray-600">Manage banned users on this site</p>
      </div>
      <%= link_to new_admin_site_ban_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
        </svg>
        Ban User
      <% end %>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Total Bans</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @site_bans.count %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Active</dt>
        <dd class="mt-1 text-3xl font-semibold text-red-600"><%= @site_bans.count { |b| b.expires_at.nil? || b.expires_at > Time.current } %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Permanent</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-600"><%= @site_bans.count { |b| b.expires_at.nil? } %></dd>
      </div>
    </div>

  <% if @site_bans.any? %>
    <div class="bg-white shadow rounded-lg overflow-hidden overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reason</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Banned By</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Expires</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @site_bans.each do |site_ban| %>
            <% is_active = site_ban.expires_at.nil? || site_ban.expires_at > Time.current %>
            <tr class="<%= is_active ? '' : 'bg-gray-50 opacity-60' %>">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= site_ban.user&.email %></div>
                <% if site_ban.user %>
                  <div class="text-xs text-gray-500">ID: <%= site_ban.user.id %></div>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900 max-w-xs truncate"><%= site_ban.reason.presence || "No reason provided" %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if is_active %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    Active
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    Expired
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= site_ban.banned_by&.email || "System" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <% if site_ban.expires_at.nil? %>
                  <span class="text-red-600 font-medium">Permanent</span>
                <% elsif site_ban.expires_at > Time.current %>
                  <span class="text-gray-900"><%= site_ban.expires_at.strftime("%b %d, %Y") %></span>
                  <div class="text-xs text-gray-500"><%= time_ago_in_words(site_ban.expires_at) %> left</div>
                <% else %>
                  <span class="text-gray-400">Expired <%= time_ago_in_words(site_ban.expires_at) %> ago</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= link_to "View", admin_site_ban_path(site_ban), class: "text-blue-600 hover:underline mr-3" %>
                <%= button_to "Remove", admin_site_ban_path(site_ban), method: :delete, class: "text-red-600 hover:underline", data: { confirm: "Remove this ban?" }, form: { class: "inline" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900"><%= t("admin.site_bans.no_bans") %></h3>
      <p class="mt-1 text-sm text-gray-500">All users are in good standing.</p>
    </div>
  <% end %>
  </div>
</div>
