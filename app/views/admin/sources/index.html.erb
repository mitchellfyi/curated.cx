<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= t("admin.sources.index.title") %></h1>
        <p class="mt-2 text-gray-600"><%= t("admin.sources.index.description") %></p>
      </div>
      <%= link_to new_admin_source_path, class: button_classes(variant: :primary) do %>
        <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <%= t("admin.sources.index.new_source") %>
      <% end %>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg p-4">
        <dt class="text-sm font-medium text-gray-500 truncate">Total Sources</dt>
        <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @sources.count %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-4">
        <dt class="text-sm font-medium text-gray-500 truncate">Enabled</dt>
        <dd class="mt-1 text-2xl font-semibold text-green-600"><%= @sources.count(&:enabled?) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-4">
        <dt class="text-sm font-medium text-gray-500 truncate">SerpAPI</dt>
        <dd class="mt-1 text-2xl font-semibold text-purple-600"><%= @sources.count { |s| s.kind.to_s.start_with?('serp_api') } %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-4">
        <dt class="text-sm font-medium text-gray-500 truncate">RSS</dt>
        <dd class="mt-1 text-2xl font-semibold text-blue-600"><%= @sources.count(&:rss?) %></dd>
      </div>
    </div>

    <% if @sources.any? %>
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <ul class="divide-y divide-gray-200">
          <% @sources.each do |source| %>
            <li>
              <%= link_to admin_source_path(source), class: "block hover:bg-gray-50" do %>
                <div class="px-4 py-4 sm:px-6">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center">
                      <p class="text-sm font-medium text-blue-600 truncate">
                        <%= source.name %>
                      </p>
                      <%= status_indicator(source.enabled? ? :enabled : :disabled) %>
                      <%= badge(source.kind.humanize, :blue) %>
                    </div>
                    <div class="ml-2 flex-shrink-0 flex">
                      <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="mt-2 sm:flex sm:justify-between">
                    <div class="sm:flex">
                      <p class="flex items-center text-sm text-gray-500">
                        <%= source.site.name %>
                      </p>
                    </div>
                    <div class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
                      <% if source.last_run_at %>
                        <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <%= t("admin.sources.last_run") %>: <%= time_ago_in_words(source.last_run_at) %> <%= t("time.ago", time: "") %>
                      <% else %>
                        <span class="text-gray-400"><%= t("admin.sources.never_run") %></span>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div class="text-center py-12 bg-white rounded-lg shadow">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900"><%= t("admin.sources.index.no_sources") %></h3>
        <p class="mt-1 text-sm text-gray-500"><%= t("admin.sources.index.get_started") %></p>
        <div class="mt-6">
          <%= link_to new_admin_source_path, class: button_classes(variant: :primary) do %>
            <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            <%= t("admin.sources.index.new_source") %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
