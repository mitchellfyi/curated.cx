<%= form_with model: [:admin, @source], local: true, class: "space-y-6" do |form| %>
  <% if @source.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@source.errors.count, "error") %> prohibited this source from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @source.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :name, t("admin.sources.form.name"), class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: t("admin.sources.form.name_placeholder") %>
  </div>

  <div>
    <%= form.label :site_id, t("admin.sources.form.site"), class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :site_id, policy_scope(Site).order(:name), :id, :name, { prompt: t("admin.sources.form.select_site") }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :kind, t("admin.sources.form.kind"), class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :kind, Source.kinds.keys.map { |k| [k.humanize, k] }, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div class="flex items-center">
    <%= form.check_box :enabled, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
    <%= form.label :enabled, t("admin.sources.form.enabled"), class: "ml-2 block text-sm text-gray-900" %>
  </div>

  <fieldset class="border border-gray-200 rounded-md p-4">
    <legend class="text-sm font-medium text-gray-700 px-2"><%= t("admin.sources.form.serp_api_config") %></legend>

    <div class="space-y-4">
      <div>
        <%= form.label "config[api_key]", t("admin.sources.form.api_key"), class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field "config[api_key]", value: @source.config["api_key"], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: t("admin.sources.form.api_key_placeholder") %>
        <p class="mt-1 text-xs text-gray-500"><%= t("admin.sources.form.api_key_hint") %></p>
      </div>

      <div>
        <%= form.label "config[query]", t("admin.sources.form.query"), class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field "config[query]", value: @source.config["query"], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: t("admin.sources.form.query_placeholder") %>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <%= form.label "config[location]", t("admin.sources.form.location"), class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field "config[location]", value: @source.config["location"] || "United States", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label "config[language]", t("admin.sources.form.language"), class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field "config[language]", value: @source.config["language"] || "en", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div>
          <%= form.label "config[max_results]", t("admin.sources.form.max_results"), class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field "config[max_results]", value: @source.config["max_results"] || 50, min: 1, max: 100, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label "config[rate_limit_per_hour]", t("admin.sources.form.rate_limit_per_hour"), class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field "config[rate_limit_per_hour]", value: @source.config["rate_limit_per_hour"] || 10, min: 1, max: 100, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
      </div>
    </div>
  </fieldset>

  <fieldset class="border border-gray-200 rounded-md p-4">
    <legend class="text-sm font-medium text-gray-700 px-2"><%= t("admin.sources.form.schedule") %></legend>

    <div class="space-y-4">
      <% current_interval = @source.schedule["interval_seconds"] || 3600 %>
      <% preset_values = [900, 1800, 3600, 10800, 21600, 43200, 86400, 604800] %>
      <% is_preset = preset_values.include?(current_interval) %>

      <div>
        <%= form.label "schedule_preset", "Frequency", class: "block text-sm font-medium text-gray-700" %>
        <select name="schedule_preset" id="schedule_preset" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" data-custom-target="schedule_custom_interval">
          <option value="900" <%= "selected" if current_interval == 900 %>>Every 15 minutes</option>
          <option value="1800" <%= "selected" if current_interval == 1800 %>>Every 30 minutes</option>
          <option value="3600" <%= "selected" if current_interval == 3600 %>>Hourly</option>
          <option value="10800" <%= "selected" if current_interval == 10800 %>>Every 3 hours</option>
          <option value="21600" <%= "selected" if current_interval == 21600 %>>Every 6 hours</option>
          <option value="43200" <%= "selected" if current_interval == 43200 %>>Every 12 hours</option>
          <option value="86400" <%= "selected" if current_interval == 86400 %>>Daily</option>
          <option value="604800" <%= "selected" if current_interval == 604800 %>>Weekly</option>
          <option value="custom" <%= "selected" unless is_preset %>>Custom interval...</option>
        </select>
      </div>

      <div id="custom_interval_wrapper" class="<%= 'hidden' if is_preset %>">
        <label for="schedule_custom_interval" class="block text-sm font-medium text-gray-700">Custom interval (minutes)</label>
        <input type="number" id="schedule_custom_interval" value="<%= current_interval / 60 %>" min="5" step="5" autocomplete="off" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
      </div>

      <%= form.hidden_field "schedule[interval_seconds]", value: current_interval, id: "schedule_interval_seconds" %>
      <p class="text-xs text-gray-500">How often this source should be checked for new content. SerpAPI sources use API credits on each run.</p>
    </div>
  </fieldset>

  <fieldset class="border border-gray-200 rounded-md p-4">
    <legend class="text-sm font-medium text-gray-700 px-2">RSS Configuration</legend>
    <div>
      <%= form.label "config[url]", "Feed URL", class: "block text-sm font-medium text-gray-700" %>
      <%= form.url_field "config[url]", value: @source.config["url"], class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "https://example.com/feed.xml" %>
      <p class="mt-1 text-xs text-gray-500">The RSS or Atom feed URL to fetch content from. Only used for RSS source kind.</p>
    </div>
  </fieldset>

  <div class="flex justify-end space-x-3">
    <%= link_to t("admin.sources.form.cancel"), admin_sources_path, class: button_classes(variant: :secondary) %>
    <%= form.submit @source.persisted? ? t("admin.sources.form.update") : t("admin.sources.form.create"), class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
  </div>
<% end %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const presetSelect = document.getElementById('schedule_preset');
    const customWrapper = document.getElementById('custom_interval_wrapper');
    const customInput = document.getElementById('schedule_custom_interval');
    const hiddenField = document.getElementById('schedule_interval_seconds');

    function updateHiddenField() {
      if (presetSelect.value === 'custom') {
        customWrapper.classList.remove('hidden');
        const minutes = parseInt(customInput.value, 10);
        if (!isNaN(minutes)) hiddenField.value = minutes * 60;
      } else {
        customWrapper.classList.add('hidden');
        hiddenField.value = presetSelect.value;
      }
    }

    presetSelect.addEventListener('change', updateHiddenField);
    customInput.addEventListener('input', function() {
      const minutes = parseInt(this.value, 10);
      if (!isNaN(minutes)) hiddenField.value = minutes * 60;
    });
  });
</script>
