<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @source.name %></h1>
          <p class="mt-2 text-gray-600"><%= @source.kind.humanize %> - <%= @source.site.name %></p>
        </div>
        <div class="flex space-x-3">
          <% if @source.enabled? %>
            <%= button_to run_now_admin_source_path(@source), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700" do %>
              <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <%= t("admin.sources.run_now") %>
            <% end %>
          <% end %>
          <%= link_to t("admin.sources.edit"), edit_admin_source_path(@source), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
          <%= link_to t("admin.sources.back_to_sources"), admin_sources_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
        </div>
      </div>
    </div>

    <!-- Status Card -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-4 py-5 sm:p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4"><%= t("admin.sources.status") %></h2>
        <dl class="grid grid-cols-1 gap-5 sm:grid-cols-4">
          <div class="px-4 py-5 bg-gray-50 shadow rounded-lg overflow-hidden sm:p-6">
            <dt class="text-sm font-medium text-gray-500 truncate"><%= t("admin.sources.status") %></dt>
            <dd class="mt-1 text-lg font-semibold">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium <%= @source.enabled? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= @source.enabled? ? t("admin.sources.enabled") : t("admin.sources.disabled") %>
              </span>
            </dd>
          </div>
          <div class="px-4 py-5 bg-gray-50 shadow rounded-lg overflow-hidden sm:p-6">
            <dt class="text-sm font-medium text-gray-500 truncate"><%= t("admin.sources.last_run") %></dt>
            <dd class="mt-1 text-lg font-semibold text-gray-900">
              <%= @source.last_run_at ? time_ago_in_words(@source.last_run_at) + " ago" : t("admin.sources.never_run") %>
            </dd>
          </div>
          <div class="px-4 py-5 bg-gray-50 shadow rounded-lg overflow-hidden sm:p-6">
            <dt class="text-sm font-medium text-gray-500 truncate"><%= t("admin.sources.last_status") %></dt>
            <dd class="mt-1 text-lg font-semibold text-gray-900">
              <%= @source.last_status.presence || "-" %>
            </dd>
          </div>
          <div class="px-4 py-5 bg-gray-50 shadow rounded-lg overflow-hidden sm:p-6">
            <dt class="text-sm font-medium text-gray-500 truncate"><%= t("admin.sources.rate_limit") %></dt>
            <dd class="mt-1 text-lg font-semibold text-gray-900">
              <%= @rate_limiter.used %>/<%= @rate_limiter.limit %> <%= t("admin.sources.per_hour") %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- Configuration Card -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-4 py-5 sm:p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4"><%= t("admin.sources.configuration") %></h2>
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <% @source.config.each do |key, value| %>
            <% next if key.to_s == "api_key" %>
            <div>
              <dt class="text-sm font-medium text-gray-500"><%= key.to_s.humanize %></dt>
              <dd class="mt-1 text-sm text-gray-900"><%= value.presence || "-" %></dd>
            </div>
          <% end %>
          <div>
            <dt class="text-sm font-medium text-gray-500"><%= t("admin.sources.schedule_interval") %></dt>
            <dd class="mt-1 text-sm text-gray-900">
              <% interval = @source.schedule_interval_seconds %>
              <%= interval ? "#{interval / 60} minutes" : "-" %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- Import Runs History -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4"><%= t("admin.sources.import_history") %></h2>
        <% if @import_runs.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.sources.started_at") %></th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.sources.status") %></th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.sources.duration") %></th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.sources.items_created") %></th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.sources.items_updated") %></th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("admin.sources.items_failed") %></th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @import_runs.each do |run| %>
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= run.started_at.strftime("%Y-%m-%d %H:%M:%S") %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% status_class = case run.status
                         when "completed" then "bg-green-100 text-green-800"
                         when "failed" then "bg-red-100 text-red-800"
                         else "bg-yellow-100 text-yellow-800"
                         end %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_class %>">
                        <%= run.status.humanize %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= run.duration ? "#{run.duration.round(1)}s" : "-" %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= run.items_created %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= run.items_updated %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= run.items_failed %></td>
                  </tr>
                  <% if run.error_message.present? %>
                    <tr>
                      <td colspan="6" class="px-6 py-2 text-sm text-red-600 bg-red-50">
                        <%= truncate(run.error_message, length: 200) %>
                      </td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-sm text-gray-500"><%= t("admin.sources.no_import_runs") %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
