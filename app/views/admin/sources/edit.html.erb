<div class="py-8">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900"><%= t("admin.sources.edit.title") %></h1>
      <p class="mt-2 text-gray-600"><%= @source.name %></p>
    </div>

    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <%= render "form" %>
      </div>
    </div>

    <div class="mt-8 bg-red-50 shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h2 class="text-lg font-medium text-red-900"><%= t("admin.sources.edit.danger_zone") %></h2>
        <p class="mt-1 text-sm text-red-700"><%= t("admin.sources.edit.delete_warning") %></p>
        <div class="mt-4">
          <%= button_to t("admin.sources.edit.delete"), admin_source_path(@source), method: :delete, data: { turbo_confirm: t("actions.confirm") }, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700" %>
        </div>
      </div>
    </div>
  </div>
</div>
