<div class="py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <%= link_to admin_subscriber_tags_path, class: "text-sm text-gray-500 hover:text-gray-700" do %>
        &larr; <%= t('admin.subscriber_tags.back_to_list') %>
      <% end %>
      <div class="mt-2 flex items-center justify-between">
        <h1 class="text-3xl font-bold text-gray-900"><%= @subscriber_tag.name %></h1>
        <%= link_to t('actions.edit'), edit_admin_subscriber_tag_path(@subscriber_tag), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      </div>
    </div>

    <div class="bg-white shadow sm:rounded-lg mb-6">
      <div class="px-4 py-5 sm:p-6">
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-gray-500"><%= t('admin.subscriber_tags.show.slug') %></dt>
            <dd class="mt-1 text-sm text-gray-900"><code><%= @subscriber_tag.slug %></code></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500"><%= t('admin.subscriber_tags.show.subscribers') %></dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @subscriber_tag.digest_subscriptions.count %></dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div>
