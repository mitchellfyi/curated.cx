<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= t('admin.subscriber_tags.title') %></h1>
        <p class="mt-2 text-gray-600"><%= t('admin.subscriber_tags.description') %></p>
      </div>
      <%= link_to new_admin_subscriber_tag_path, class: "inline-flex items-center px-4 py-2 <%= button_classes(variant: :primary) %>" do %>
        <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <%= t('admin.subscriber_tags.index.new_tag') %>
      <% end %>
    </div>

    <% if @subscriber_tags.any? %>
      <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('admin.subscriber_tags.table.name') %></th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('admin.subscriber_tags.table.slug') %></th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('admin.subscriber_tags.table.subscribers') %></th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only"><%= t('actions.actions') %></span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @subscriber_tags.each do |tag| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= tag.name %></td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <code class="text-sm text-gray-600"><%= tag.slug %></code>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= tag.digest_subscriptions.count %></td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                  <%= link_to t('actions.edit'), edit_admin_subscriber_tag_path(tag), class: "text-blue-600 hover:text-blue-500" %>
                  <%= button_to t('actions.delete'), admin_subscriber_tag_path(tag), method: :delete, data: { turbo_confirm: t('admin.subscriber_tags.confirm_delete') }, class: "text-red-600 hover:text-red-500" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
        </svg>
        <h3 class="mt-4 text-sm font-medium text-gray-900"><%= t('admin.subscriber_tags.empty') %></h3>
        <p class="mt-1 text-sm text-gray-500"><%= t('admin.subscriber_tags.description') %></p>
        <div class="mt-6">
          <%= link_to new_admin_subscriber_tag_path, class: "inline-flex items-center px-4 py-2 <%= button_classes(variant: :primary) %>" do %>
            <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            <%= t('admin.subscriber_tags.index.new_tag') %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
