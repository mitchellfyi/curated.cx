<%= form_with(model: [:admin, subscriber_tag], class: "space-y-6") do |form| %>
  <% if subscriber_tag.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= t('errors.form_errors', count: subscriber_tag.errors.count) %></h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% subscriber_tag.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :name, t('admin.subscriber_tags.form.name'), class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: t('admin.subscriber_tags.form.name_placeholder'), required: true %>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to t('admin.subscriber_tags.form.cancel'), admin_subscriber_tags_path, class: button_classes(variant: :secondary) %>
    <%= form.submit subscriber_tag.persisted? ? t('admin.subscriber_tags.form.update') : t('admin.subscriber_tags.form.create'), class: "#{button_classes(variant: :primary)} cursor-pointer" %>
  </div>
<% end %>
