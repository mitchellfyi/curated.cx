<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <div class="flex justify-between items-start">
        <div>
          <div class="flex items-center space-x-2 mb-2">
            <%= type_badge(@listing.listing_type) %>
            <% if @listing.scheduled? %>
              <%= badge(t("admin.listings.scheduling.scheduled"), :yellow) %>
            <% elsif @listing.published? %>
              <%= badge_success("Published") %>
            <% else %>
              <%= badge_warning("Draft") %>
            <% end %>
            <%= badge(t("monetisation.badges.featured"), :purple) if @listing.featured? %>
            <%= badge_danger(t("monetisation.job.expired")) if @listing.expired? %>
            <%= badge_success("Paid") if @listing.paid? %>
          </div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @listing.title %></h1>
          <p class="mt-2 text-gray-600"><%= @listing.category.name %> &middot; <%= @listing.domain %></p>
        </div>
        <div class="flex space-x-3">
          <%= link_to t("actions.edit"), edit_admin_listing_path(@listing), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
          <%= link_to t("actions.back"), admin_listings_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
        </div>
      </div>
    </div>

    <!-- Monetisation Actions Card -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-4 py-5 sm:p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Monetisation Actions</h2>
        <div class="flex flex-wrap gap-3">
          <% if @listing.featured? %>
            <%= button_to unfeature_admin_listing_path(@listing), method: :post, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
              <svg class="mr-2 -ml-1 w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
              </svg>
              Remove Featured
            <% end %>
          <% else %>
            <%= button_to feature_admin_listing_path(@listing), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-purple-600 hover:bg-purple-700" do %>
              <svg class="mr-2 -ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
              </svg>
              Feature Listing
            <% end %>
          <% end %>

          <% if @listing.job? %>
            <%= button_to extend_expiry_admin_listing_path(@listing), method: :post, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
              <svg class="mr-2 -ml-1 w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Extend Expiry (+30 days)
            <% end %>
          <% end %>

          <%= button_to admin_listing_path(@listing), method: :delete, class: "inline-flex items-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50", data: { turbo_confirm: t("actions.confirm") } do %>
            <svg class="mr-2 -ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Delete
          <% end %>
        </div>
      </div>
    </div>

    <!-- Scheduling Card -->
    <% if @listing.scheduled? || !@listing.published? %>
      <div class="bg-white shadow rounded-lg mb-8">
        <div class="px-4 py-5 sm:p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4"><%= t("admin.listings.scheduling.publishing") %></h2>
          <% if @listing.scheduled? %>
            <div class="mb-4 rounded-md bg-orange-50 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-orange-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-orange-700">
                    <%= t("admin.listings.scheduling.currently_scheduled", time: l(@listing.scheduled_for, format: :long)) %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
          <div class="flex flex-wrap gap-3">
            <% if @listing.scheduled? %>
              <%= button_to publish_now_admin_listing_path(@listing), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700" do %>
                <svg class="mr-2 -ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <%= t("admin.listings.scheduling.publish_immediately") %>
              <% end %>
              <%= button_to unschedule_admin_listing_path(@listing), method: :post, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
                <svg class="mr-2 -ml-1 w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <%= t("admin.listings.scheduling.unschedule") %>
              <% end %>
            <% elsif !@listing.published? %>
              <p class="text-sm text-gray-500"><%= t("admin.listings.scheduling.not_scheduled_hint") %></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Basic Information -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h2 class="text-lg font-medium text-gray-900 mb-4">Basic Information</h2>
            <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
              <div>
                <dt class="text-sm font-medium text-gray-500">Title</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @listing.title %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Category</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @listing.category.name %></dd>
              </div>
              <div class="sm:col-span-2">
                <dt class="text-sm font-medium text-gray-500">URL</dt>
                <dd class="mt-1 text-sm text-blue-600">
                  <%= link_to @listing.url_canonical, @listing.url_canonical, target: "_blank", rel: "noopener noreferrer" %>
                </dd>
              </div>
              <% if @listing.description.present? %>
                <div class="sm:col-span-2">
                  <dt class="text-sm font-medium text-gray-500">Description</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @listing.description %></dd>
                </div>
              <% end %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Created</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @listing.created_at.strftime("%Y-%m-%d %H:%M") %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Published</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @listing.published_at&.strftime("%Y-%m-%d %H:%M") || t("admin.listings.show.not_published") %></dd>
              </div>
            </dl>
          </div>
        </div>

        <!-- Job Details (if job) -->
        <% if @listing.job? %>
          <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <h2 class="text-lg font-medium text-gray-900 mb-4"><%= t("admin.listings.form.job_settings") %></h2>
              <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
                <div>
                  <dt class="text-sm font-medium text-gray-500"><%= t("admin.listings.form.company") %></dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @listing.company.presence || "-" %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500"><%= t("admin.listings.form.location") %></dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @listing.location.presence || "-" %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500"><%= t("admin.listings.form.salary_range") %></dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @listing.salary_range.presence || "-" %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500"><%= t("admin.listings.form.expires_at") %></dt>
                  <dd class="mt-1 text-sm <%= @listing.expired? ? 'text-red-600' : 'text-gray-900' %>">
                    <%= @listing.expires_at&.strftime("%Y-%m-%d %H:%M") || t("admin.listings.show.no_expiry") %>
                    <% if @listing.expired? %>
                      <span class="text-red-600 font-medium">(Expired)</span>
                    <% end %>
                  </dd>
                </div>
                <% if @listing.apply_url.present? %>
                  <div class="sm:col-span-2">
                    <dt class="text-sm font-medium text-gray-500"><%= t("admin.listings.form.apply_url") %></dt>
                    <dd class="mt-1 text-sm text-blue-600">
                      <%= link_to @listing.apply_url, @listing.apply_url, target: "_blank", rel: "noopener noreferrer" %>
                    </dd>
                  </div>
                <% end %>
              </dl>
            </div>
          </div>
        <% end %>

        <!-- Content -->
        <% if @listing.body_html.present? || @listing.body_text.present? %>
          <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
              <h2 class="text-lg font-medium text-gray-900 mb-4">Content</h2>
              <% if @listing.body_html.present? %>
                <div class="prose max-w-none">
                  <%= sanitize(@listing.body_html, tags: %w[p br strong em ul ol li h1 h2 h3 h4 h5 h6 blockquote a], attributes: %w[href]) %>
                </div>
              <% elsif @listing.body_text.present? %>
                <div class="prose max-w-none">
                  <%= simple_format(@listing.body_text) %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-8">
        <!-- Featured Status -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h2 class="text-lg font-medium text-gray-900 mb-4"><%= t("admin.listings.form.featured_settings") %></h2>
            <dl class="space-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Status</dt>
                <dd class="mt-1">
                  <%= @listing.featured? ? badge("Currently Featured", :purple) : badge("Not Featured", :gray) %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500"><%= t("admin.listings.form.featured_from") %></dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @listing.featured_from&.strftime("%Y-%m-%d %H:%M") || "-" %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500"><%= t("admin.listings.form.featured_until") %></dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @listing.featured_until&.strftime("%Y-%m-%d %H:%M") || "-" %></dd>
              </div>
              <% if @listing.featured_by.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Featured By</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @listing.featured_by.email %></dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>

        <!-- Affiliate Settings -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h2 class="text-lg font-medium text-gray-900 mb-4"><%= t("admin.listings.form.affiliate_settings") %></h2>
            <dl class="space-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Status</dt>
                <dd class="mt-1">
                  <%= @listing.has_affiliate? ? badge_success("Affiliate Enabled") : badge("No Affiliate", :gray) %>
                </dd>
              </div>
              <% if @listing.has_affiliate? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Template</dt>
                  <dd class="mt-1 text-sm text-gray-900 break-all"><%= @listing.affiliate_url_template %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Click Count</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @listing.affiliate_clicks.count %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Tracking URL</dt>
                  <dd class="mt-1 text-sm text-blue-600 break-all">
                    <%= link_to affiliate_redirect_url(@listing), affiliate_redirect_url(@listing), target: "_blank" %>
                  </dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>

        <!-- Payment Status -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h2 class="text-lg font-medium text-gray-900 mb-4"><%= t("admin.listings.form.payment_settings") %></h2>
            <dl class="space-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Status</dt>
                <dd class="mt-1">
                  <%= @listing.paid? ? badge_success("Paid") : badge("Free", :gray) %>
                </dd>
              </div>
              <% if @listing.payment_reference.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500"><%= t("admin.listings.form.payment_reference") %></dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @listing.payment_reference %></dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
