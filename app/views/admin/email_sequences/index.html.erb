<% content_for :title, t("admin.email_sequences.title") %>

<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= t("admin.email_sequences.title") %></h1>
        <p class="mt-2 text-gray-600"><%= t("admin.email_sequences.description") %></p>
      </div>
      <%= link_to new_admin_email_sequence_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" do %>
        <svg class="mr-2 -ml-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <%= t("admin.email_sequences.new") %>
      <% end %>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Total Sequences</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @sequences.count %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Enabled</dt>
        <dd class="mt-1 text-3xl font-semibold text-green-600"><%= @sequences.count(&:enabled?) %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Total Steps</dt>
        <dd class="mt-1 text-3xl font-semibold text-blue-600"><%= @sequences.sum { |s| s.email_steps.count } %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Total Enrollments</dt>
        <dd class="mt-1 text-3xl font-semibold text-purple-600"><%= @sequences.sum { |s| s.sequence_enrollments.count } %></dd>
      </div>
    </div>

  <% if @sequences.any? %>
    <div class="bg-white rounded-lg shadow overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr class="border-b bg-gray-50">
            <th class="text-left py-3 px-4"><%= t("admin.email_sequences.table.name") %></th>
            <th class="text-left py-3 px-4"><%= t("admin.email_sequences.table.trigger") %></th>
            <th class="text-center py-3 px-4"><%= t("admin.email_sequences.table.steps") %></th>
            <th class="text-center py-3 px-4"><%= t("admin.email_sequences.table.enrollments") %></th>
            <th class="text-center py-3 px-4"><%= t("admin.email_sequences.table.status") %></th>
            <th class="text-left py-3 px-4"><%= t("admin.email_sequences.table.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @sequences.each do |sequence| %>
            <tr class="border-b hover:bg-gray-50">
              <td class="py-3 px-4">
                <%= link_to sequence.name, admin_email_sequence_path(sequence), class: "font-semibold text-blue-600 hover:underline" %>
              </td>
              <td class="py-3 px-4 text-sm"><%= t("admin.email_sequences.trigger_types.#{sequence.trigger_type}") %></td>
              <td class="py-3 px-4 text-center"><%= sequence.email_steps.count %></td>
              <td class="py-3 px-4 text-center"><%= sequence.sequence_enrollments.count %></td>
              <td class="py-3 px-4 text-center"><%= status_indicator(sequence.enabled? ? :enabled : :disabled) %></td>
              <td class="py-3 px-4">
                <%= link_to t("admin.common.edit"),
                            edit_admin_email_sequence_path(sequence),
                            class: "text-blue-600 hover:underline mr-3" %>
                <%= button_to t("admin.common.delete"),
                              admin_email_sequence_path(sequence),
                              method: :delete,
                              data: { turbo_confirm: t("admin.common.confirm_delete") },
                              class: "text-red-600 hover:underline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900"><%= t("admin.email_sequences.no_sequences", default: "No email sequences") %></h3>
      <p class="mt-1 text-sm text-gray-500">Create automated email sequences for your subscribers.</p>
      <div class="mt-6">
        <%= link_to new_admin_email_sequence_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" do %>
          <svg class="mr-2 -ml-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <%= t("admin.email_sequences.create_first") %>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
</div>
