<%= form_with model: [:admin, @sequence], local: true, class: "space-y-6" do |f| %>
  <% if @sequence.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h3 class="text-red-800 font-semibold mb-2"><%= t("admin.email_sequences.form.errors") %></h3>
      <ul class="list-disc list-inside text-red-700">
        <% @sequence.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, t("admin.email_sequences.form.name"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :name, class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :trigger_type, t("admin.email_sequences.form.trigger_type"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.select :trigger_type,
                 EmailSequence.trigger_types.keys.map { |k| [t("admin.email_sequences.trigger_types.#{k}"), k] },
                 {},
                 class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :trigger_config, t("admin.email_sequences.form.trigger_config"), class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :trigger_config,
                    value: @sequence.trigger_config.present? ? @sequence.trigger_config.to_json : "{}",
                    rows: 3,
                    class: "w-full px-4 py-2 border rounded-lg font-mono text-sm focus:ring-2 focus:ring-blue-500" %>
    <p class="text-sm text-gray-500 mt-1"><%= t("admin.email_sequences.form.trigger_config_help") %></p>
  </div>

  <div class="flex items-center">
    <%= f.check_box :enabled, class: "h-4 w-4 text-blue-600 rounded border-gray-300" %>
    <%= f.label :enabled, t("admin.email_sequences.form.enabled"), class: "ml-2 text-sm text-gray-700" %>
  </div>

  <div class="flex gap-4">
    <%= f.submit class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition cursor-pointer" %>
    <%= link_to t("admin.email_sequences.form.cancel"),
                admin_email_sequences_path,
                class: "px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition" %>
  </div>
<% end %>
