<% content_for :title, t("admin.referral_reward_tiers.title") %>

<div class="py-8">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center sm:justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= t("admin.referral_reward_tiers.title") %></h1>
        <p class="mt-2 text-gray-600"><%= t("admin.referral_reward_tiers.description", default: "Define rewards for referral milestones") %></p>
      </div>
      <%= link_to new_admin_referral_reward_tier_path, class: button_classes(variant: :primary) do %>
        <svg class="mr-2 -ml-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <%= t("admin.referral_reward_tiers.new") %>
      <% end %>
    </div>

  <% if @tiers.any? %>
    <div class="bg-white rounded-lg shadow">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr class="border-b bg-gray-50">
            <th class="text-left py-3 px-4"><%= t("admin.referral_reward_tiers.table.milestone") %></th>
            <th class="text-left py-3 px-4"><%= t("admin.referral_reward_tiers.table.name") %></th>
            <th class="text-left py-3 px-4"><%= t("admin.referral_reward_tiers.table.type") %></th>
            <th class="text-center py-3 px-4"><%= t("admin.referral_reward_tiers.table.status") %></th>
            <th class="text-left py-3 px-4"><%= t("admin.referral_reward_tiers.table.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @tiers.each do |tier| %>
            <tr class="border-b hover:bg-gray-50">
              <td class="py-3 px-4 font-semibold"><%= tier.milestone %> referrals</td>
              <td class="py-3 px-4"><%= tier.name %></td>
              <td class="py-3 px-4 text-sm"><%= tier.reward_type.humanize %></td>
              <td class="py-3 px-4 text-center"><%= status_indicator(tier.active? ? :active : :inactive) %></td>
              <td class="py-3 px-4">
                <%= link_to t("admin.referral_reward_tiers.edit"),
                            edit_admin_referral_reward_tier_path(tier),
                            class: "text-blue-600 hover:underline mr-3" %>
                <%= button_to t("admin.referral_reward_tiers.delete"),
                              admin_referral_reward_tier_path(tier),
                              method: :delete,
                              data: { turbo_confirm: t("admin.referral_reward_tiers.confirm_delete") },
                              class: "text-red-600 hover:underline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No reward tiers yet</h3>
      <p class="mt-1 text-sm text-gray-500"><%= t("admin.referral_reward_tiers.no_tiers") %></p>
      <div class="mt-6">
        <%= link_to new_admin_referral_reward_tier_path, class: button_classes(variant: :primary) do %>
          <svg class="mr-2 -ml-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <%= t("admin.referral_reward_tiers.new") %>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
</div>
