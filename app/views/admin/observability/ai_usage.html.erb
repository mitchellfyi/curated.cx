<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">AI Usage Monitoring</h1>
      <p class="mt-2 text-gray-600">Track AI editorialisation costs and token usage</p>
    </div>

    <!-- Navigation Tabs -->
    <div class="border-b border-gray-200 mb-8">
      <nav class="-mb-px flex space-x-8">
        <%= link_to "Overview", admin_observability_path,
            class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
        <%= link_to "Import Pipeline", imports_admin_observability_path,
            class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
        <%= link_to "AI Editorialisation", editorialisations_admin_observability_path,
            class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
        <%= link_to "SerpAPI Usage", serp_api_admin_observability_path,
            class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
        <%= link_to "AI Costs", ai_usage_admin_observability_path,
            class: "border-blue-500 text-blue-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
        <%= link_to "Pause Control", admin_workflow_pauses_path,
            class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
        <%= link_to "Background Jobs →", "/admin/jobs",
            class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
      </nav>
    </div>

    <!-- Pause Alert -->
    <% if @is_paused %>
      <div class="rounded-md bg-yellow-50 p-4 mb-8">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8 7a1 1 0 00-1 1v4a1 1 0 001 1h4a1 1 0 001-1V8a1 1 0 00-1-1H8z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">AI Editorialisation Paused</h3>
            <div class="mt-2 text-sm text-yellow-700">
              <p>
                <% if @active_pause %>
                  Paused by <%= @active_pause.paused_by.email %> · <%= @active_pause.duration_text %> ago
                  <% if @active_pause.reason.present? %>
                    <br>Reason: <%= @active_pause.reason %>
                  <% end %>
                <% else %>
                  Editorialisation is currently paused.
                <% end %>
              </p>
            </div>
            <div class="mt-4">
              <% if @active_pause %>
                <%= link_to "Manage Pauses", admin_workflow_pauses_path, class: "text-sm font-medium text-yellow-800 hover:text-yellow-700" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Cost Overview -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Monthly Cost -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 <%= @stats[:cost][:monthly][:percent_used] > 80 ? 'bg-yellow-100' : 'bg-green-100' %> rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 <%= @stats[:cost][:monthly][:percent_used] > 80 ? 'text-yellow-600' : 'text-green-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Monthly Cost</p>
              <p class="text-2xl font-semibold text-gray-900">$<%= @stats[:cost][:monthly][:used_dollars] %></p>
              <p class="text-xs text-gray-400">of $<%= @stats[:cost][:monthly][:limit_dollars] %> limit</p>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="<%= @stats[:cost][:monthly][:percent_used] > 80 ? 'bg-yellow-500' : 'bg-green-500' %> h-2 rounded-full" style="width: <%= [@stats[:cost][:monthly][:percent_used], 100].min %>%"></div>
          </div>
          <p class="mt-1 text-xs text-gray-500"><%= @stats[:cost][:monthly][:percent_used] %>% used</p>
        </div>
      </div>

      <!-- Daily Cost -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Today's Cost</p>
              <p class="text-2xl font-semibold text-gray-900">$<%= @stats[:cost][:daily][:used_dollars] %></p>
              <p class="text-xs text-gray-400">soft limit: $<%= (@stats[:cost][:daily][:soft_limit_cents] / 100.0).round(2) %></p>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <div class="text-sm">
            <span class="text-gray-600"><%= @stats[:requests][:total_today] %> requests today</span>
          </div>
        </div>
      </div>

      <!-- Monthly Tokens -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Monthly Tokens</p>
              <p class="text-2xl font-semibold text-gray-900"><%= number_with_delimiter(@stats[:tokens][:monthly][:used]) %></p>
              <p class="text-xs text-gray-400">of <%= number_with_delimiter(@stats[:tokens][:monthly][:limit]) %> limit</p>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="bg-purple-500 h-2 rounded-full" style="width: <%= [@stats[:tokens][:monthly][:percent_used], 100].min %>%"></div>
          </div>
          <p class="mt-1 text-xs text-gray-500"><%= @stats[:tokens][:monthly][:percent_used] %>% used</p>
        </div>
      </div>

      <!-- Projection -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 <%= @stats[:projections][:on_track] ? 'bg-green-100' : 'bg-red-100' %> rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 <%= @stats[:projections][:on_track] ? 'text-green-600' : 'text-red-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Projected Monthly</p>
              <p class="text-2xl font-semibold <%= @stats[:projections][:on_track] ? 'text-green-600' : 'text-red-600' %>">
                $<%= @stats[:projections][:projected_monthly_dollars] %>
              </p>
              <p class="text-xs text-gray-400">
                <%= @stats[:projections][:days_remaining_in_month] %> days left
              </p>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <div class="text-sm">
            <% if @stats[:projections][:on_track] %>
              <span class="text-green-600">✓ On track</span>
            <% else %>
              <span class="text-red-600">⚠ Over budget</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Pause Control -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
        <div class="flex items-center justify-between">
          <h3 class="text-lg leading-6 font-medium text-gray-900">AI Processing Control</h3>
          <% if @is_paused && @active_pause %>
            <%= button_to "Resume Processing",
                resume_admin_workflow_pause_path(@active_pause),
                method: :post,
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
          <% else %>
            <%= button_to "Pause Processing",
                pause_admin_workflow_pauses_path(workflow_type: "editorialisation"),
                method: :post,
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700",
                data: { confirm: "Pause AI editorialisation? New content will queue until resumed." } %>
          <% end %>
        </div>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div>
            <dt class="text-sm font-medium text-gray-500">Avg Tokens/Request</dt>
            <dd class="mt-1 text-2xl font-semibold text-gray-900">
              <%= number_with_delimiter(@stats[:requests][:avg_tokens_per_request]) %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Avg Cost/Request</dt>
            <dd class="mt-1 text-2xl font-semibold text-gray-900">
              $<%= (@stats[:requests][:avg_cost_cents_per_request] / 100.0).round(3) %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Total This Month</dt>
            <dd class="mt-1 text-2xl font-semibold text-gray-900">
              <%= number_with_delimiter(@stats[:requests][:total_this_month]) %> requests
            </dd>
          </div>
        </div>
      </div>
    </div>

    <!-- Token Breakdown -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <!-- Input vs Output -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Token Distribution</h3>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Input Tokens</span>
                <span class="font-medium"><%= number_with_delimiter(@stats[:tokens][:monthly][:input]) %></span>
              </div>
              <div class="mt-1 w-full bg-gray-200 rounded-full h-3">
                <% total = @stats[:tokens][:monthly][:input] + @stats[:tokens][:monthly][:output] %>
                <% input_pct = total > 0 ? (@stats[:tokens][:monthly][:input].to_f / total * 100).round : 0 %>
                <div class="bg-blue-500 h-3 rounded-full" style="width: <%= input_pct %>%"></div>
              </div>
            </div>
            <div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Output Tokens</span>
                <span class="font-medium"><%= number_with_delimiter(@stats[:tokens][:monthly][:output]) %></span>
              </div>
              <div class="mt-1 w-full bg-gray-200 rounded-full h-3">
                <% output_pct = total > 0 ? (@stats[:tokens][:monthly][:output].to_f / total * 100).round : 0 %>
                <div class="bg-purple-500 h-3 rounded-full" style="width: <%= output_pct %>%"></div>
              </div>
            </div>
          </div>
          <p class="mt-4 text-xs text-gray-500">
            Output tokens typically cost more than input tokens. Optimize prompts to reduce output length where possible.
          </p>
        </div>
      </div>

      <!-- Model Breakdown -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Usage by Model</h3>
        </div>
        <div class="p-6">
          <% if @stats[:models].any? %>
            <table class="min-w-full">
              <thead>
                <tr>
                  <th class="text-left text-xs font-medium text-gray-500 uppercase">Model</th>
                  <th class="text-right text-xs font-medium text-gray-500 uppercase">Requests</th>
                  <th class="text-right text-xs font-medium text-gray-500 uppercase">Tokens</th>
                  <th class="text-right text-xs font-medium text-gray-500 uppercase">Cost</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% @stats[:models].each do |model| %>
                  <tr>
                    <td class="py-2 text-sm text-gray-900"><%= model[:model] %></td>
                    <td class="py-2 text-sm text-gray-500 text-right"><%= number_with_delimiter(model[:count]) %></td>
                    <td class="py-2 text-sm text-gray-500 text-right"><%= number_with_delimiter(model[:total_tokens]) %></td>
                    <td class="py-2 text-sm text-gray-900 text-right font-medium">$<%= model[:total_cost_dollars] %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <p class="text-gray-500 text-sm">No usage data available for this month.</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Daily Usage Chart -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Daily Usage (Last 30 Days)</h3>
      </div>
      <div class="p-6">
        <div class="overflow-x-auto">
          <div class="flex items-end space-x-1" style="height: 150px; min-width: 600px;">
            <% max_cost = @daily_usage.map { |d| d[:cost_cents] }.max || 1 %>
            <% @daily_usage.each do |day| %>
              <% height_pct = max_cost > 0 ? (day[:cost_cents].to_f / max_cost * 100).round : 0 %>
              <div class="flex-1 flex flex-col items-center group">
                <div class="relative w-full">
                  <div class="bg-blue-500 rounded-t" style="height: <%= [height_pct, 5].max %>px;"></div>
                  <div class="absolute bottom-full mb-2 left-1/2 transform -translate-x-1/2 hidden group-hover:block bg-gray-800 text-white text-xs rounded py-1 px-2 whitespace-nowrap">
                    <%= day[:date] %><br>
                    <%= day[:count] %> requests<br>
                    $<%= (day[:cost_cents] / 100.0).round(2) %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="mt-4 flex justify-between text-xs text-gray-500">
          <span><%= @daily_usage.first&.dig(:date) || "Start" %></span>
          <span><%= @daily_usage.last&.dig(:date) || "Today" %></span>
        </div>
      </div>
    </div>

    <!-- Recent Editorialisations -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
        <div class="flex items-center justify-between">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Recent AI Processing</h3>
          <%= link_to "View all →", editorialisations_admin_observability_path, class: "text-sm text-blue-600 hover:underline" %>
        </div>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Content</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Model</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Tokens</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Cost</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Duration</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @recent_editorialisations.each do |ed| %>
              <tr>
                <td class="px-6 py-4 text-sm text-gray-900 max-w-xs truncate">
                  <%= ed.content_item&.title || "Unknown" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= ed.ai_model || "-" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right">
                  <%= number_with_delimiter(ed.tokens_used || 0) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right font-medium">
                  $<%= ((ed.estimated_cost_cents || 0) / 100.0).round(3) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right">
                  <%= ed.duration_ms ? "#{(ed.duration_ms / 1000.0).round(2)}s" : "-" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
                  <%= time_ago_in_words(ed.created_at) %> ago
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
