<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Import Pipeline</h1>
      <p class="mt-2 text-gray-600">Monitor content import runs from all sources</p>
    </div>

    <!-- Navigation Tabs -->
    <div class="border-b border-gray-200 mb-8">
      <nav class="-mb-px flex space-x-8">
        <%= link_to "Overview", admin_observability_path,
            class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
        <%= link_to "Import Pipeline", imports_admin_observability_path,
            class: "border-blue-500 text-blue-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
        <%= link_to "AI Editorialisation", editorialisations_admin_observability_path,
            class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
        <%= link_to "SerpAPI Usage", serp_api_admin_observability_path,
            class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
        <%= link_to "Background Jobs â†’", "/admin/jobs",
            class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" %>
      </nav>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Total Runs (24h)</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @stats[:total_runs_24h] %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Completed</dt>
        <dd class="mt-1 text-3xl font-semibold text-green-600"><%= @stats[:completed_24h] %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Failed</dt>
        <dd class="mt-1 text-3xl font-semibold text-red-600"><%= @stats[:failed_24h] %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Items Created</dt>
        <dd class="mt-1 text-3xl font-semibold text-blue-600"><%= @stats[:items_created_24h] %></dd>
      </div>
    </div>

    <!-- Additional Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Items Updated (24h)</dt>
        <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @stats[:items_updated_24h] %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Items Failed (24h)</dt>
        <dd class="mt-1 text-2xl font-semibold text-yellow-600"><%= @stats[:items_failed_24h] %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Avg Duration</dt>
        <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= (@stats[:avg_duration_ms] / 1000.0).round(2) %>s</dd>
      </div>
    </div>

    <!-- Sources by Status -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Sources by Last Run Status</h3>
      </div>
      <div class="px-4 py-5 sm:p-6">
        <div class="flex flex-wrap gap-4">
          <% @stats[:sources_by_status].each do |status, count| %>
            <div class="flex items-center">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                <%= status&.include?('success') ? 'bg-green-100 text-green-800' : 
                    status&.include?('error') ? 'bg-red-100 text-red-800' :
                    status&.include?('rate_limited') ? 'bg-yellow-100 text-yellow-800' :
                    'bg-gray-100 text-gray-800' %>">
                <%= status || 'Never run' %>: <%= count %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Active Sources -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Active Sources (<%= @sources.count %>)</h3>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Source</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Run</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @sources.each do |source| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= source.name %></div>
                  <div class="text-xs text-gray-500"><%= source.site.name %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= source.kind.start_with?('serp_api') ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>">
                    <%= source.kind.gsub('serp_api_', '').titleize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= source.last_run_at ? time_ago_in_words(source.last_run_at) + " ago" : "Never" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if source.last_run_status&.include?('success') %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Success</span>
                  <% elsif source.last_run_status&.include?('error') %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Error</span>
                  <% elsif source.last_run_status&.include?('rate_limited') %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Rate Limited</span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800"><%= source.last_run_status || "Pending" %></span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <%= link_to "View", admin_source_path(source), class: "text-blue-600 hover:underline mr-3" %>
                  <%= button_to "Run Now", run_now_admin_source_path(source), method: :post, class: "text-green-600 hover:underline", form: { class: "inline" } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Import Runs Table -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Import Runs</h3>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Source</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Started</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Duration</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Updated</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Failed</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @import_runs.each do |run| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= run.source.name %></div>
                  <div class="text-xs text-gray-500"><%= run.source.kind.gsub('serp_api_', '').titleize %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= run.started_at.strftime("%Y-%m-%d %H:%M") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <% if run.completed_at %>
                    <%= ((run.completed_at - run.started_at) * 1000).round %>ms
                  <% else %>
                    -
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% case run.status %>
                  <% when "completed" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Completed</span>
                  <% when "failed" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Failed</span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Running</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-green-600 font-medium">
                  +<%= run.items_created %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-blue-600">
                  <%= run.items_updated %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-red-600">
                  <%= run.items_failed %>
                </td>
              </tr>
              <% if run.failed? && run.error_message.present? %>
                <tr class="bg-red-50">
                  <td colspan="7" class="px-6 py-2 text-sm text-red-700">
                    <strong>Error:</strong> <%= truncate(run.error_message, length: 200) %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
      <% if @import_runs.respond_to?(:total_pages) && @import_runs.total_pages > 1 %>
        <div class="px-4 py-3 border-t border-gray-200">
          <%= paginate @import_runs %>
        </div>
      <% end %>
    </div>
  </div>
</div>
