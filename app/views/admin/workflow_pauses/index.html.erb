<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Workflow Pause Control</h1>
      <p class="mt-2 text-gray-600">Pause and resume ingestion and AI processing workflows</p>
    </div>

    <!-- Status Summary -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <% if @status_summary[:total_active] > 0 %>
                <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
              <% else %>
                <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
              <% end %>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Active Pauses</p>
              <p class="text-2xl font-semibold <%= @status_summary[:total_active] > 0 ? 'text-yellow-600' : 'text-green-600' %>">
                <%= @status_summary[:total_active] %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <% @status_summary[:by_workflow].each do |workflow, count| %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <p class="text-sm font-medium text-gray-500"><%= workflow.titleize %></p>
            <p class="mt-1 text-2xl font-semibold <%= count > 0 ? 'text-yellow-600' : 'text-gray-900' %>">
              <%= count > 0 ? 'Paused' : 'Running' %>
            </p>
            <% if @status_summary[:backlogs][workflow].to_i > 0 %>
              <p class="text-xs text-gray-400">Backlog: <%= @status_summary[:backlogs][workflow] %> items</p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Quick Pause Controls -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Quick Actions</h3>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          <% WorkflowPause::WORKFLOW_TYPES.each do |workflow_type| %>
            <% is_paused = @active_pauses.any? { |p| p.workflow_type == workflow_type && p.global? } %>
            <div class="border rounded-lg p-4 <%= is_paused ? 'border-yellow-300 bg-yellow-50' : 'border-gray-200' %>">
              <h4 class="font-medium text-gray-900"><%= workflow_type.titleize %></h4>
              <p class="text-sm text-gray-500 mb-3">
                <% if is_paused %>
                  <span class="text-yellow-600">● Paused globally</span>
                <% else %>
                  <span class="text-green-600">● Running</span>
                <% end %>
              </p>
              <% if is_paused %>
                <% pause = @active_pauses.find { |p| p.workflow_type == workflow_type && p.global? } %>
                <%= button_to "Resume", resume_admin_workflow_pause_path(pause),
                    method: :post,
                    class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-green-600 hover:bg-green-700",
                    data: { confirm: "Resume #{workflow_type.titleize} workflow?" } %>
              <% else %>
                <%= button_to "Pause", pause_admin_workflow_pauses_path(workflow_type: workflow_type),
                    method: :post,
                    class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-yellow-600 hover:bg-yellow-700",
                    data: { confirm: "Pause #{workflow_type.titleize} workflow globally?" } %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Active Pauses -->
    <% if @active_pauses.any? %>
      <div class="bg-white shadow rounded-lg mb-8">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Active Pauses</h3>
        </div>
        <ul class="divide-y divide-gray-200">
          <% @active_pauses.each do |pause| %>
            <li class="px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <span class="flex-shrink-0 w-2.5 h-2.5 rounded-full bg-yellow-400 animate-pulse"></span>
                  <div class="ml-4">
                    <p class="text-sm font-medium text-gray-900">
                      <%= pause.workflow_type.titleize %>
                      <% if pause.global? %>
                        <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
                          Global
                        </span>
                      <% elsif pause.tenant %>
                        <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                          <%= pause.tenant.name %>
                        </span>
                      <% end %>
                      <% if pause.source %>
                        <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">
                          Source: <%= pause.source.name %>
                        </span>
                      <% end %>
                    </p>
                    <p class="text-sm text-gray-500">
                      Paused by <%= pause.paused_by.email %> · <%= pause.duration_text %> ago
                      <% if pause.reason.present? %>
                        <br><span class="text-gray-400">Reason: <%= pause.reason %></span>
                      <% end %>
                    </p>
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  <%= button_to "Resume", resume_admin_workflow_pause_path(pause),
                      method: :post,
                      class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-green-600 hover:bg-green-700" %>
                  <%= button_to "Resume + Process Backlog",
                      resume_admin_workflow_pause_path(pause, process_backlog: true),
                      method: :post,
                      class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50" %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Pause Form -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Create New Pause</h3>
      </div>
      <div class="p-6">
        <%= form_with url: pause_admin_workflow_pauses_path, method: :post, class: "space-y-4" do |f| %>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label for="workflow_type" class="block text-sm font-medium text-gray-700">Workflow Type</label>
              <select name="workflow_type" id="workflow_type" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
                <% WorkflowPause::WORKFLOW_TYPES.each do |type| %>
                  <option value="<%= type %>"><%= type.titleize %></option>
                <% end %>
              </select>
            </div>
            <div>
              <label for="tenant_id" class="block text-sm font-medium text-gray-700">Tenant (optional)</label>
              <select name="tenant_id" id="tenant_id" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
                <option value="">Global (all tenants)</option>
                <% Tenant.order(:name).each do |tenant| %>
                  <option value="<%= tenant.id %>"><%= tenant.name %></option>
                <% end %>
              </select>
            </div>
            <div>
              <label for="reason" class="block text-sm font-medium text-gray-700">Reason (optional)</label>
              <input type="text" name="reason" id="reason" placeholder="Cost control, maintenance, etc." autocomplete="off" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
            </div>
          </div>
          <div>
            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500">
              Pause Workflow
            </button>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent History -->
    <% if @recent_history.any? %>
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Recent History</h3>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Workflow</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Scope</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Paused By</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Duration</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Resumed By</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reason</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @recent_history.each do |pause| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= pause.workflow_type.titleize %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <% if pause.global? %>
                      <span class="text-red-600">Global</span>
                    <% elsif pause.tenant %>
                      <%= pause.tenant.name %>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= pause.paused_by.email %>
                    <br><span class="text-gray-400"><%= pause.paused_at.strftime("%b %d, %H:%M") %></span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= pause.duration_text %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= pause.resumed_by&.email || "-" %>
                    <br><span class="text-gray-400"><%= pause.resumed_at&.strftime("%b %d, %H:%M") %></span>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-500 max-w-xs truncate">
                    <%= pause.reason || "-" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
</div>
