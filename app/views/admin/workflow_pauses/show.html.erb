<div class="py-8">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <%= link_to "â† Back to Pauses", admin_workflow_pauses_path, class: "text-blue-600 hover:text-blue-800" %>
    </div>

    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
        <div class="flex items-center justify-between">
          <h1 class="text-2xl font-bold text-gray-900">
            <%= @workflow_pause.workflow_type.titleize %> Pause
          </h1>
          <% if @workflow_pause.active? %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
              <span class="w-2 h-2 mr-2 rounded-full bg-yellow-400 animate-pulse"></span>
              Active
            </span>
          <% else %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
              Resolved
            </span>
          <% end %>
        </div>
      </div>

      <div class="px-4 py-5 sm:p-6">
        <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-gray-500">Workflow Type</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @workflow_pause.workflow_type.titleize %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Scope</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <% if @workflow_pause.global? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  Global (all tenants)
                </span>
              <% elsif @workflow_pause.tenant %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= @workflow_pause.tenant.name %>
                </span>
              <% end %>
              <% if @workflow_pause.source %>
                <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                  Source: <%= @workflow_pause.source.name %>
                </span>
              <% end %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Paused By</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @workflow_pause.paused_by.email %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Paused At</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @workflow_pause.paused_at.strftime("%B %d, %Y at %H:%M UTC") %></dd>
          </div>

          <% if @workflow_pause.reason.present? %>
            <div class="sm:col-span-2">
              <dt class="text-sm font-medium text-gray-500">Reason</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @workflow_pause.reason %></dd>
            </div>
          <% end %>

          <% if @workflow_pause.active? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Duration</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @workflow_pause.duration_text %></dd>
            </div>
          <% else %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Resumed By</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @workflow_pause.resumed_by&.email || "Unknown" %></dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Resumed At</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @workflow_pause.resumed_at&.strftime("%B %d, %Y at %H:%M UTC") %></dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Total Duration</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @workflow_pause.duration_text %></dd>
            </div>
          <% end %>
        </dl>
      </div>

      <% if @workflow_pause.active? %>
        <div class="px-4 py-4 bg-gray-50 border-t border-gray-200 sm:px-6">
          <div class="flex justify-end space-x-3">
            <%= button_to "Resume",
                resume_admin_workflow_pause_path(@workflow_pause),
                method: :post,
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
            <%= button_to "Resume + Process Backlog",
                resume_admin_workflow_pause_path(@workflow_pause, process_backlog: true),
                method: :post,
                class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
