<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @site.name %></h1>
          <p class="mt-2 text-gray-600"><%= @site.description.presence || t('admin.sites.show.no_description') %></p>
        </div>
        <div class="flex space-x-3">
          <%= link_to t('admin.sites.show.edit'), edit_admin_site_path(@site), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
          <%= link_to t('admin.sites.show.back_to_sites'), admin_sites_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
        </div>
      </div>

      <% if @site.topics.any? %>
        <div class="mt-4">
          <div class="flex flex-wrap gap-2">
            <% @site.topics.each do |topic| %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                <%= topic %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Domains Section -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-lg font-medium text-gray-900">Domains</h2>
          <%= link_to new_admin_site_domain_path(@site), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
            <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add Domain
          <% end %>
        </div>

        <% if @domains.any? %>
          <div class="space-y-4">
            <% @domains.each do |domain| %>
              <div class="border border-gray-200 rounded-lg p-4">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                      <div>
                        <p class="text-sm font-medium text-gray-900 flex items-center flex-wrap gap-2">
                          <%= domain.hostname %>
                          <%= badge("Primary", :blue) if domain.primary? %>
                          <%= status_indicator(domain.status) %>
                        </p>
                        <% if domain.last_checked_at %>
                          <p class="text-xs text-gray-500 mt-1">Last checked <%= time_ago_in_words(domain.last_checked_at) %> ago</p>
                        <% end %>
                        <% if domain.last_error.present? && domain.failed? %>
                          <p class="text-xs text-red-600 mt-1"><%= truncate(domain.last_error, length: 60) %></p>
                        <% end %>
                      </div>
                    </div>
                  <div class="flex space-x-2">
                    <%= link_to admin_site_domain_path(@site, domain), class: "text-sm text-blue-600 hover:text-blue-800" do %>
                      View DNS Instructions
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No domains</h3>
            <p class="mt-1 text-sm text-gray-500">Add a domain to make your site accessible.</p>
            <div class="mt-6">
              <%= link_to new_admin_site_domain_path(@site), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
                <svg class="mr-2 -ml-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Add Domain
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
