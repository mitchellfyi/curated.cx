<div class="py-8">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-4">
          <li>
            <%= link_to t('admin.domains.new.sites_breadcrumb'), admin_sites_path, class: "text-gray-400 hover:text-gray-500" %>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <%= link_to @site.name, admin_site_path(@site), class: "ml-4 text-gray-400 hover:text-gray-500" %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="ml-4 text-gray-500">Add Domain</span>
            </div>
          </li>
        </ol>
      </nav>
      <h1 class="mt-4 text-3xl font-bold text-gray-900">Add Domain</h1>
      <p class="mt-2 text-gray-600">Connect a domain to <%= @site.name %></p>
    </div>

    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <%= form_with model: [ :admin, @site, @domain ], local: true, class: "space-y-6" do |form| %>
          <% if @domain.errors.any? %>
            <div class="rounded-md bg-red-50 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    <%= pluralize(@domain.errors.count, "error") %> prohibited this domain from being saved:
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @domain.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <div>
            <%= form.label :hostname, t('admin.domains.new.domain_label'), class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :hostname, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "example.com or news.example.com" %>
            <p class="mt-2 text-sm text-gray-500">
              Enter an apex domain (e.g., <code class="bg-gray-100 px-1 rounded">example.com</code>) or a subdomain (e.g., <code class="bg-gray-100 px-1 rounded">news.example.com</code>)
            </p>
          </div>

          <% unless @site.domains.empty? %>
            <div>
              <div class="flex items-center">
                <%= form.check_box :primary, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
                <%= form.label :primary, t('admin.domains.new.set_as_primary'), class: "ml-2 block text-sm text-gray-900" %>
              </div>
              <p class="mt-1 text-sm text-gray-500">Only one domain can be primary per site</p>
            </div>
          <% end %>

          <div class="flex justify-end space-x-3">
            <%= link_to t('admin.domains.new.cancel'), admin_site_path(@site), class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
            <%= form.submit t('admin.domains.new.submit'), class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
