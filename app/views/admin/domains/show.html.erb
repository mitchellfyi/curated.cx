<div class="py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-4">
          <li>
            <%= link_to t('admin.domains.show.sites_breadcrumb'), admin_sites_path, class: "text-gray-400 hover:text-gray-500" %>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <%= link_to @site.name, admin_site_path(@site), class: "ml-4 text-gray-400 hover:text-gray-500" %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="ml-4 text-gray-500"><%= @domain.hostname %></span>
            </div>
          </li>
        </ol>
      </nav>
      <div class="mt-4 flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @domain.hostname %></h1>
          <div class="mt-2 flex items-center gap-2">
            <%= badge("Primary", :blue) if @domain.primary? %>
            <%= status_indicator(@domain.status) %>
          </div>
          <% if @domain.next_step.present? %>
            <p class="mt-2 text-sm text-gray-600"><%= @domain.next_step %></p>
          <% end %>
        </div>
        <%= link_to t('admin.domains.show.back_to_site'), admin_site_path(@site), class: button_classes(variant: :secondary) %>
      </div>
    </div>

    <% dns_instructions = dns_instructions_for(@domain) %>

    <!-- DNS Instructions -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-lg font-medium text-gray-900">DNS Configuration</h2>
          <%= button_to check_dns_admin_site_domain_path(@site, @domain), method: :post, class: button_classes(variant: :secondary), data: { turbo: true } do %>
            <svg class="mr-2 -ml-1 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            Check DNS
          <% end %>
        </div>

        <% if dns_instructions[:type] == "apex" %>
          <div class="space-y-4">
            <div>
              <h3 class="text-sm font-medium text-gray-900 mb-2">A Record Configuration</h3>
              <div class="bg-gray-50 rounded-lg p-4 font-mono text-sm">
                <div class="space-y-2">
                  <div class="flex items-center space-x-4">
                    <span class="text-gray-600 w-24">Type:</span>
                    <span class="font-semibold">A</span>
                  </div>
                  <div class="flex items-center space-x-4">
                    <span class="text-gray-600 w-24">Name:</span>
                    <span class="font-semibold">@</span>
                  </div>
                  <div class="flex items-center space-x-4">
                    <span class="text-gray-600 w-24">Value:</span>
                    <span class="font-semibold"><%= dns_target %></span>
                  </div>
                  <div class="flex items-center space-x-4">
                    <span class="text-gray-600 w-24">TTL:</span>
                    <span><%= dns_instructions[:ttl] %></span>
                  </div>
                </div>
              </div>
              <p class="mt-2 text-sm text-gray-600">Point your apex domain to the VPS IP address</p>
            </div>

            <div>
              <h3 class="text-sm font-medium text-gray-900 mb-2">ALIAS/ANAME Record (Alternative)</h3>
              <div class="bg-gray-50 rounded-lg p-4 font-mono text-sm">
                <div class="space-y-2">
                  <div class="flex items-center space-x-4">
                    <span class="text-gray-600 w-24">Type:</span>
                    <span class="font-semibold">ALIAS/ANAME</span>
                  </div>
                  <div class="flex items-center space-x-4">
                    <span class="text-gray-600 w-24">Name:</span>
                    <span class="font-semibold">@</span>
                  </div>
                  <div class="flex items-center space-x-4">
                    <span class="text-gray-600 w-24">Value:</span>
                    <span class="font-semibold"><%= dns_target %></span>
                  </div>
                </div>
              </div>
              <p class="mt-2 text-sm text-gray-600">If your DNS provider supports ALIAS/ANAME records (e.g., Cloudflare, DNSimple), use this instead of A record</p>
            </div>
          </div>
        <% else %>
          <div>
            <h3 class="text-sm font-medium text-gray-900 mb-2">CNAME Record Configuration</h3>
            <div class="bg-gray-50 rounded-lg p-4 font-mono text-sm">
              <div class="space-y-2">
                <div class="flex items-center space-x-4">
                  <span class="text-gray-600 w-24">Type:</span>
                  <span class="font-semibold">CNAME</span>
                </div>
                <div class="flex items-center space-x-4">
                  <span class="text-gray-600 w-24">Name:</span>
                  <span class="font-semibold"><%= dns_instructions[:records].first[:name] %></span>
                </div>
                <div class="flex items-center space-x-4">
                  <span class="text-gray-600 w-24">Value:</span>
                  <span class="font-semibold"><%= dns_target %></span>
                </div>
                <div class="flex items-center space-x-4">
                  <span class="text-gray-600 w-24">TTL:</span>
                  <span><%= dns_instructions[:ttl] %></span>
                </div>
              </div>
            </div>
            <p class="mt-2 text-sm text-gray-600">Point your subdomain to the canonical hostname. TTL of 3600 seconds (1 hour) is recommended for faster propagation.</p>
          </div>
        <% end %>

        <div class="mt-6 p-4 bg-blue-50 rounded-lg">
          <h4 class="text-sm font-medium text-blue-900 mb-2">Notes:</h4>
          <ul class="text-sm text-blue-800 space-y-1">
            <% dns_instructions[:notes].each do |note| %>
              <li>• <%= note %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <!-- DNS Check Result -->
    <% if @dns_result %>
      <div id="dns-check-result" class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">DNS Check Results</h2>
          <div class="space-y-2">
            <p class="text-sm text-gray-600">
              <strong>Checked at:</strong> <%= @domain.last_checked_at&.strftime("%Y-%m-%d %H:%M:%S UTC") || t('admin.domains.just_now') %>
            </p>
            <% if @dns_result[:verified] %>
              <div class="rounded-md bg-green-50 p-4">
                <p class="text-sm text-green-800"><strong>✓ DNS verification successful</strong></p>
                <% if @dns_result[:records].present? %>
                  <div class="mt-2">
                    <p class="text-sm font-medium text-green-900">Resolved records:</p>
                    <ul class="list-disc list-inside text-sm text-green-800">
                      <% @dns_result[:records].each do |value| %>
                        <li><%= value %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                <p class="text-sm text-green-700 mt-2">
                  Domain status updated to: <strong><%= @domain.status.humanize %></strong>
                </p>
              </div>
            <% else %>
              <div class="rounded-md bg-red-50 p-4">
                <p class="text-sm text-red-800"><strong>✗ DNS verification failed</strong></p>
                <% if @domain.last_error.present? %>
                  <p class="text-sm text-red-700 mt-1"><strong>Error:</strong> <%= @domain.last_error %></p>
                <% end %>
                <p class="text-sm text-red-700 mt-2">
                  Domain status: <strong><%= @domain.status.humanize %></strong>
                </p>
                <p class="text-sm text-red-700 mt-1">Please verify your DNS settings match the instructions above.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% elsif @domain.last_checked_at %>
      <div id="dns-check-result" class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Last DNS Check</h2>
          <div class="space-y-2">
            <p class="text-sm text-gray-600">
              <strong>Checked at:</strong> <%= @domain.last_checked_at.strftime("%Y-%m-%d %H:%M:%S UTC") %>
            </p>
            <% if @domain.last_error.present? %>
              <div class="rounded-md bg-red-50 p-4">
                <p class="text-sm text-red-800"><strong>Last Error:</strong> <%= @domain.last_error %></p>
              </div>
            <% end %>
            <p class="text-sm text-gray-600">Status: <strong><%= @domain.status.humanize %></strong></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
