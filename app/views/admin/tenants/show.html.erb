<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <%= link_to "← Back to Tenants", admin_tenants_path, class: "text-gray-600 hover:underline text-sm" %>
      <div class="mt-4 flex items-center justify-between">
        <div class="flex items-center">
          <% if @tenant.logo_url.present? %>
            <%= image_tag @tenant.logo_url, class: "h-16 w-16 rounded-lg mr-4" %>
          <% else %>
            <div class="h-16 w-16 rounded-lg bg-gray-200 flex items-center justify-center mr-4">
              <span class="text-gray-500 text-2xl font-bold"><%= @tenant.title.first.upcase %></span>
            </div>
          <% end %>
          <div>
            <h1 class="text-3xl font-bold text-gray-900"><%= @tenant.title %></h1>
            <p class="text-gray-500"><%= @tenant.hostname %></p>
          </div>
        </div>
        <div class="flex space-x-3">
          <%= link_to edit_admin_tenant_path(@tenant), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
            Edit
          <% end %>
          <%= button_to "Visit Site →", impersonate_admin_tenant_path(@tenant), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
        </div>
      </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Sites</dt>
        <dd class="mt-1 text-3xl font-semibold text-blue-600"><%= @sites.count %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Users</dt>
        <dd class="mt-1 text-3xl font-semibold text-purple-600"><%= @users_count %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Listings</dt>
        <dd class="mt-1 text-3xl font-semibold text-green-600"><%= Entry.directory_items.where(site: @sites).count %></dd>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg p-5">
        <dt class="text-sm font-medium text-gray-500 truncate">Content Items</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= Entry.feed_items.where(site: @sites).count %></dd>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Sites -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Sites</h3>
        </div>
        <ul class="divide-y divide-gray-200">
          <% @sites.each do |site| %>
            <li class="px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-gray-900"><%= site.name %></p>
                  <p class="text-xs text-gray-500"><%= site.primary_hostname %></p>
                  <div class="mt-1 flex flex-wrap gap-1">
                    <% site.domains.each do |domain| %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs bg-gray-100 text-gray-600">
                        <%= domain.hostname %>
                        <% if domain.primary? %>
                          <span class="ml-1 text-green-600">★</span>
                        <% end %>
                      </span>
                    <% end %>
                  </div>
                </div>
                <%= link_to "Manage", admin_site_path(site), class: "text-blue-600 hover:underline text-sm" %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>

      <!-- Tenant Details -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Tenant Details</h3>
        </div>
        <div class="px-4 py-5 sm:p-6">
          <dl class="grid grid-cols-1 gap-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Slug</dt>
              <dd class="mt-1 text-sm text-gray-900"><code class="bg-gray-100 px-2 py-1 rounded"><%= @tenant.slug %></code></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Created</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @tenant.created_at.strftime("%Y-%m-%d %H:%M UTC") %></dd>
            </div>
            <% if @tenant.setting("twitter_handle").present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Twitter</dt>
                <dd class="mt-1 text-sm text-gray-900">@<%= @tenant.setting("twitter_handle") %></dd>
              </div>
            <% end %>
            <% if @tenant.description.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Description</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @tenant.description %></dd>
              </div>
            <% end %>
          </dl>
        </div>
      </div>
    </div>

    <!-- Recent Entries -->
    <% if @recent_entries.any? %>
      <div class="mt-8 bg-white shadow rounded-lg">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Entries</h3>
        </div>
        <ul class="divide-y divide-gray-200">
          <% @recent_entries.each do |entry| %>
            <li class="px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-gray-900 truncate" style="max-width: 500px;"><%= entry.title %></p>
                  <p class="text-xs text-gray-500"><%= entry.site&.name %> · <%= time_ago_in_words(entry.created_at) %> ago</p>
                </div>
                <%= link_to "View", admin_entry_path(entry), class: "text-blue-600 hover:underline text-sm" %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
