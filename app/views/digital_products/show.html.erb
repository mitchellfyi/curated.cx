<%# Digital product detail page %>
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-4">
    <%= link_to products_path, class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700" do %>
      <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      <%= t("digital_products.back_to_products") %>
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="p-6 sm:p-8">
      <div class="flex flex-col md:flex-row md:items-start md:justify-between">
        <div class="flex-1">
          <h1 class="text-3xl font-bold text-gray-900"><%= @digital_product.title %></h1>

          <% if @digital_product.description.present? %>
            <div class="mt-4 prose prose-sm max-w-none text-gray-600">
              <%= simple_format(@digital_product.description) %>
            </div>
          <% end %>
        </div>

        <div class="mt-6 md:mt-0 md:ml-8 md:flex-shrink-0">
          <div class="bg-gray-50 rounded-lg p-6 text-center md:w-64">
            <div class="text-3xl font-bold <%= @digital_product.free? ? 'text-green-600' : 'text-gray-900' %>">
              <%= @digital_product.formatted_price %>
            </div>

            <%= form_with url: product_checkout_path(@digital_product.slug), method: :post, local: true, class: "mt-4" do |f| %>
              <%= f.email_field :email,
                  placeholder: t("digital_products.email_placeholder"),
                  required: true,
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" %>

              <%= f.submit @digital_product.free? ? t("digital_products.get_free") : t("digital_products.buy_now"),
                  class: "mt-3 w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white #{@digital_product.free? ? 'bg-green-600 hover:bg-green-700 focus:ring-green-500' : 'bg-blue-600 hover:bg-blue-700 focus:ring-blue-500'} focus:outline-none focus:ring-2 focus:ring-offset-2 cursor-pointer" %>
            <% end %>

            <p class="mt-3 text-xs text-gray-500">
              <%= t("digital_products.instant_access") %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
