<h1><%= t("referral_mailer.reward_unlocked.heading") %></h1>

<p><%= t("referral_mailer.reward_unlocked.congrats", reward: @reward_name) %></p>

<div style="background: #f5f5f5; padding: 20px; border-radius: 8px; margin: 20px 0;">
  <h2 style="margin-top: 0;"><%= @tier.name %></h2>
  <% if @tier.description.present? %>
    <p><%= @tier.description %></p>
  <% end %>

  <% case @tier.reward_type %>
  <% when "digital_download" %>
    <% if @tier.download_url.present? %>
      <p><%= t("referral_mailer.reward_unlocked.download_link") %></p>
      <p><%= link_to @tier.download_url, @tier.download_url %></p>
    <% end %>
  <% when "featured_mention" %>
    <% if @tier.mention_details.present? %>
      <p><%= @tier.mention_details %></p>
    <% end %>
  <% when "custom" %>
    <% if @tier.instructions.present? %>
      <p><%= @tier.instructions %></p>
    <% end %>
  <% end %>
</div>

<p><%= t("referral_mailer.reward_unlocked.total_referrals", count: @total_referrals) %></p>

<p><%= t("referral_mailer.reward_unlocked.keep_sharing") %></p>

<p>
  <strong><%= t("referral_mailer.reward_unlocked.your_link") %></strong><br>
  <%= link_to @referral_link, @referral_link %>
</p>

<p><%= t("referral_mailer.reward_unlocked.thanks", site: @site.name) %></p>
