<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
<% @urls.each do |url| %>
  <url>
    <loc><%= url[:loc] %></loc>
    <% if url[:lastmod] %>
    <lastmod><%= url[:lastmod].iso8601 %></lastmod>
    <% end %>
    <% if url[:changefreq] %>
    <changefreq><%= url[:changefreq] %></changefreq>
    <% end %>
    <% if url[:priority] %>
    <priority><%= url[:priority] %></priority>
    <% end %>
  </url>
<% end %>
</urlset>
