# Brakeman configuration for security scanning
{
  "application_path": ".",
  "run_all_checks": true,
  "check_arguments": true,
  "check_cookies": true,
  "check_execute": true,
  "check_file_access": true,
  "check_for_high_confidence": false,
  "check_for_medium_confidence": false,
  "check_headers": true,
  "check_link_to": true,
  "check_link_to_href": true,
  "check_mail_to": true,
  "check_model_attributes": true,
  "check_redirect": true,
  "check_render": true,
  "check_render_inline": true,
  "check_response_splitting": true,
  "check_scrf_tokens": true,
  "check_session_settings": true,
  "check_sql": true,
  "check_strip_tags": true,
  "check_symbol_dos": true,
  "check_unsafe_reflection": true,
  "check_validation_regex": true,
  "check_xpath": true,
  "exit_on_warn": false,
  "exit_on_error": true,
  "format": "json",
  "html_style": "stylish",
  "ignore_arel": true,
  "ignore_file": ".brakeman.ignore",
  "index_libs": true,
  "min_confidence": 2,
  "only_files": [],
  "output_files": [],
  "parallel_checks": true,
  "print_report": true,
  "quiet": false,
  "rails3": false,
  "rails4": false,
  "rails5": false,
  "rails6": false,
  "report_direct": true,
  "safe_methods": [],
  "skip_checks": [],
  "skip_files": [
    "db/migrate/",
    "vendor/"
  ],
  "skip_libs": false,
  "summary_only": false
}